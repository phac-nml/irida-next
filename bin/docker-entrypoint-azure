#!/bin/bash -e

# Setup the ssh service entrypoint
sudo service ssh start

# Propagate any necessary environment variables for Azure to the rails user .profile
eval $(printenv | sed -n "s/^\([^=]\+\)=\(.*\)$/export \1=\2/p" | sed 's/"/\\\"/g' | sed '/=/s//="/' | sed 's/$/"/' >> $HOME/.profile)

# Run the original entrypoint script
/rails/bin/docker-entrypoint "${@}"
