<% selected_types = Array(@search.meta[:types]) %>
<% selected_match_sources = Array(@search.meta[:match_sources]) %>
<% selected_sort = @search.meta[:sort].presence || 'best_match' %>

<% type_labels = {
  'projects' => 'Project',
  'groups' => 'Group',
  'workflow_executions' => 'Workflow',
  'samples' => 'Sample',
  'data_exports' => 'Data Export'
} %>

<% type_pill_classes = {
  'projects' => "bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-200",
  'groups' => "bg-cyan-100 text-cyan-800 dark:bg-cyan-900/40 dark:text-cyan-200",
  'workflow_executions' => "bg-amber-100 text-amber-800 dark:bg-amber-900/40 dark:text-amber-200",
  'samples' => "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/40 dark:text-emerald-200",
  'data_exports' => "bg-rose-100 text-rose-800 dark:bg-rose-900/40 dark:text-rose-200"
} %>

<div data-global-search-version="g1" class="mx-auto max-w-5xl space-y-6">
  <header class="space-y-2">
    <h1 class="text-2xl font-semibold text-slate-900 dark:text-slate-100">Global Search</h1>

    <p class="text-sm text-slate-600 dark:text-slate-300">
      Search projects, groups, workflow executions, samples, and data exports.
    </p>
  </header>

  <%= form_with url: global_search_path, method: :get, local: true, class: "space-y-4 rounded-xl border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-900" do %>
    <div class="flex flex-wrap items-center gap-2">
      <%= text_field_tag :q, @search.query, id: "global-search-query", autofocus: true, placeholder: "Search by name, ID, or metadata...", class: "h-10 min-w-[18rem] flex-1 rounded-md border border-slate-300 px-3 text-sm focus:border-primary-500 focus:outline-none focus:ring-2 focus:ring-primary-200 dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
      <%= submit_tag "Search", class: "button button-primary" %>
    </div>

    <details class="rounded-lg border border-slate-200 bg-slate-50 p-3 dark:border-slate-700 dark:bg-slate-800/50">
      <summary class="cursor-pointer text-sm font-medium text-slate-700 select-none dark:text-slate-200">
        Filters
      </summary>

      <div class="mt-4 grid gap-4 md:grid-cols-2">
        <fieldset class="space-y-2">
          <legend class="text-xs font-semibold tracking-wide text-slate-500 uppercase">Types</legend>

          <% type_labels.each do |type, label| %>
            <label class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-200">
              <%= check_box_tag "types[]", type, selected_types.include?(type), id: "global-search-page-type-#{type}", class: "h-4 w-4 rounded border-slate-300 text-primary-600 focus:ring-primary-500" %>
              <span><%= label %></span>
            </label>
          <% end %>
        </fieldset>

        <fieldset class="space-y-2">
          <legend class="text-xs font-semibold tracking-wide text-slate-500 uppercase">Match Sources</legend>

          <% { "identifier" => "Identifier", "name" => "Name", "metadata" => "Metadata (samples)" }.each do |source, label| %>
            <label class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-200">
              <%= check_box_tag "match_sources[]", source, selected_match_sources.include?(source), id: "global-search-page-source-#{source}", class: "h-4 w-4 rounded border-slate-300 text-primary-600 focus:ring-primary-500" %>
              <span><%= label %></span>
            </label>
          <% end %>
        </fieldset>

        <fieldset class="space-y-2">
          <legend class="text-xs font-semibold tracking-wide text-slate-500 uppercase">Sort</legend>

          <% { "best_match" => "Best Match", "most_recent" => "Most Recent" }.each do |sort_value, label| %>
            <label class="flex items-center gap-2 text-sm text-slate-700 dark:text-slate-200">
              <%= radio_button_tag :sort, sort_value, selected_sort == sort_value, class: "h-4 w-4 border-slate-300 text-primary-600 focus:ring-primary-500" %>
              <span><%= label %></span>
            </label>
          <% end %>
        </fieldset>

        <fieldset class="grid gap-2 sm:grid-cols-2">
          <legend class="col-span-full text-xs font-semibold tracking-wide text-slate-500 uppercase">Date Range</legend>

          <div>
            <%= label_tag :created_from, "Created From", class: "mb-1 block text-xs text-slate-600 dark:text-slate-300" %>
            <%= date_field_tag :created_from, params[:created_from], class: "h-9 w-full rounded-md border border-slate-300 px-2 text-sm dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
          </div>

          <div>
            <%= label_tag :created_to, "Created To", class: "mb-1 block text-xs text-slate-600 dark:text-slate-300" %>
            <%= date_field_tag :created_to, params[:created_to], class: "h-9 w-full rounded-md border border-slate-300 px-2 text-sm dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
          </div>
        </fieldset>

        <div>
          <%= label_tag :workflow_state, "Workflow State", class: "mb-1 block text-xs font-semibold uppercase tracking-wide text-slate-500" %>
          <%= select_tag :workflow_state, options_for_select(@workflow_states.map { |state| [state.humanize, state] }, params[:workflow_state]), include_blank: "Any", class: "h-9 w-full rounded-md border border-slate-300 px-2 text-sm dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
        </div>

        <div class="grid gap-2 sm:grid-cols-2">
          <div>
            <%= label_tag :per_type_limit, "Per-Type Limit", class: "mb-1 block text-xs font-semibold uppercase tracking-wide text-slate-500" %>
            <%= number_field_tag :per_type_limit, @search.meta[:per_type_limit], min: 1, max: 50, class: "h-9 w-full rounded-md border border-slate-300 px-2 text-sm dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
          </div>

          <div>
            <%= label_tag :limit, "Total Limit", class: "mb-1 block text-xs font-semibold uppercase tracking-wide text-slate-500" %>
            <%= number_field_tag :limit, @search.meta[:limit], min: 1, max: 200, class: "h-9 w-full rounded-md border border-slate-300 px-2 text-sm dark:border-slate-600 dark:bg-slate-800 dark:text-slate-100" %>
          </div>
        </div>
      </div>
    </details>
  <% end %>

  <section class="space-y-3" aria-label="Global search results">
    <p class="text-sm text-slate-600 dark:text-slate-300"><%= pluralize(@search.results.size, "result") %></p>

    <% if @search.results.empty? %>
      <div
        class="
          rounded-lg border border-dashed border-slate-300 p-8 text-center text-slate-500 dark:border-slate-600
          dark:text-slate-300
        "
      >
        No results found for this query and filter set.
      </div>
    <% else %>
      <ul class="space-y-2">
        <% @search.results.each do |result| %>
          <li class="rounded-lg border border-slate-200 bg-white p-4 shadow-sm dark:border-slate-700 dark:bg-slate-900">
            <div class="flex items-start justify-between gap-3">
              <div class="min-w-0 space-y-1">
                <%= link_to result.title, result.url, class: "block truncate text-base font-medium text-primary-600 hover:underline" %>

                <p class="truncate text-sm text-slate-600 dark:text-slate-300"><%= result.subtitle %></p>
              </div>

              <span
                class="
                  <%= class_names(
                  'shrink-0 rounded-full px-2.5 py-1 text-xs font-medium',
                  type_pill_classes[result.type] || 'bg-slate-100 text-slate-700 dark:bg-slate-700 dark:text-slate-200'
                  ) %>
                "
              >
                <%= type_labels[result.type] || result.type.humanize %>
              </span>
            </div>

            <div class="mt-3 flex flex-wrap items-center gap-2">
              <% if result.type == "samples" && result.context_label.present? && result.context_url.present? %>
                <%= link_to result.context_label, result.context_url, class: "rounded-full border border-slate-300 bg-slate-100 px-2 py-0.5 text-xs font-medium text-slate-700 hover:bg-slate-200 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-100 dark:hover:bg-slate-600" %>
              <% end %>

              <% if result.updated_at.present? %>
                <span class="text-xs text-slate-500 dark:text-slate-400">
                  Updated <%= result.updated_at.to_fs(:long) %>
                </span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% end %>
  </section>
</div>
