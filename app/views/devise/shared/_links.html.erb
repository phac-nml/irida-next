<div class="grid gap-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to t(".sign_in"),
                new_session_path(resource_name),
                class:
                  "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <span>
      <%= t(".create_an_account") %>
      <%= link_to t(".create_an_account_link"),
                  new_registration_path(resource_name),
                  class:
                    "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline ml-1" %>
    </span>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t(".forgot_password"),
                new_password_path(resource_name),
                class:
                  "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?",
                new_confirmation_path(resource_name),
                class:
                  "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?",
                new_unlock_path(resource_name),
                class:
                  "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="inline-flex items-center justify-center w-full">
      <hr class="w-64 h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
      <span class="absolute px-3 font-medium text-gray-900 -translate-x-1/2 bg-white left-1/2 dark:text-white dark:bg-gray-900">Sign on with</span>
    </div>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <a href="<%= omniauth_authorize_path(resource_name, provider) %>" class="btn btn-default w-full">
        <div class="text-center inline-flex items-center">
          <%= viral_icon(name: provider, classes: "w-4 h-4 mr-2 -ml-1") %>
          <%= OmniAuth::Utils.camelize(provider) %>
        </div>
      </a>
    <% end %>
  <% end %>
</div>
