<div class="grid gap-2">

  <%- if resource_class.omniauth_providers.empty? %>

    <%- if controller_name != 'sessions' %>
      <%= link_to t(".sign_in"),
      new_session_path(resource_name),
      class:
        "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <span>
        <%= t(".create_an_account") %>
        <%= link_to t(".create_an_account_link"),
        new_registration_path(resource_name),
        class:
          "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline ml-1" %>
      </span>
    <% end %>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to t(".forgot_password"),
      new_password_path(resource_name),
      class:
        "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?",
      new_confirmation_path(resource_name),
      class:
        "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?",
      new_unlock_path(resource_name),
      class:
        "font-medium text-primary-700 underline dark:text-primary-500 hover:no-underline" %>
    <% end %>

  <% else %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to omniauth_authorize_path(resource_name, provider),
                    data: {
                      turbo: false
                    },
                    class: "button button--state-default button--size-default w-full" do %>
        <div class="inline-flex items-center text-center">
          <%= viral_icon(name: provider, classes: "w-4 h-4 mr-2 -ml-1") %>
          <%= t(".omniauth", provider: OmniAuth::Utils.camelize(provider)) %>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>
