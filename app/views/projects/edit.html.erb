<div class="md:mx-auto">
  <div class="grid gap-4">
    <%= render Viral::PageHeaderComponent.new(title: t(".general.title")) %>

    <%= viral_card do |card| %>
      <% card.with_header(title: t(".general.heading")) %>
      <% card.with_section do %>
        <%= turbo_frame_tag("project_name_and_description_form") do %>
          <%= render partial: "edit_name_and_description_form", locals: { project: @project } %>
        <% end %>
      <% end %>
    <% end %>

    <%= render Viral::PageHeaderComponent.new(title: t(".advanced.title")) %>

    <%= turbo_frame_tag("project_path_form") do %>
      <%= render "change_path", project: @project %>
    <% end %>

    <% if @allowed_to[:transfer] %>
      <%= render "transfer", project: @project %>
    <% end %>

    <% if @allowed_to[:destroy] %>
      <%= render "destroy", project: @project %>
    <% end %>
  </div>
</div>
