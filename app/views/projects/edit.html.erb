<div class="p-4">
  <div class="grid gap-4 xl:grid-cols-2 2xl:grid-cols-3">
    <%= viral_card do |card| %>
      <% card.header(title: t(".general.title")) %>
      <% card.section do %>
        <%= form_with(model: @project, url: namespace_project_path, method: :patch) do |form| %>
          <div class="grid gap-4">
            <%= form.fields_for :namespace, include_id: false do |builder| %>
              <%= render partial: "projects/project_namespace_fields",
              locals: {
                builder: builder
              } %>
            <% end %>
            <div>
              <%= form.submit t("projects.edit.general.submit"), class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>

  </div>
