<%= form_with(url: namespace_project_transfer_path, method: :post, class: "grid gap-4", id: "edit_advanced_transfer") do |form| %>
  <div class="form-field">
    <%= form.label :new_namespace_id, t(:'projects.edit.advanced.transfer.new_namespace_id') %>

    <%= form.collection_select(
          :new_namespace_id,
          @authorized_namespaces.to_a - [@project.namespace.parent],
          :id,
          :full_name,
          { :prompt => t(:'projects.edit.advanced.transfer.new_namespace_id') }
        ) %>
  </div>

  <div>
    <%= form.submit t("projects.edit.advanced.transfer.submit"),
                    class: "btn btn-default" %>
  </div>
<% end %>
