<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<%= turbo_stream_from @workflow_execution %>

<%= turbo_frame_tag "export_dialog" %>
<%= turbo_frame_tag "edit_dialog" %>
<%= turbo_frame_tag "workflow_execution_dialog" %>

<%= render Viral::PageHeaderComponent.new(title: turbo_frame_tag('we_name_header') do @workflow_execution.name.blank? ? @workflow_execution.metadata["workflow_name"] :
   @workflow_execution.name end, id: @workflow_execution.id, id_color: find_pill_color_for_state(@workflow_execution.state)) do |component| %>
  <% component.with_icon(name: "beaker", classes: "h-14 w-14 text-primary-700") %>
  <% component.with_buttons do %>
    <div class="flex flex-row">
      <% if @allowed_to[:export_data] %>
        <% if @workflow_execution.completed? %>
          <%= button_to t("projects.workflow_executions.show.create_export_button"),
          new_data_export_path,
          params: {
            export_type: "analysis",
            analysis_type: "project",
            namespace_id: @namespace.id,
            workflow_execution_id: @workflow_execution.id,
            single_workflow: true,
          },
          method: :get,
          data: {
            turbo_stream: true,
          },
          class: "button button--size-default button--state-default mr-2" %>
        <% else %>
          <%= button_to t("projects.workflow_executions.show.create_export_button"),
          new_data_export_path,
          params: {
            export_type: "analysis",
            analysis_type: "project",
            namespace_id: @namespace.id,
            workflow_execution_id: @workflow_execution.id,
            single_workflow: true,
          },
          method: :get,
          data: {
            turbo_stream: true,
          },
          class:
            "button button--size-default button--state-default pointer-events-none cursor-not-allowed bg-slate-100 text-slate-600 mr-2 dark:bg-slate-600 dark:text-slate-300",
          disabled: true %>
        <% end %>
      <% end %>
      <% if @workflow_execution.cancellable? && @allowed_to[:cancel] %>
        <%= link_to(
          t("projects.workflow_executions.show.cancel_button"),
          cancel_namespace_project_workflow_execution_path(
            @namespace.parent,
            @namespace.project,
            @workflow_execution.id,
          ),
          data: {
            turbo_method: :put,
            turbo_confirm:
              t("projects.workflow_executions.show.cancel_button_confirmation"),
          },
          class: "button button--state-default button--size-default mr-1",
        ) %>
      <% end %>
      <% if @allowed_to[:update] %>
        <%= link_to(
          t("projects.workflow_executions.show.edit_button"),
          edit_namespace_project_workflow_execution_path(
            @namespace.parent,
            @namespace.project,
            @workflow_execution,
          ),
          data: {
            turbo_stream: true,
          },
          class: "button button--state-default button--size-default mr-1",
        ) %>
      <% end %>
      <% if @workflow_execution.deletable? && @allowed_to[:destroy] %>
        <%= link_to(
          t("projects.workflow_executions.show.remove_button"),
          destroy_confirmation_namespace_project_workflow_execution_path(
            @namespace.parent,
            @namespace.project,
            @workflow_execution,
          ),
          data: {
            turbo_stream: true,
          },
          class: "button button--state-default button--size-default mr-1",
        ) %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= viral_tabs(id: "workflow-execution-tabs", label: "Tabs") do |tabs| %>
  <% tabs.with_tab(url: namespace_project_workflow_execution_path(@namespace.parent, @namespace.project, @workflow_execution, tab: "summary"), selected: @tab == "summary" || @tab == nil) do %>
    <%= t(:"workflow_executions.show.tabs.summary") %>
  <% end %>
  <% tabs.with_tab(url: namespace_project_workflow_execution_path(@namespace.parent, @namespace.project, @workflow_execution, tab: "params"), selected: @tab == "params") do %>
    <%= t(:"workflow_executions.show.tabs.params") %>
  <% end %>
  <%= tabs.with_tab(url: namespace_project_workflow_execution_path(@namespace.parent, @namespace.project, @workflow_execution, tab: "samplesheet"), selected: @tab == "samplesheet") do %>
    <%= t(:"workflow_executions.show.tabs.samplesheet") %>
  <% end %>
  <%= tabs.with_tab(url: namespace_project_workflow_execution_path(@namespace.parent, @namespace.project, @workflow_execution, tab: "files"), selected: @tab == "files") do %>
    <%= t(:"workflow_executions.show.tabs.files") %>
  <% end %>

  <% tabs.with_tab_content do %>
    <section class="mt-4">
      <% if @tab == 'summary' || @tab == nil %>
        <%= render partial: "summary" %>
      <% elsif @tab == "params" %>
        <%= render partial: "params" %>
      <% elsif @tab == 'samplesheet' %>
        <%= render partial: "samplesheet" %>
      <% elsif @tab == 'files' %>
        <%= render partial: "files" %>
      <% end %>
    </section>
  <% end %>
<% end %>
