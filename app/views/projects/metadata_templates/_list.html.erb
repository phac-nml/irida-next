<%= form_with url: search_namespace_project_samples_url, method: :post,
data: {
  turbo_stream: true,
} do |f| %>
  <input type="hidden" name="format" value="turbo_stream"/>
  <input type="hidden" name="limit" value="<%= @pagy&.limit %>"/>
  <input type="hidden" name="page" value="<%= @pagy&.page %>"/>
  <ul
    id="metadata_templates"
    class="py-2 text-sm text-slate-700 dark:text-slate-200"
    aria-labelledby="dropdownDefault"
  >
    <li class="w-full border-b border-slate-200 dark:border-slate-600">
      <div class="flex items-center ps-3">
        <input
          id="rl-all"
          type="radio"
          value="all"
          name="metadata_template"
          onchange="this.form.requestSubmit()"
          <%= @name == t("projects.metadata_templates.list.all") ? "checked" : "" %>
          class="
            w-4 h-4 text-blue-600 bg-slate-100 border-slate-300 focus:ring-blue-500
            dark:focus:ring-blue-600 dark:ring-offset-slate-700
            dark:focus:ring-offset-slate-700 focus:ring-2 dark:bg-slate-600
            dark:border-slate-500
          "
        >
        <label
          for="rl-all"
          class="
            w-full py-3 text-sm font-medium text-slate-900 ms-2 dark:text-slate-300
          "
        ><%= t("projects.metadata_templates.list.all") %></label>
      </div>
    </li>
    <li class="w-full border-b border-slate-200 dark:border-slate-600">
      <div class="flex items-center ps-3">
        <input
          id="rl-none"
          type="radio"
          value="none"
          onchange="this.form.requestSubmit()"
          name="metadata_template"
          <%= @name == t("projects.metadata_templates.list.none") ? "checked" : "" %>
          class="
            w-4 h-4 text-blue-600 bg-slate-100 border-slate-300 focus:ring-blue-500
            dark:focus:ring-blue-600 dark:ring-offset-slate-700
            dark:focus:ring-offset-slate-700 focus:ring-2 dark:bg-slate-600
            dark:border-slate-500
          "
        >
        <label
          for="rl-none"
          class="
            w-full py-3 text-sm font-medium text-slate-900 ms-2 dark:text-slate-300
          "
        ><%= t("projects.metadata_templates.list.none") %></label>
      </div>
    </li>
    <% @metadata_templates.each do |metadata_template| %>
      <li><%= metadata_template.name %></li>
    <% end %>
  </ul>
  <%= f.submit class: "hidden" %>
<% end %>
