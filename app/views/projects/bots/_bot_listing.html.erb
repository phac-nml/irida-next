<div class="table-container relative overflow-x-auto" data-turbo-temporary>
  <table
    id="bots-table"
    class="
      w-full
      text-sm
      text-left
      rtl:text-right
      text-slate-500
      dark:text-slate-400
      dark:divide-slate-600
      whitespace-nowrap
    "
  >
    <thead
      class="
        text-xs
        text-slate-700
        uppercase
        bg-slate-50
        dark:bg-slate-700
        dark:text-slate-400
      "
    >
      <tr>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.username") %></th>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.active_tokens") %></th>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.created") %></th>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.access_level") %></th>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.expiration") %></th>
        <th scope="col" class="px-6 py-3"><%= t("projects.bots.index.bot_listing.actions") %></th>
      </tr>
    </thead>
    <tbody
      class="
        bg-white
        divide-y
        divide-slate-200
        dark:bg-slate-800
        dark:divide-slate-700
      "
    >
      <%= render partial: "bot", collection: @bot_accounts, as: :bot_account %>
    </tbody>
  </table>
  <div class="empty_state_message">
    <%= viral_empty(
      title: t("projects.bots.index.bot_listing.empty_state.title"),
      description: t("projects.bots.index.bot_listing.empty_state.description"),
      icon_name: :bug_ant
    ) %>
  </div>
</div>
