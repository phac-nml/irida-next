<div class="bg-white dark:bg-slate-800">
  <div class="table-container flex flex-col">
    <div class="mb-4">
      <%= turbo_frame_tag "access-token-section" %>
    </div>

    <table
      id="bots-table"
      class="
        w-full
        text-sm
        text-left
        rtl:text-right
        text-slate-500
        dark:text-slate-400
      "  >
      <thead
        class="
          text-xs
          text-slate-700
          uppercase
          bg-slate-50
          dark:bg-slate-700
          dark:text-slate-400
        "
      >
        <tr>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.name') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.token_name') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.api_scope') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.created') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.access_level') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.expiration') %>
          </th>
          <th scope="col" class="px-6 py-3 whitespace-nowrap text-left">
            <%= t('projects.bots.index.bot_listing.actions') %>
          </th>
        </tr>
      </thead>
      <tbody
        class="
          bg-white
          divide-y
          divide-slate-200
          dark:bg-slate-800
          dark:divide-slate-700
        "
      >
        <% @bot_accounts.each do |bot_account| %>
          <%= render partial: "bot",
            locals: {
              bot_account: bot_account
            } %>
          <% end %>
      </tbody>
    </table>

    <div class="empty_state_message">
      <%= viral_empty(
        title: t('projects.bots.index.bot_listing.empty_state.title'),
        description: t('projects.bots.index.bot_listing.empty_state.description'),
        icon_name: :bug_ant
      ) %>
    </div>
  </div>
</div>
