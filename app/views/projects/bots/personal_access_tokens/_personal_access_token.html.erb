<tr
  id="<%= dom_id(personal_access_token) %>"
  class="bg-white border-b dark:bg-slate-800 dark:border-slate-700"
>
  <td class="px-6 py-4"><%= personal_access_token.name %></td>
  <td class="px-6 py-4"><%= personal_access_token.scopes.join(", ") %></td>
  <td class="px-6 py-4"><%= personal_access_token.created_at.strftime(I18n.t("time.formats.full_date")) %></td>
  <td class="px-6 py-4">
    <%= if personal_access_token.last_used_at
      personal_access_token.last_used_at&.strftime(I18n.t("time.formats.full_date"))
    else
      t(
        "projects.bots.index.personal_access_tokens_listing.personal_access_token.never"
      )
    end %></td>
  <td class="px-6 py-4">
    <%= if personal_access_token.expires_at
      personal_access_token.expires_at&.strftime(I18n.t("time.formats.full_date"))
    else
      t(
        "projects.bots.index.personal_access_tokens_listing.personal_access_token.never"
      )
    end %>
  </td>
</tr>
