    <%= viral_avatar(
      name: @project.name,
      colour_string: "#{@project.name}-#{@project.id}",
      size: :large,
    ) %>
  <% end %>
<% end %>

<%= render ProjectDashboardComponent.new(
  activities: @activities,
  samples: @samples,
  project: @project,
) %>
