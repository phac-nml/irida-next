<div class="mb-6 text-lg font-normal text-slate-500 dark:text-slate-400">
  <% if log_data[:version] == 1 %>
    <p class="dark:text-slate-400"><%= t(".project_created", user: log_data[:user]) %></p>
  <% elsif log_data[:changes_from_prev_version].key?('deleted_at') %>
    <% if log_data[:changes_from_prev_version]['deleted_at'].blank? %>
      <p class="dark:text-slate-400"><%= t(".project_restored", user: log_data[:user]) %></p>
    <% elsif log_data[:changes_from_prev_version]['deleted_at'].present? %>
      <p class="dark:text-slate-400"><%= t(".project_deleted", user: log_data[:user]) %></p>
    <% end %>
  <% elsif log_data[:changes_from_prev_version]['parent_id'].present? %>
    <p class="dark:text-slate-400"><%= t(".project_transferred", user: log_data[:user]) %></p>
  <% else %>
    <p class="dark:text-slate-400"><%= t(".project_modified", user: log_data[:user]) %></p>
  <% end %>
</div>
