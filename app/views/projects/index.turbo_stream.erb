<%= turbo_stream.update("projects_list") do %>
  <table class="min-w-full table-fixed dark:divide-gray-600">
    <tbody
      class="
        bg-white
        divide-y
        divide-gray-200
        dark:bg-gray-800
        dark:divide-gray-700
      "
    >
    <%= render partial: "projects/project", collection: @projects %>
    </tbody>
  </table>
<% end %>

<%= turbo_stream.update "projects_pagination" do %>
  <%= render PaginationComponent.new(
    info: pagy_info(@pagy),
    prev_url: (@pagy.prev ? projects_url(page: @pagy.prev) : nil),
    next_url: (@pagy.next ? projects_url(page: @pagy.next) : nil)
  ) %>
<% end %>
