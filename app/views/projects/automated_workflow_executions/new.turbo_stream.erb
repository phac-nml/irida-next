<% if @workflow.nil? || @workflow.unknown? || !@workflow.automatable? || !@workflow.executable? %>
  <%= turbo_stream.update "automated_workflow_execution_modal",
                      partial: "pipeline_selection_modal",
                      locals: {
                        open: true,
                        available_automated_workflows:
                          @available_automated_workflows,
                      } %>
<% else %>
  <%= turbo_stream.update "automated_workflow_execution_modal",
                      partial: "new_automated_workflow_execution_modal",
                      locals: {
                        open: true,
                        workflow: @workflow,
                      } %>
<% end %>
