<% if @namespace.errors.empty? %>
  <%= turbo_stream.replace "import_metadata_dialog_content",
                       partial: "shared/samples/metadata/file_imports/success" %>
<% elsif @namespace.errors.include?(:sample) %>
  <%= turbo_stream.replace "import_metadata_dialog_content",
                       partial: "shared/samples/metadata/file_imports/errors",
                       locals: {
                         type: type,
                         errors: errors,
                       } %>
<% else %>
  <%= turbo_stream.update "import_metadata_dialog_alert",
                      viral_alert(type:, message:, classes: "mb-4") %>
<% end %>
