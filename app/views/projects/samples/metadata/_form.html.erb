<%= form_with(model: @sample, url: namespace_project_sample_metadata_field_path(sample_id: @sample.id), method: :post) do |form| %>

  <div id='test' class="grid gap-2" data-controller="projects--samples--metadata--create">
    <div data-projects--samples--metadata--create-target="metadataToAdd"></div>
      <div data-projects--samples--metadata--create-target="inputsContainer">
        <div class='inputField' data-field-id="0">
          <div id="field-label" class="text-slate-700 dark:text-slate-400 text-sm mb-2">
            <%= t(".field")%> 1:
          </div>

          <div class="flex space-x-2 mb-2">
            <div class="relative z-0 w-full group">
              <input type="text" name="key-0" class="keyInput block py-2.5 px-0 w-full text-sm text-slate-900 bg-transparent border-0 border-b-2 border-slate-300 appearance-none dark:text-white dark:border-slate-600 dark:focus:border-primary-500 focus:outline-none focus:ring-0 focus:border-primary-500 peer" placeholder=" " required />
              <label for="key-0" id="key-label" class="peer-focus:font-medium absolute text-sm text-slate-500 dark:text-slate-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-primary-500 peer-focus:dark:text-primary-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"><%= t(".key") %></label>
            </div>
            <div class="relative z-0 w-full group">
              <input type="text" name="value-0" class="valueInput block py-2.5 px-0 w-full text-sm text-slate-900 bg-transparent border-0 border-b-2 border-slate-300 appearance-none dark:text-white dark:border-slate-600 dark:focus:border-primary-500 focus:outline-none focus:ring-0 focus:border-primary-500 peer" placeholder=" " required />
              <label for="value-0" id="value-label" class="peer-focus:font-medium absolute text-sm text-slate-500 dark:text-slate-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-primary-500 peer-focus:dark:text-primary-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"><%= t(".value") %></label>
            </div>
            <div class="w-[4.5rem]"></div>
          </div>
        </div>

      </div>
      <div class="text-center">
            <%= form.button t(".create_field_button"),
                type: 'button',
                class: 'button button--size-default button--state-default',
                "data-action": 'projects--samples--metadata--create#addNewField'
            %>
        </div>
    <div>
      <%= form.submit t(".submit_button"),
                  class: "button button--state-primary button--size-default",
                  'data-action': 'projects--samples--metadata--create#buildMetadata'
                  %>
    </div>
  </div>
<% end %>
