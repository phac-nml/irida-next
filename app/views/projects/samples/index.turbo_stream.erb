<%= turbo_stream.update "project_samples_list",
                    partial: "table",
                    locals: {
                      project: @project,
                      samples: @samples
                    } %>

<%= turbo_stream.update "project_samples_pagination",
                    partial: "pagination",
                    locals: {
                      project: @project,
                      pagy: @pagy
                    } %>

<%= turbo_stream.update "project_samples_sort_links" do %>
  <%= render Ransack::SortLinksComponent.new(@q, "samples") %>
<% end %>

<%= turbo_stream.update "project_samples_hidden_search_value" do %>
  <%= render Ransack::HiddenFieldComponent.new(@q) %>
<% end %>
