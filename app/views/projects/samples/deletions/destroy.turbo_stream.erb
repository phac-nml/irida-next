<%= turbo_stream.append "flashes" do %>
  <%= viral_flash(type: type, data: message) %>
<% end %>

<% if @sample.deleted? %>
  <%= turbo_stream.update(
    "samples_dialog",
    partial: "new_deletion_dialog",
    locals: {
      open: false,
    },
  ) %>

  <%= turbo_stream.update "project_samples_table",
                      partial: "projects/samples/table",
                      locals: {
                        project: @project,
                        pagy: @pagy,
                        samples: @samples,
                      } %>
<% end %>
