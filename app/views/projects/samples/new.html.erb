<%= render PageHeaderComponent.new(title: t("projects.samples.new.title"), subtitle: t("projects.samples.new.subtitle")) do |component| %>
  <%= component.with_icon do %>
    <%= render "icons/beaker", class_names: "h-14 w-14 text-primary-700" %>
  <% end %>
<% end %>
<div class="p-4">
  <div class="grid gap-4 xl:grid-cols-2 2xl:grid-cols-3">
    <div
      class="p-4 bg-white border border-gray-200 rounded-lg shadow-sm  2xl:col-span-2 dark:border-gray-700 sm:p-6 dark:bg-gray-800"
    >
      <%= form_with(model: @sample, url: namespace_project_samples_path, method: :post) do |form| %>
        <div class="grid gap-4">
          <%= render partial: "form_fields", locals: { form: form, sample: @sample } %>

          <div>
            <%= form.submit t("projects.samples.new.submit_button"),
                        class: "btn btn-primary mr-1" %>
            <%= link_to t("projects.samples.new.cancel_button"),
            namespace_project_samples_path,
            class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
