<% attachments&.each do |attachment| %>
  <% if attachment.persisted? %>
    <%= turbo_stream.append "flashes" do %>
      <%= viral_flash(
        type: :success,
        data: t(".success", filename: attachment.file.filename),
      ) %>
    <% end %>

    <%= turbo_stream.replace "sample-attachments", method: :morph do %>
      <%= render partial: "table",
      locals: {
        attachments: @sample.attachments,
        sample: @sample,
      } %>
    <% end %>
  <% else %>
    <%= turbo_stream.append "flashes" do %>
      <%= viral_flash(
        type: :error,
        data:
          t(
            ".failure",
            filename: attachment.file.filename,
            errors: attachment.errors.full_messages.join("."),
          ),
      ) %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.update "sample_modal",
                    partial: "new_attachment_modal",
                    locals: {
                      open: false,
                      attachment: attachment,
                    } %>
