<% attachments&.each do |attachment| %>
  <% if attachment.persisted? %>
    <%= turbo_stream.append "flashes" do %>
      <%= viral_flash(
        type: :success,
        data: t(".success", filename: attachment.file.filename),
      ) %>
    <% end %>

    <turbo-stream action="replace" method="morph" target="sample-attachments">
      <template>
        <%= render partial: "table", locals: { attachments: attachments, sample: @sample } %>
      </template>
    </turbo-stream>
  <% else %>
    <%= turbo_stream.append "flashes" do %>
      <%= viral_flash(
        type: :error,
        data:
          t(
            ".failure",
            filename: attachment.file.filename,
            errors: attachment.errors.full_messages.join("."),
          ),
      ) %>
    <% end %>
  <% end %>
<% end %>
<%= turbo_stream.remove "sample_modal" %>
