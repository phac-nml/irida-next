<tr
  id="<%= dom_id project %>"
  class="
    text-sm
    font-normal
    text-gray-500
    dark:text-gray-400
  "
>
  <td class="p-4 whitespace-nowrap">
    <%= link_to project.human_name,
                project_path(project),
                data: {
                  turbo: false
                },
                class: "text-grey-900 dark:text-grey-100 font-semibold hover:underline" %>
    <div class="text-sm font-normal text-gray-500 dark:text-gray-400"><%= project.description %></div>
  </td>
  <td class="p-4 whitespace-nowrap text-right">
    <%= viral_tooltip(title: l(project.updated_at, format: :long)) do %>
      <span class="text-sm"><%= distance_of_time_in_words(Time.now, project.updated_at) %></span>
    <% end %>
  </td>
</tr>
