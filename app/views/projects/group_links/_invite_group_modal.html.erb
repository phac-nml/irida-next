<%= viral_dialog(open: open) do |dialog| %>
  <% dialog.with_header(title: I18n.t("projects.group_links.new.title")) %>
  <% dialog.with_trigger do %>
    <button class="button button-default" data-action="viral--dialog#open">
      <%= I18n.t("projects.members.index.invite_group") %>
    </button>
  <% end %>
  <% if defined? new_group_link %>
    <%= render partial: "form" %>
  <% else %>
    <%= turbo_frame_tag "new_group_link_dialog_content", src:  new_namespace_project_group_link_path(@namespace.parent, @namespace.project), loading: :lazy do %>
      <%# TODO: Create a form skeleton? %>
      <%= render partial: "shared/loading/samples_list_skeleton" %>
    <% end %>
  <% end %>
<% end %>
