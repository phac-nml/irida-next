<%= render PaginationComponent.new(
  info: pagy_info(@pagy),
  prev_url:
    (
      if @pagy.prev
        namespace_project_members_url(
          page: @pagy.prev,
          q: params[:q]&.to_unsafe_h,
        )
      else
        nil
      end
    ),
  next_url:
    (
      if @pagy.next
        namespace_project_members_url(
          page: @pagy.next,
          q: params[:q]&.to_unsafe_h,
        )
      else
        nil
      end
    ),
) %>
