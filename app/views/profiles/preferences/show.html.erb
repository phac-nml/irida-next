<%= viral_card(title: t(:'.preferences')) do |card| %>
  <% card.with_section(border_bottom: true, border_top: true, title: t(:'.theme_title')) do %>
    <div class="grid grid-cols-1 gap-4" data-controller="colour-mode">
      <div class="flex">
        <div class="flex items-center h-5"><input
            id="system-theme"
            type="radio"
            value="system"
            name="color-theme"
            data-colour-mode-target="system"
            data-action="change->colour-mode#toggleTheme"
          >
        </div>
        <div class="ml-2 text-sm">
          <label
            for="system-theme"
            class="font-medium text-slate-900 dark:text-slate-300"
          ><%= t(:".system_theme") %></label>
          <p
            id="helper-radio-text"
            class="text-xs font-normal text-slate-500 dark:text-slate-400"
          >
            <%= t(:".system_desc") %>
          </p>
        </div>
      </div>
      <div class="flex items-center">
        <input
          id="dark-theme"
          type="radio"
          value="dark"
          name="color-theme"
          data-colour-mode-target="dark"
          data-action="change->colour-mode#toggleTheme"
        >
        <label
          for="dark-theme"
          class="ml-2 text-sm font-medium text-slate-900 dark:text-slate-300"
        ><%= t(:".dark_theme") %></label>
      </div>
      <div class="flex items-center">
        <input
          id="light-theme"
          type="radio"
          value="light"
          name="color-theme"
          data-colour-mode-target="light"
          data-action="change->colour-mode#toggleTheme"
        >
        <label
          for="light-theme"
          class="ml-2 text-sm font-medium text-slate-900 dark:text-slate-300"
        ><%= t(:".light_theme") %></label>
      </div>
    </div>
  <% end %>
  <% card.with_section do %>
    <%= render "locale_form", user: @user %>
  <% end %>
<% end %>
