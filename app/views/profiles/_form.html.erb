<div class="w-full">
  <div class="pb-4">
    <h2 class="text-xl font-semibold leading-tight text-gray-900 dark:text-white">
      <%= t(:'profiles.show.email.title') %>
    </h2>
    <p class="text-gray-500 dark:text-gray-400">
      <%= t :'profiles.show.email.subtitle' %>
    </p>
  </div>
  <%= form_with(model: user, url: profile_path, method: :patch) do |f| %>
    <% invalid = user.errors.include?(:email) %>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :email %>
      <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :provider %>
      <%= f.text_field :provider %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :uid %>
      <%= f.text_field :uid %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="form-field <%= 'invalid' if invalid %>">
      <%= f.label :phone_number %>
      <%= f.telephone_field :phone_number %>
    </div>
    <div class="my-2">
      <%= f.submit t(:'profiles.show.email.submit'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
