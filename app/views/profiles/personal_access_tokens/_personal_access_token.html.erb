<tr id="<%= dom_id(personal_access_token) %>">
  <th class="px-6 py-4"><%= personal_access_token.name %></th>
  <th class="px-6 py-4"><%= personal_access_token.scopes.join(", ") %></th>
  <th class="px-6 py-4"><%= l(personal_access_token.created_at.to_date) %></th>
  <th class="px-6 py-4"><%= if personal_access_token.last_used_at
      l(personal_access_token.last_used_at)
    else
      t(".never")
    end %></th>
  <th class="px-6 py-4"><%= if personal_access_token.expires_at
      l(personal_access_token.expires_at)
    else
      t(".never")
    end %></th>
  <th><%= button_to(
      t(".revoke_button"),
      revoke_profile_personal_access_token_path(id: personal_access_token.id),
      method: "delete",
      form: {
        data: {
          "turbo-frame": "personal-access-tokens"
        }
      }
    ) %></th>
</tr>
