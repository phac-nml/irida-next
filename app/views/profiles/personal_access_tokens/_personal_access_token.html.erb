<tr
  id="<%= dom_id(personal_access_token) %>"
  class="bg-white border-b dark:bg-gray-800 dark:border-gray-700"
>
  <td class="px-6 py-4"><%= personal_access_token.name %></td>
  <td class="px-6 py-4"><%= personal_access_token.scopes.join(", ") %></td>
  <td class="px-6 py-4"><%= l(personal_access_token.created_at.to_date) %></td>
  <td class="px-6 py-4"><%= if personal_access_token.last_used_at
      l(personal_access_token.last_used_at)
    else
      t(".never")
    end %></td>
  <td class="px-6 py-4"><%= if personal_access_token.expires_at
      l(personal_access_token.expires_at)
    else
      t(".never")
    end %></td>
  <td><%= button_to(
      t(".revoke_button"),
      revoke_profile_personal_access_token_path(id: personal_access_token.id),
      method: "delete",
      form: {
        data: {
          "turbo-frame": "personal-access-tokens",
          "turbo-confirm": t(".revoke_confirm")
        }
      },
      class: "btn-xs btn-danger"
    ) %></td>
</tr>
