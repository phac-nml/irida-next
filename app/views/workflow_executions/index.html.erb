<%= render Viral::PageHeaderComponent.new(title: t(".title")) %>
<% if @has_workflows %>
  <%= turbo_frame_tag "workflow_execution_table",
                        src: workflow_executions_path(format: :turbo_stream, page: params[:page]),
                        loading: :lazy do %>
    <%= render partial: "shared/loading/table" %>
  <% end %>
  <%= turbo_frame_tag "workflow_execution_pagination" %>
<% else %>
  <%= viral_alert(type: :info, message: t(:".empty")) %>
<% end %>
