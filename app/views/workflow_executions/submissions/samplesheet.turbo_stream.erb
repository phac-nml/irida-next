<%= turbo_stream.append "samplesheet_message" do
  viral_alert(
    type: "success",
    message: t("components.nextflow_component.loading_complete"),
    aria: {
      live: "assertive",
    },
    classes: "mb-2 hidden",
    data: {
      "nextflow--samplesheet-target": "updateMessage",
    },
  )
end %>

<%= turbo_stream.append "sample_properties" do %>
  <%= render Nextflow::Samplesheet::SamplePropertiesComponent.new(
    properties: @properties,
    samples: @samples,
    allowed_to_update_samples: @allowed_to_update_samples,
  ) %>
<% end %>
