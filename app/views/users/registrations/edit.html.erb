<div style="display: grid; grid-template-areas: 'side content'; grid-template-columns: 300px 1fr; grid-template-rows: 1fr; grid-gap: 0; height: 100vh">
  <aside id="default-sidebar" aria-label="Sidebar">
    <div class="h-full px-3 py-4 overflow-y-auto bg-gray-50 dark:bg-gray-800">
      <a href="#" class="flex items-center p-1 text-base font-normal text-gray-900 rounded-lg dark:text-white  hover:bg-gray-100 dark:hover:bg-gray-700">
        <svg class="w-7 h-7"  fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <h2 class="font-semibold text-gray-900 dark:text-white">User Settins</h2>
      </a>
      <ul class="space-y-0">
        <li>
          <a href="#" class="flex items-center p-1 text-base font-normal text-gray-900 rounded-lg dark:text-white bg-gray-200 hover:bg-gray-100 dark:hover:bg-gray-700">
            <%= render 'icons/user', class_names: "w-6 h-6" %>
            <span class="ml-3">Profile</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-1 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <%= render "icons/cog_6_tooth", class_names: "w-6 h-6" %>
            <span class="flex-1 ml-3 whitespace-nowrap">Account</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-1 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <%= render "icons/lock_closed", class_names: "w-6 h-6" %>
            <span class="flex-1 ml-3 whitespace-nowrap">Password</span>
          </a>
        </li>
        <li>
          <a href="#" class="flex items-center p-1 text-base font-normal text-gray-900 rounded-lg dark:text-white hover:bg-gray-100 dark:hover:bg-gray-700">
            <%= render "icons/bell", class_names: "w-6 g-6" %>
            <span class="flex-1 ml-3 whitespace-nowrap">Notifications</span>
          </a>
        </li>
      </ul>
    </div>
  </aside>
  <div class="p-4">
    <nav class="flex" aria-label="Breadcrumb">
      <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
          <span class="text-sm text-slate-400">User Settings</span>
        </li>
        <li>
          <div class="flex items-center">
            <%= render "icons/chevron_right", class_names: "w-3 h-3" %>
            <a href="#" class="ml-1 text-sm text-gray-700 hover:text-blue-600 md:ml-2 dark:text-gray-400 dark:hover:text-white">Edit Profile</a>
          </div>
        </li>
      </ol>
    </nav>
    <hr class="h-px my-4 bg-gray-200 border-0 dark:bg-gray-700">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <div class="grid gap-4 mb-4 grid-cols-1 md:w-1/2">
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-full" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div>
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input-full" %>
          <p id="helper-text-explanation" class="helper-text">Leave blank if you don't want to change it.</p>
          <% if @minimum_password_length %>
            <p class="helper-text"><span class="font-medium"><%= @minimum_password_length %></span> characters minimum
            </p>
          <% end %>
        </div>
        <div>
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-full" %>
        </div>
        <div>
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "input-full" %>
          <p id="helper-text-explanation" class="helper-text">We need your current password to confirm your changes</p>
        </div>
      </div>
      <hr class="h-px my-8 bg-gray-200 border-0 dark:bg-gray-700">
      <div>
        <%= f.submit "Update profile settings", class: "btn-primary" %>
      </div>
    <% end %>
    <h3>Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    <%= link_to "Back", :back %>
  </div>
</div>
