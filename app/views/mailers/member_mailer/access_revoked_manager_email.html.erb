<%= render layout: "mailers/email_template",
locals: {
  url:
    (
      if @namespace.type == "Group"
        group_members_url(@namespace)
      else
        namespace_project_members_url(@namespace.parent, @namespace.project)
      end
    ),
} do %>
  <tr>
    <td style="padding:12px 24px;">
      <span style="color:#334155;line-height:24px;">
        <%= t(
          :"mailers.member_mailer.access_revoked_manager_email.body_html",
          first_name: @member.user.first_name.capitalize,
          last_name: @member.user.last_name.capitalize,
          email: @member.user.email,
          type: @namespace.type,
          name: @namespace.name,
        ) %>
      </span>
    </td>
  </tr>
  <tr>
    <td style="padding:12px 24px;">
      <span style="color:#334155;line-height:24px;">
        <%= t(
          :"mailers.member_mailer.access_revoked_manager_email.view_details",
          type: @namespace.type,
          name: @namespace.name,
        ) %>
      </span>
    </td>
  </tr>
<% end %>
