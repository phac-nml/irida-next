<%= render layout: "mailers/email_template",
locals: {
  name: @member.user.first_name.capitalize,
  url:
    (
      if @namespace.type == "Group"
        group_url(@namespace)
      else
        namespace_project_url(@namespace.parent, @namespace.project)
      end
    ),
} do %>
  <tr>
    <td style="padding:12px 24px;">
      <span style="color:#334155;line-height:24px;">
        <%= t(
          :"mailers.member_mailer.access_granted_user_email.body_html",
          type: @namespace.type,
          name: @namespace.name,
        ) %>
      </span>
    </td>
  </tr>
  <tr>
    <td style="padding:12px 24px;">
      <span style="color:#334155;line-height:24px;">
        <%= t(
          :"mailers.member_mailer.access_granted_user_email.view_details",
          type: @namespace.type,
          name: @namespace.name,
        ) %>
      </span>
    </td>
  </tr>
<% end %>
