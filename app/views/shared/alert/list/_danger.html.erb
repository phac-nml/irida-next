<div
  class="
    flex
    p-4
    mb-4
    text-sm
    text-red-800
    border
    border-red-500
    rounded-lg
    bg-red-50
    dark:bg-gray-800
    dark:text-red-400
  "
  role="alert"
>
  <%= render Viral::IconComponent.new(
    name: "information_circle",
    classes: "flex-shrink-0 inline w-5 h-5 mr-2"
  ) %>
  <span class="sr-only">Danger</span>
  <div>
    <span class="font-medium"><%= title %>:</span>
    <ul class="mt-1.5 ml-4 list-disc list-inside">
      <% messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
