<div class="flex p-4 mb-4 text-sm text-red-800 rounded bg-red-50 dark:bg-gray-800 dark:text-red-400 border border-red-500" role="alert">
  <%= render 'icons/information_circle', class_names: "flex-shrink-0 inline w-5 h-5 mr-2" %>
  <span class="sr-only">Danger</span>
  <div>
    <span class="font-medium"><%= title %>:</span>
    <ul class="mt-1.5 ml-4 list-disc list-inside">
      <% messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
</div>
