<% if defined? errors %>
  <ul
    class="
      max-w-md
      space-y-1
      text-sm
      text-slate-500
      list-inside
      dark:text-slate-400
    "
  >
    <% errors.each do |error_message| %>
      <li class="flex items-center text-red-500">
        <%= render Viral::IconComponent.new(
          name: "x_circle",
          classes: "w-3 h-3 mr-1.5 flex-shrink-0"
        ) %><%= error_message %>
      </li>
    <% end %>
  </ul>
<% end %>
