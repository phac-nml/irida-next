<%= render Viral::PageHeaderComponent.new(title: title, subtitle: subtitle) do |component| %>
  <% component.with_buttons do %>
    <% if namespace.metadata_fields.length.positive? && @allowed_to[:create_metadata_templates] %>
      <%= button_to new_template_button_text,
      new_template_url,
      data: {
        :controller => "viral--dialog-trigger",
        :"viral--dialog-trigger-target" => "button",
        :action => "viral--dialog-trigger#open",
        :"viral--dialog-trigger-viral--dialog-outlet" => "#test_me",
        "turbo-frame" => "metadata_template_modal",
        :turbo_stream => true,
      },
      method: :get,
      class: "button button-primary w-full" %>
    <% end %>
  <% end %>
<% end %>
