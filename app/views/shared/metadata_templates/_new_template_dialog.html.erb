<%= viral_dialog(open: open, size: :large) do |dialog| %>
  <% dialog.with_trigger do %>
    <button class="button button-default" data-action="viral--dialog#open">
      <%= new_template_button_text %>
    </button>
  <% end %>
  <% dialog.with_header(title: t("metadata_templates.new_template_dialog.title")) %>
  <%= turbo_frame_tag "metadata_template_error_alert" %>
  <% if @new_template&.invalid? %>
    <%= render partial: "shared/metadata_templates/new_form", locals: { create_path: } %>
  <% else %>
    <%= turbo_frame_tag "metadata_template_dialog_content", src: new_path, loading: :lazy do %>
      <%= render partial: "shared/loading/form" %>
    <% end %>
  <% end %>
<% end %>
