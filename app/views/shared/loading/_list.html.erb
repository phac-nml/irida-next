<div
  role="status"
  class="
    max-w-md
    p-4
    space-y-4
    divide-y
    divide-slate-200
    rounded
    shadow
    animate-pulse
    dark:divide-slate-700
    md:p-6
    dark:border-slate-700
  "
>
  <% 15.times do %>
    <div class="flex items-center justify-between pt-4">
      <div>
        <div class="h-2.5 bg-slate-200 rounded-full dark:bg-slate-600 w-24 mb-2.5"></div>
        <div class="w-32 h-2 bg-slate-200 rounded-full dark:bg-slate-700"></div>
      </div>
      <div class="h-2.5 bg-slate-200 rounded-full dark:bg-slate-700 w-12"></div>
    </div>
    <span class="sr-only">Loading...</span>
  <% end %>
</div>
