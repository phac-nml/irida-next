<div
  role="status"
  class="
    max-w-md animate-pulse space-y-4 divide-y divide-slate-200 rounded-lg p-4 md:p-6 dark:divide-slate-700
    dark:border-slate-700
  "
>
  <ol class="relative border-s border-slate-200 dark:border-slate-700">
    <% 10.times do |index| %>
      <li class="ms-4 mb-10">
        <div
          class="
            absolute -inset-s-1.5 mt-1.5 h-3 w-3 rounded-full border border-white bg-slate-200 dark:border-slate-700
            dark:bg-slate-700
          "
        ></div>

        <div class="mb-2.5 h-2.5 w-24 rounded-full bg-slate-200 dark:bg-slate-600"></div>
        <div class="mb-2.5 h-4 w-14 rounded-full bg-slate-200 dark:bg-slate-700"></div>
        <div class="mb-2.5 h-2.5 w-30 rounded-full bg-slate-200 dark:bg-slate-700"></div>
      </li>
    <% end %>
  </ol>
</div>
