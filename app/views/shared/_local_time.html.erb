<script>
// Wait for LocalTime to be loaded from application.js
window.addEventListener('localtimeready', () => {
  <%= %(LocalTime.config.i18n["#{I18n.locale}"] = #{t('local_time').to_json}).html_safe if I18n.locale != :en %>
  LocalTime.config.locale = "<%= I18n.locale %>"
  LocalTime.start()
}, { once: true })
</script>
