<dl class="mt-2 ml-2max-w-md text-gray-900 divide-y divide-gray-200 dark:text-white dark:divide-gray-700">
    <div class="flex flex-col pb-3 ">
        <dt class="mb-1 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".id") %></dt>
        <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400"><%= @data_export.id  %></dd>
    </div>
    <% unless @data_export.name.nil? %>
      <div class="flex flex-col pb-3 ">
          <dt class="mb-1 mt-2 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".name") %></dt>
          <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400">
            <%= @data_export.name %>
          </dd>
      </div>
    <% end %>
    <div class="flex flex-col pb-3">
        <dt class="mb-1 mt-2 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".type") %></dt>
        <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400">
          <%= @data_export.export_type.capitalize %>
        </dd>
    </div>
    <div class="flex flex-col pb-3">
        <dt class="mb-1 mt-2 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".status") %></dt>
        <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400">
          <% if @data_export.status == 'ready' %>
            <%= viral_pill(
              text: @data_export.status.capitalize,
              color: :green
            ) %>
          <% else %>
            <%= viral_pill(
              text: @data_export.status.capitalize,
              color: :gray
            ) %>
          <% end %>
        </dd>
    </div>
    <div class="flex flex-col pb-3">
        <dt class="mb-1 mt-2 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".created_at") %></dt>
        <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400">
          <%= l(@data_export.created_at.localtime, format: :full_date) %>
        </dd>
    </div>
    <div class="flex flex-col pb-3">
        <dt class="mb-1 mt-2 text-sm font-normal text-slate-500 dark:text-slate-400"><%= t(:".expires_at") %></dt>
        <dd class="font-semibold text-sm text-slate-500 dark:text-slate-400">
          <% if @data_export.expires_at.nil? %>
            <%= t(:".once_ready") %>
          <% else %>
            <%= l(@data_export.expires_at.localtime, format: :full_date) %>
          <% end %>
        </dd>
    </div>
</dl>
