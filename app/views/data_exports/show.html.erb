<%= turbo_refreshes_with method: :morph, scroll: :preserve %>
<%= turbo_stream_from @data_export %>
<%= render Viral::PageHeaderComponent.new(
  title: @data_export.name || @data_export.id, id: @data_export.name.nil? ? nil : @data_export.id) do |component| %>
  <%= component.with_buttons do %>
    <div class="flex flex-row">
      <% if @data_export.status == 'ready' %>
        <%= link_to(
          t("data_exports.show.download"),
          rails_blob_path(@data_export.file),
          class: "button button--state-primary button--size-default"
        ) %>
      <% else %>
        <button
            class="
            button
            button--size-default
            button--state-default
            pointer-events-none
            cursor-not-allowed
            bg-slate-100
            text-slate-600
            dark:bg-slate-600
            dark:text-slate-300
            border-slate-100
            dark:border-slate-600
          "
          ><%= t("data_exports.show.download")%>
          </button>
      <% end %>
        <%= link_to(
          t("data_exports.show.remove_button"),
          data_export_path(@data_export, redirect: true),
          data: {
            turbo_method: :delete,
            turbo_confirm: t("data_exports.show.remove_button_confirmation", name: @data_export.name || @data_export.id)
          },
          class: "button button--state-default button--size-default mr-1 ml-2"
        ) %>
    </div>
  <% end %>
<% end %>

<div class="bg-white dark:bg-slate-800">
  <div
    class="
      flex
      text-sm
      font-medium
      text-center
      border-b
      text-slate-500
      border-slate-200
      dark:text-slate-400
      dark:border-slate-700
    "
  >
    <%= viral_tabs(id: "data-export-tabs", label: "Tabs") do |tabs| %>
      <%= tabs.with_tab(
        url: data_export_path(@data_export, tab: "summary"),
        selected: @tab == "summary" || @tab == nil,
        controls: "data-export-tabs") do %>
        <%= t(:"data_exports.show.tabs.summary")%>
      <% end %>
      <% if @data_export.status == 'ready' && @data_export.export_type != 'linelist' %>
        <%= tabs.with_tab(
          url: data_export_path(@data_export, tab: "preview"),
          selected: @tab == "preview",
          controls: "data-export-tabs") do %>
          <%= t(:"data_exports.show.tabs.preview") %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <% if @tab == "preview" %>
    <%= render partial: "preview" %>
  <% else %>
    <%= render partial: "summary" %>
  <% end %>
</div>
