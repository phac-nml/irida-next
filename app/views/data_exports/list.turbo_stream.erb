<% if @page == 1 %>
  <%= turbo_stream.replace "list_select_samples" do %>
    <%= turbo_frame_tag "list_select_samples" %>
  <% end %>
<% end %>

<%= turbo_stream.append("list_select_samples") do %>
  <% if defined? @samples %>
    <% @samples.each do |sample| %>
      <%= render "list_sample", sample: sample %>
    <% end %>
  <% elsif defined? @workflow_executions %>
    <% @workflow_executions.each do |workflow_execution| %>
      <%= render "list_workflow_execution", workflow_execution: workflow_execution %>
    <% end %>
  <% end %>
<% end %>
