<% if @page == 1 %>
  <%= turbo_stream.replace "list_selections" do %>
    <%= turbo_frame_tag "list_selections" %>
  <% end %>
<% end %>

<%= turbo_stream.append("list_selections") do %>
  <% if defined? @samples %>
    <% @samples.each do |sample| %>
      <%= render "list_sample", sample: sample %>
    <% end %>
  <% elsif defined? @workflow_executions %>
    <% @workflow_executions.each_with_index do |workflow_execution, index| %>
      <%= render "shared/workflow_executions/list_workflow_execution",
      workflow_execution:,
      index: %>
    <% end %>
  <% end %>
<% end %>
