<%= viral_card do |card| %>
  <% card.with_header(title: t(:"groups.edit.advanced.delete.title")) %>
  <% card.with_section do %>
    <p class="text-slate-600 dark:text-slate-400">
      <%= t(:"groups.edit.advanced.delete.description") %>
    </p>
    <div class="mt-4">
      <%= link_to t(:"groups.edit.advanced.delete.submit"),
      group_path,
      data: {
        turbo_method: :delete,
        turbo_confirm: t(:"groups.edit.advanced.delete.confirm"),
      },
      class: "button button--state-destructive button--size-default inline-block" %>
    </div>
  <% end %>
<% end %>
