<%= turbo_stream.update "group_show_tab_content" do %>
  <% if @shared_projects.length > 0 %>
  <table class="min-w-full table-fixed dark:divide-slate-600">
    <tbody
      class="
              bg-white
              divide-y
              divide-slate-200
              dark:bg-slate-800
              dark:divide-slate-700
            "
    >
    <%= render partial: "shared/project/row", collection: @shared_projects, as: :project %>
    </tbody>
  </table>
  <% else %>
    <div class="border border-slate-200 mt-4 py-24 flex justify-center">
      <div class="inline-block flex items-center">
        <%= viral_icon(name: :rectangle_stack, color: :primary, classes: "w-20 h-20 shrink mr-4") %>
        <div class="flex flex-col grow">
          <h3 class="text-2xl font-bold dark:text-white text-slate-700">
            <%= t(:'groups.show.shared_projects.no_shared.title') %>
          </h3>
          <p class="text-slate-600 dark:text-slate-400">
            <%= t(:'groups.show.shared_projects.no_shared.description') %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
<% end %>