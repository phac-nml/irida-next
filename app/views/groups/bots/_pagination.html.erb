<% if @pagy.count.positive? %>
  <%= render PaginationComponent.new(
    info: pagy_info(@pagy),
    prev_url:
      (
        if @pagy.prev
          group_bots_url(@namespace, page: @pagy.prev)
        else
          nil
        end
      ),
    next_url:
      (
        if @pagy.next
          group_bots_url(@namespace, page: @pagy.next)
        else
          nil
        end
      )
  ) %>
<% end %>
