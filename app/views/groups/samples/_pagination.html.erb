<%= render PaginationComponent.new(
  info: pagy_info(@pagy),
  prev_url:
    (
      if @pagy.prev
        pagy_url_for(@pagy, @pagy.prev).gsub("samples.turbo_stream", "samples")
      else
        nil
      end
    ),
  next_url:
    (
      if @pagy.next
        pagy_url_for(@pagy, @pagy.next).gsub("samples.turbo_stream", "samples")
      else
        nil
      end
    )
) %>
