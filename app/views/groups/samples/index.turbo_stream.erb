<%= turbo_stream.update "group_samples_list",
                    partial: "table",
                    locals: {
                      group: @group,
                      samples: @samples,
                    } %>

<%= turbo_stream.update "group_samples_pagination",
                    partial: "pagination",
                    locals: {
                      pagy: @pagy
                    } %>

<%= turbo_stream.update "group_samples_hidden_values" do %>
  <%= render Ransack::HiddenSortFieldComponent.new(@q) %>
  <%= hidden_field_tag "metadata", params[:metadata] %>
<% end %>
