<%= turbo_stream.update "group_samples_list",
                    partial: "table",
                    locals: {
                      group: @group,
                      samples: @samples
                    } %>

<%= turbo_stream.update "group_samples_pagination",
                    partial: "pagination",
                    locals: {
                      pagy: @pagy
                    } %>

<%= turbo_stream.update "group_samples_sort_dropdown" do %>
  <%= render Ransack::SortDropdownComponent.new(
    @q,
    "samples",
    [
      { name: "updated_at", dir: "desc" },
      { name: "updated_at", dir: "asc" },
      { name: "name", dir: "asc" },
      { name: "name", dir: "desc" },
      { name: "created_at", dir: "desc" },
      { name: "created_at", dir: "asc" }
    ]
  ) %>
<% end %>

<%= turbo_stream.update "group_samples_hidden_search_value" do %>
  <%= render Ransack::HiddenSortFieldComponent.new(@q) %>
<% end %>
