<%= render PaginationComponent.new(
  info: pagy_info(@pagy),
  prev_url:
    (
      if @pagy.prev
        group_metadata_templates_url(@namespace, page: @pagy.prev)
      else
        nil
      end
    ),
  next_url:
    (
      if @pagy.next
        group_metadata_templates_url(@namespace, page: @pagy.next)
      else
        nil
      end
    ),
) %>
