<%= turbo_refreshes_with method: :morph, scroll: :preserve %>

<%= turbo_stream_from @workflow_execution %>

<%= turbo_frame_tag "export_dialog" %>

<%= turbo_frame_tag "edit_dialog" %>

<%= render Viral::PageHeaderComponent.new(title: turbo_frame_tag('we_name_header') do @workflow_execution.name.blank? ? @workflow_execution.metadata["workflow_name"] :
   @workflow_execution.name end, id: @workflow_execution.id, id_color: find_pill_color_for_state(@workflow_execution.state)) do |component| %>
  <% component.with_buttons do %>
    <div class="flex flex-row gap-2">
      <% if @allowed_to[:export_data] %>
          <%= button_to t("groups.workflow_executions.show.create_export_button"),
          new_data_export_path,
          params: {
            export_type: "analysis",
            analysis_type: "group",
            namespace_id: @namespace.id,
            workflow_execution_id: @workflow_execution.id,
            single_workflow: true,
          },
          method: :get,
          data: {
            turbo_stream: true,
          },
          class: "btn btn-default btn-rounded",
          disabled: !@workflow_execution.completed? %>
      <% end %>
      <% if @workflow_execution.cancellable? && @allowed_to[:cancel] %>
        <%= link_to(
          t("groups.workflow_executions.show.cancel_button"),
          cancel_group_workflow_execution_path(@namespace, @workflow_execution.id),
          data: {
            turbo_method: :put,
            turbo_confirm:
              t("groups.workflow_executions.show.cancel_button_confirmation"),
          },
          class: "btn btn-default btn-rounded",
        ) %>
      <% end %>
      <% if @allowed_to[:update] %>
        <%= link_to(
          t("groups.workflow_executions.show.edit_button"),
          edit_group_workflow_execution_path(@namespace, @workflow_execution),
          data: {
            turbo_stream: true,
          },
          class: "btn btn-default btn-rounded",
        ) %>
      <% end %>
      <% if @workflow_execution.deletable? && @allowed_to[:destroy] %>
        <%= link_to(
          t("groups.workflow_executions.show.remove_button"),
          group_workflow_execution_path(
            @namespace,
            @workflow_execution,
            redirect: true,
          ),
          data: {
            turbo_method: :delete,
            turbo_confirm:
              t("groups.workflow_executions.show.remove_button_confirmation"),
          },
          class: "btn btn-default btn-rounded",
        ) %>
      <% end %>
    </div>
  <% end %>
<% end %>

<%= viral_tabs(id: "workflow-execution-tabs", label: "Tabs") do |tabs| %>
  <%= tabs.with_tab(url: group_workflow_execution_path(@namespace, @workflow_execution, tab: "summary"), selected: @tab == "summary" || @tab == nil) do %>
    <%= t(:"workflow_executions.show.tabs.summary") %>
  <% end %>
  <%= tabs.with_tab(url: group_workflow_execution_path(@namespace, @workflow_execution, tab: "params"), selected: @tab == "params") do %>
    <%= t(:"workflow_executions.show.tabs.params") %>
  <% end %>
  <%= tabs.with_tab(url: group_workflow_execution_path(@namespace, @workflow_execution, tab: "samplesheet"), selected: @tab == "samplesheet") do %>
    <%= t(:"workflow_executions.show.tabs.samplesheet") %>
  <% end %>
  <%= tabs.with_tab(url: group_workflow_execution_path(@namespace, @workflow_execution, tab: "files"), selected: @tab == "files") do %>
    <%= t(:"workflow_executions.show.tabs.files") %>
  <% end %>

  <%= tabs.with_tab_content do %>
    <% if @tab == 'summary' || @tab == nil %>
      <%= render partial: "summary" %>
    <% elsif @tab == 'params' %>
      <%= render partial: "params" %>
    <% elsif @tab == 'samplesheet' %>
      <%= render partial: "samplesheet" %>
    <% elsif @tab == 'files' %>
      <%= render partial: "files" %>
    <% end %>
  <% end %>
<% end %>
