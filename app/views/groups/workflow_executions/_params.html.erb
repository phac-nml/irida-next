<section class="mt-4">

  <% @workflow.workflow_params.each do |item, definition| %>
    <% definition[:properties].each do |name, property| %>
      <% unless %[input].include? name.to_s %>
        <div class="mb-4">
          <p class="mb-1 text-sm font-medium text-slate-900 dark:text-white"><%= property[:description] %></p>
          <div
            class="
              flex flex-col @md:flex-row border border-slate-300 dark:border-slate-600
              rounded-lg bg-slate-300 dark:bg-slate-600 mb-2
              <%= name %>-param
            "
          >
            <span
              class="
                inline-flex items-center px-3 text-sm text-slate-900 dark:text-slate-300
                font-mono rounded-t-lg @md:rounded-l-lg @md:rounded-tr-none py-2
              "
            >
              --<%= name %>
            </span>
            <input
              type="text"
              disabled
              class="
                bg-slate-50 border-none text-slate-900 block flex-1 min-w-0 w-full text-sm p-2.5
                dark:bg-slate-700 dark:placeholder-slate-400 dark:text-white focus-visible:z-10
                rounded-b-lg @md:rounded-bl-none @md:rounded-r-lg
              "
              value="<%= @workflow_execution.workflow_params[name.to_s] %>"
            >
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</section>
