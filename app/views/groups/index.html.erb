<%= render Viral::PageHeaderComponent.new(title: t("groups.show.title"), subtitle: t("groups.show.subtitle")) do |component| %>
  <%= component.with_icon(name: "squares_2x2", classes: "h-14 w-14 text-primary-700") %>
  <%= component.with_buttons do %>
    <%= link_to t(:"groups.index.create_group_button"),
    new_group_path,
    class: "inline-flex items-center justify-center btn btn-primary" %>
  <% end %>
<% end %>
<div class="bg-white dark:bg-gray-800">
  <div class="flex flex-col">
    <div class="overflow-x-auto">
      <div class="shadow">
        <table class="min-w-full table-fixed dark:divide-gray-600">
          <tbody
            class="
              bg-white
              divide-y
              divide-gray-200
              dark:bg-gray-800
              dark:divide-gray-700
            "
          >
            <% @groups.each do |group| %>
              <tr class="text-sm font-normal text-gray-500 dark:text-gray-400">
                <td class="w-16 p-2 whitespace-nowrap">
                  <%= viral_avatar(
                    name: group.name,
                    colour_string: "#{group.name}-#{group.id}",
                    url: group_path(group)
                  ) %>
                </td>
                <td class="p-4 whitespace-nowrap">
                  <%= link_to group.name,
                  group_path(group),
                  class: "text-grey-900 dark:text-grey-100 font-semibold hover:underline" %>
                  <% if current_user.id == group.owner_id %>
                    <span
                      class="
                        bg-green-200
                        text-green-800
                        text-xs
                        font-medium
                        ml-2
                        px-2.5
                        py-0.5
                        rounded-full
                        dark:bg-green-900
                        dark:text-green-300
                      "
                    >
                      <%= t(:"groups.owner") %>
                    </span>
                  <% end %>
                  <div class="text-sm font-normal text-gray-500 dark:text-gray-400"><%= group.description %></div>
                </td>
                <td class="px-4 py-3">
                  <div class="flex items-center justify-end">
                    <div class="inline-flex items-center justify-between w-8 mr-2">
                      <%= viral_icon(name: "folder", classes: "w-4 h-4") %>
                      0
                    </div>
                    <div class="inline-flex items-center justify-between w-8 mr-2">
                      <%= viral_icon(name: "users", classes: "w-4 h-4") %>
                      1
                    </div>
                    <%= viral_dropdown(icon: "ellipsis_vertical", aria: { label: t(:'groups.index.group_dropdown.label', group_name: group.name) }) do |dropdown| %>
                      <%= dropdown.item(
                        label: t(:"groups.index.group_dropdown.delete"),
                        url: group_path(group),
                        data: {
                          turbo_method: :delete,
                          turbo_confirm: t(:"groups.index.group_dropdown.delete_confirmation")
                        }
                      ) %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
