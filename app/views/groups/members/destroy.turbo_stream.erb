<%= turbo_stream.update "member-update-alert", viral_alert(type:, message:) %>

<% if member.deleted? %>
  <%= turbo_stream.remove dom_id(member) %>
  <%= turbo_stream.update "members_pagination" do %>
    <%= render PaginationComponent.new(
      info: pagy_info(@pagy),
      prev_url:
        (
          if @pagy.prev
            group_members_url(@group, page: @pagy.prev)
          else
            nil
          end
        ),
      next_url:
        (
          if @pagy.next
            group_members_url(@group, page: @pagy.next)
          else
            nil
          end
        )
    ) %>
  <% end %>
<% end %>
