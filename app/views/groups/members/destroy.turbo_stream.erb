<%= turbo_stream.append "flashes" do %>
  <%= viral_flash(type:, data: message) %>
<% end %>

<% if member.deleted? %>
  <%= turbo_stream.replace "members" do %>
    <%= turbo_frame_tag "members",
      src: group_members_path(@group, format: :turbo_stream) do %>
      <%= render partial: "shared/loading/table" %>
    <% end %>
  <% end %>
<% end %>
