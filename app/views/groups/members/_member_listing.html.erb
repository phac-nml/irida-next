<div class="flex flex-col gap-2 mt-2">
  <div class="flex">
    <div class="flex-1"></div>
    <div class="grow-0">
      <%= search_form_for @q, url: group_members_url(**request.query_parameters), data: { turbo_action: 'replace' }, class: "filters flex items-end space-x-2" do |f| %>
        <%= render SearchFieldComponent.new(
          label: t(".search.label"),
          placeholder: t(".search.placeholder"),
          form: f,
          field_name: :user_email_cont,
          value: @q.user_email_cont,
        ) %>
        <input type="hidden" name="format" value="turbo_stream"/>
      <% end %>
    </div>
  </div>

  <%= render Members::TableComponent.new(
    @namespace,
    @members,
    @access_levels,
    @q,
    current_user,
    {
      update_member: @allowed_to[:update_member],
      destroy_member: @allowed_to[:destroy_member],
    },
  ) %>
</div>
