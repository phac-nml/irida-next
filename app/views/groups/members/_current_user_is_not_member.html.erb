<%= link_to(
  t(:"groups.members.index.remove"),
  (
    if @namespace.type == "Group"
      group_member_path(id: member.id)
    else
      namespace_project_member_path(id: member.id)
    end
  ),
  data: {
    turbo_method: :delete,
    turbo_confirm: (t(:"groups.members.index.remove_confirmation")),
  },
  aria: {
    label:
      (
        t(
          :"groups.members.index.actions.link_remove_aria_label",
          member: member.user.email,
        )
      ),
  },
  class:
    "font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline cursor-pointer",
) %>
