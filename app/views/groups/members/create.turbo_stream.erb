<%= turbo_stream.update "new_member_modal",
                    partial: "create_modal",
                    locals: {
                      open: member.errors.any? ? true : false
                    } %>

<% if @new_member.persisted? %>
  <%= turbo_stream.append "flashes" do %>
    <%= viral_flash(
      type:,
      data: message
    ) %>
  <% end %>

  <% if @tab != "invited_groups" %>
    <%= turbo_stream.update "members", partial: "member_listing" %>

    <%= turbo_stream.update "members_pagination" do %>
      <%= render PaginationComponent.new(
        info: pagy_info(@pagy),
        prev_url: (@pagy.prev ? group_members_url(@group, page: @pagy.prev) : nil),
        next_url: (@pagy.next ? group_members_url(@group, page: @pagy.next) : nil)
      ) %>
    <% end %>
  <% end %>
<% end %>
