<div data-controller="viral--modal-component">
  <button
    data-action="click->viral--modal-component#open"
    class="
      block
      text-white
      bg-blue-700
      hover:bg-blue-800
      focus:ring-4
      focus:outline-none
      focus:ring-blue-300
      font-medium
      rounded-lg
      text-sm
      px-5
      py-2.5
      text-center
      dark:bg-blue-600
      dark:hover:bg-blue-700
      dark:focus:ring-blue-800
    "
    type="button"
  >Open modal</button>
  <%= viral_modal(title: "This is a modal title") do |modal| %>
    <% modal.with_body do %>
      <p>This is a modal body</p>
    <% end %>
  <% end %>
</div>
