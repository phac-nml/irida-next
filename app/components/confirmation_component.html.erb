<dialog id="turbo-confirm">
  <div class="dialog--header">
    <h3 class="dialog--title">Confirmation required</h3>
  </div>
  <div class="dialog--section">
    <p class="text-base text-gray-900 dark:text-white">Are you sure?</p>
    <form method="dialog">
      <div class="flex flex-row-reverse items-center mt-6">
        <button class="button button--state-destructive button--size-default" value="confirm">Confirm</button>
        <button class="button button--state-default button--size-default mr-2" value="cancel">Cancel</button>
      </div>
    </form>
  </div>
</dialog>
