<%= search_form_for @query, url: @url, data: { controller: "selection" }, **@kwargs do |f| %>
  <%= render Ransack::HiddenSortFieldComponent.new(@query) %>
  <%= f.label @search_attribute, @placeholder, class: "sr-only" %>
  <div class="relative">
    <%= f.text_field @search_attribute,
                 **{ value: @value }.compact,
                 "data-action": "selection#clear",
                 class:
                   "t-search-component block w-full min-h-11 py-2.5 pl-10 pr-5 text-sm text-slate-900 border border-slate-300 rounded-lg bg-slate-50 dark:bg-slate-900 dark:border-slate-700 dark:placeholder-slate-400 dark:text-white",
                 placeholder: @placeholder %>
    <div
      class="
        absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none
      "
    >
      <%= helpers.render_icon ICONS[:magnifying_glass], class: "size-4 text-slate-500 dark:text-slate-400" %>
    </div>
  </div>
  <%= content %>
<% end %>
