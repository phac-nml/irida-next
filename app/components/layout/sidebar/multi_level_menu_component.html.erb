<div data-controller="multi_level_menu">
  <button
    type="button"
    class="
      flex
      w-full
      items-center
      mt-1
      p-3
      transition-colors
      ease-in-out
      delay-75
      hover:bg-slate-200
      dark:text-slate-200
      dark:hover:bg-slate-700
    "
    aria-controls="dropdown-example"
    data-action="multi_level_menu#toggle"
  >
    <%= viral_icon(
      name: "cog_6_tooth",
      classes:
        "flex-shrink-0
            w-5
            h-5
            ml-1
            text-slate-800
            transition
            duration-75
            group-hover:text-slate-900
            dark:text-slate-400
            dark:group-hover:text-white"
    ) %>
    <span class="flex-1 ms-3 text-left rtl:text-right whitespace-nowrap"><%= title %></span>
    <%= viral_icon(
      name: "chevron_down",
      classes: "mr-0 w-4 h-4 rotate-180",
      "data-multi_level_menu-target": "icon"
    ) %>
  </button>
  <ul
    id="dropdown-example"
    data-multi_level_menu-target="item"
    class="hidden py-2 space-y-2"
  >
    <% menu_items.each do |menu_item| %>
      <li class="Layout-Sidebar__Item">
        <a
          href=<%= menu_item.url %>
          class="
            flex
            w-full
            items-center
            p-2
            text-slate-900
            t
            delay-75
            pl-11
            group
            hover:bg-slate-100
            dark:text-white
            dark:hover:bg-slate-700
          "
        >
          <span class="ml-2 grow">
            <%= menu_item.label %>
          </span></a>
      </li>
    <% end %>
  </ul>
</div>
