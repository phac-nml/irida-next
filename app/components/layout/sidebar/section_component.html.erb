<ul class="px-1 Layout-Sidebar__Section">
  <% if items.present? %>
    <% if title.present? %>
      <%= title %>
    <% end %>
    <% items.each do |item| %>
      <%= item %>
    <% end %>
  <% else %>
    <%= content %>
  <% end %>

  <% if dropdowns.present? %>
    <% dropdowns.each do |dropdown| %>
      <%= dropdown %>
    <% end %>
  <% end %>

</ul>
