<div class="space-y-1 py-2">
  <% if title.present? %>
    <div class="px-4 py-2">
      <h3 class="text-xs font-semibold uppercase tracking-wider text-slate-500 dark:text-slate-400">
        <%= title %>
      </h3>
    </div>
  <% end %>

  <ul class="space-y-1 px-2">
    <% if items.present? %>
      <% items.each do |item| %>
        <li><%= item %></li>
      <% end %>
    <% else %>
      <li><%= content %></li>
    <% end %>

    <% if multi_level_menus.present? %>
      <% multi_level_menus.each do |multi_level_menu| %>
        <li><%= multi_level_menu %></li>
      <% end %>
    <% end %>
  </ul>
</div>
