<div class="pl-4 mb-2">
  <h2 class="pt-2 ml-1 text-base font-semibold text-slate-900 dark:text-white">
    <%= label %>
  </h2>

  <% if item.present? %>
    <div class="mt-2 flex items-center">
      <%= viral_avatar(
        name: item.name,
        colour_string: "#{item.name}-#{item.id}",
        size: :xs,
      ) %>
      <span class="pl-2 text-sm text-slate-600 dark:text-slate-400">
        <%= item.name %>
      </span>
    </div>
  <% end %>
</div>
