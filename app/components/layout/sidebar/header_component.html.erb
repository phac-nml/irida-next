<div class="pl-4 mb-2 space-y-2">
  <p class="pt-2 ml-1 text-base font-semibold text-slate-900 dark:text-white"><%= label %>
  </p>
  <% if item.present? %>
    <div class="flex items-center">
      <%= viral_avatar(
        name: item.name,
        colour_string: "#{item.name}-#{item.id}",
        size: :xs,
      ) %>
      <p class="pl-2 text-sm text-slate-600 dark:text-slate-400"><%= item.name %></p>
    </div>
  <% end %>
</div>
