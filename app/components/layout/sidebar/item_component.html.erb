<li class="Layout-Sidebar__Item">
  <a
    href="<%= url %>"
    class="
      flex items-center mt-1 p-1 transition-colors ease-in-out delay-75 rounded-sm
      hover:bg-slate-200 dark:text-slate-200 dark:hover:bg-slate-700
      <%= class_names('Layout-Sidebar__Item--selected bg-slate-200 dark:bg-slate-700': selected)  %>
    "
  >
    <%= render Layout::Sidebar::SelectedComponent.new(selected: selected) %>
    <%= icon @icon[:name], variant: @icon[:variant], library: @icon[:library], class: ['size-5', 'text-primary-600 dark:text-primary-400': selected] %>
    <span class="ml-2 grow">
      <%= label %>
    </span>
  </a>
</li>
