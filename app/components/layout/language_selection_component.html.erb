<div
  class="inline-flex items-center"
  data-controller="viral--dropdown"
  data-viral--dropdown-skidding-value="0"
  data-viral--dropdown-distance-value="5"
  data-viral--dropdown-position-value="bottom-start"
  role="region"
  aria-labelledby="language-selection-dd-menu"
>
  <button
    data-viral--dropdown-target="trigger"
    id="language-selection-dd-trigger"
    class="button button-default px-3"
    type="button"
    aria-haspopup="true"
    aria-controls="language-selection-dd-menu"
    aria-expanded="false"
    aria-labelledby="language-selection-dd-menu"
  >
    <%= pathogen_icon(:translate, size: :sm, class: "mr-2") %>
    <abbr
      class="text-sm sm:hidden"
      title="<%= I18n.t(:"locales.#{locale}", locale: locale) %>"
    >
      <%= locale.upcase %>
    </abbr>
    <span class="text-sm max-sm:hidden" id="language-selection-dd-label">
      <%= I18n.t(:"locales.#{locale}", locale: locale) %>
    </span>
  </button>
  <!-- Dropdown menu -->
  <ul
    id="language-selection-dd-menu"
    data-viral--dropdown-target="menu"
    role="menu"
    class="
      hidden w-32 py-2 text-sm text-slate-700 dark:text-slate-200 bg-white rounded-lg
      shadow-sm dark:bg-slate-700 z-30
    "
    aria-label="<%= t(:'components.layout.language_selection.title') %>"
    aria-hidden="true"
    tabindex="-1"
    hidden="hidden"
  >
    <% @locale_options.each do |locale_name, locale_value| %>
      <% if @user.locale.to_sym == locale_value %>
        <li
          role="menuitemradio"
          aria-checked="true"
          aria-label="<%= locale_name%>"
          class="
            flex w-full items-center px-4 py-2 hover:bg-slate-100 dark:hover:bg-slate-600
            dark:hover:text-white bg-slate-100 text-slate-600 dark:bg-slate-600
            dark:text-slate-300 border-slate-100 dark:border-slate-600 focus-
          "
        ><%= locale_name %></li>
      <% else %>
        <li
          role="menuitemradio"
          aria-checked="false"
          aria-label="<%= locale_name%>"
          lang="<%= locale_value %>"
          class="
            flex w-full items-center px-4 py-2 hover:bg-slate-100 dark:hover:bg-slate-600
            dark:hover:text-white cursor-pointer
          "
        >
          <%= form_with(model: @user, url: profile_preferences_path, method: :patch) do |form| %>
            <%= form.hidden_field :locale,
                              value: locale_value,
                              id: "language_selection_#{locale_value}" %>
            <%= form.submit locale_name,
                        class: "cursor-pointer",
                        "aria-hidden": "true",
                        tabindex: "-1" %>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
