<nav
  class="mt-4 flex items-center justify-center space-x-2"
  role="navigation"
  aria-label="<%= t("viral.pagy.pagination_component.aria_label") %>"
  aria-describedby="pagination-info"
  aria-live="polite"
>
  <% if prev_url %>
    <%= link_to prev_url,
          **link_arguments,
          class: [
            "bg-slate-50 border border-slate-300 cursor-pointer dark:bg-slate-900 dark:border-slate-700 dark:hover:bg-slate-800 dark:hover:text-white dark:text-slate-50 font-semibold hover:bg-slate-100 hover:text-slate-950 inline-flex items-center justify-center min-h-11 min-w-11 px-5 py-2.5 rounded-lg sm:w-auto text-slate-900"
          ],
          "aria-label": t("viral.pagy.pagination_component.previous_aria_label") do %>
      <%= helpers.render_icon ICONS[:caret_left],
                          classes: "mr-2 size-5",
                          "aria-hidden": "true" %>
      <span><%= t("viral.pagy.pagination_component.previous") %></span>
    <% end %>
  <% end %>

  <% if next_url %>
    <%= link_to next_url,
          **link_arguments,
          class: [
            "bg-slate-50 border border-slate-300 cursor-pointer dark:bg-slate-900 dark:border-slate-700 dark:hover:bg-slate-800 dark:hover:text-white dark:text-slate-50 font-semibold hover:bg-slate-100 hover:text-slate-950 inline-flex items-center justify-center min-h-11 min-w-11 px-5 py-2.5 rounded-lg sm:w-auto text-slate-900"
          ],
          "aria-label": t("viral.pagy.pagination_component.next_aria_label") do %>
      <span><%= t("viral.pagy.pagination_component.next") %></span>
      <%= helpers.render_icon ICONS[:caret_right],
                          classes: "ml-2 size-5",
                          "aria-hidden": "true" %>
    <% end %>
  <% end %>
</nav>

<div
  id="pagination-info"
  class="m-4 text-center text-slate-700 dark:text-slate-200"
  aria-live="polite"
>
  <%== info %>
</div>
