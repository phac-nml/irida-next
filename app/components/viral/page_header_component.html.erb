<div class="page-header">
  <div class="w-full">
    <div
      class="
        items-center
        justify-between
        block
        sm:flex
        md:divide-x
        md:divide-gray-100
        dark:divide-gray-700
      "
    >
      <div class="flex flex-row justify-between">
        <div class="flex items-center">
          <% unless avatar.present? and icon %>
            <%= icon %>
          <% end %>
          <%- if avatar.present? %>
            <div
              class="
                relative
                inline-flex
                items-center
                justify-center
                overflow-hidden
                bg-gray-100
                rounded-md
                h-20
                w-20
                dark:bg-gray-600
              "
              style="background-color: <%= generate_hsla_color_from_string(avatar) %>"
            >
              <span class="font-black text-5xl text-gray-600 dark:text-gray-300">
                <%= title.chr %>
              </span>
            </div>
          <% end %>
          <div class="flex-1 pl-2">
            <h1 class="font-semibold leading-tight text-gray-900 dark:text-white"><%= title %></h1>
            <p class="text-gray-500 dark:text-gray-400"><%= subtitle %></p>
          </div>
        </div>
      </div>
      <%= buttons %>
    </div>
  </div>
</div>
