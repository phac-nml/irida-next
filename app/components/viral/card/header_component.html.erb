<%= render Viral::BaseComponent.new(tag: 'div', **system_arguments) do %>
  <% if title_only? %>
    <h3 class="text-lg font-semibold text-gray-800 dark:text-white">
      <%= title %>
    </h3>
  <% else %>
    <div class="mb-2">
      <% if actions.present? %>
        <div class="flex">
          <h2 class="flex-1 text-lg font-semibold text-gray-800 dark:text-white">
            <%= title %>
          </h2>
          <div>
            <% actions.each do |action| %>
              <span class="ml-2"><%= action %></span>
            <% end %>
          </div>
        </div>
      <% else %>
        <h2 class="flex-1 text-lg font-semibold text-gray-800 dark:text-white">
          <%= title %>
        </h2>
      <% end %>
    </div>
  <% end %>
  <p class="text-gray-500 dark:text-gray-400"><%= content %></p>
<% end %>
