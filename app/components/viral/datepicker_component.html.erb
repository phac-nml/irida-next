<fieldset>
  <legend class="sr-only"><%= t("components.viral.datepicker.date_selection") %></legend>

  <%= render Viral::BaseComponent.new(**@system_arguments) do %>
    <% unless @min_date.nil? %>
      <%= render partial: "viral/datepicker/min_date", locals: { min_date: @min_date } %>
    <% end %>

    <%= render partial: "viral/datepicker/input_field",
    locals: {
      label: @label,
      input_id: @input_id,
      selected_date: @selected_date,
      input_name: @input_name,
      input_aria_label: @input_aria_label,
    } %>

    <%= render partial: "viral/datepicker/calendar",
    locals: {
      calendar_arguments: @calendar_arguments,
      days_of_the_week: @days_of_the_week,
      months: @months,
      min_year: @min_year,
      min_date: @min_date,
    } %>
  <% end %>
</fieldset>
