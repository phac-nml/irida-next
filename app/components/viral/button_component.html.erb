<%= render Viral::BaseComponent.new(tag: 'button', **system_arguments) do %>
  <% if content.present? %>
    <span class="pointer-events-none"><%= content %></span>
  <% end %>

  <% if disclosure.present? %>
    <% icon_class = "size-4 ml-2" %>
    <% case disclosure %>
    <% when :down %>
      <%= pathogen_icon(ICON::CARET_DOWN, class: icon_class) %>
    <% when :up %>
      <%= pathogen_icon(ICON::CARET_UP, class: icon_class) %>
    <% when :right %>
      <%= pathogen_icon(ICON::CARET_RIGHT, class: icon_class) %>
    <% end %>
  <% end %>
<% end %>
