<%= render Viral::BaseComponent.new(tag: 'button', **system_arguments) do %>
  <% if content.present? %>
    <span class="pointer-events-none"><%= content %></span>
  <% end %>

  <% if disclosure.present? %>
    <% case disclosure %>
    <% when :down %>
      <%= pathogen_icon("caret-down", size: :sm, class: "ml-2") %>
    <% when :up %>
      <%= pathogen_icon("caret-up", size: :sm, class: "ml-2") %>
    <% when :right %>
      <%= pathogen_icon("caret-right", size: :sm, class: "ml-2") %>
    <% end %>
  <% end %>
<% end %>
