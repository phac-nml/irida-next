<%= render Viral::BaseComponent.new(tag: 'button', **system_arguments) do %>
  <% if content.present? %>
    <span class="pointer-events-none"><%= content %></span>
  <% end %>

  <% if disclosure.present? %>
    <% case disclosure %>
    <% when :down %>

      <%= icon "caret-down", class: "size-4 ml-2" %>
    <% when :up %>
      <%= icon "caret-up", class: "size-4 ml-2" %>
    <% when :right %>
      <%= icon "caret-right", class: "size-4 ml-2" %>
    <% end %>
  <% end %>
<% end %>
