<section
  class="
    flex items-center p-6 space-x-4 border border-slate-300 rounded-lg shadow
    dark:border-slate-700 pointer-events-none
  "
  role="alert"
>
  <span
    aria-hidden="true"
    class="
      flex-shrink-0 flex items-center justify-center w-16 h-16 rounded-full
      bg-primary-100 dark:bg-primary-700
    "
  >
    <%= viral_icon(
      name: icon_name,
      classes: "size-8 text-primary-600 dark:text-primary-200",
    ) %>
  </span>
  <div>
    <h1 class="text-2xl font-bold tracking-tight text-slate-900 dark:text-white">
      <%= title %>
    </h1>
    <% if description.present? %>
      <p class="text-base font-normal text-slate-700 dark:text-slate-300 mt-1">
        <%= description %>
      </p>
    <% end %>
  </div>
</section>
