<% desc_id = "empty-state-desc-#{self.object_id}" %>
<% title_id = "empty-state-title-#{self.object_id}" %>

<section
  class="
    w-full max-w-md mx-auto flex flex-col items-center justify-center text-center
    bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700
    rounded-2xl shadow px-8 py-12 space-y-6 transition-all duration-300
  "
  role="status"
  aria-labelledby="<%= title_id %>"
  aria-describedby="<%= desc_id %>"
>
  <%# Animated Icon Section %>
  <div
    aria-hidden="true"
    class="
      flex items-center justify-center w-20 h-20 rounded-full bg-emerald-100
      dark:bg-emerald-800 shadow-md mb-6 ring-4 ring-emerald-200 dark:ring-emerald-900
    "
  >
    <%= viral_icon(
      name: @icon_name,
      classes: "w-10 h-10 text-emerald-600 dark:text-emerald-400 drop-shadow-lg",
    ) %>
  </div>

  <h2
    id="<%= title_id %>"
    class="
      text-2xl font-extrabold text-slate-900 dark:text-slate-100 tracking-tight
    "
  >
    <%= @title %>
  </h2>

  <% if render_content_area? %>
    <div
      id="<%= desc_id %>"
      class="text-base text-slate-600 dark:text-slate-300 max-w-prose mx-auto"
    >
      <% if @description.present? %>
        <span><%= @description %></span>
      <% end %>
    </div>

    <% if @action_text.present? && @action_path.present? %>
      <%= link_to @action_text,
      @action_path,
      method: @action_method,
      class:
        class_names(
          "mt-6 inline-flex items-center justify-center px-6 py-3 text-base font-semibold rounded-xl",
          "bg-primary-700 hover:bg-primary-800",
          "dark:bg-primary-600 dark:hover:bg-primary-700",
          "text-white shadow transition-all duration-200",
        ),
      tabindex: 0,
      role: "button",
      aria_label: @action_text %>
    <% end %>
  <% end %>
</section>
