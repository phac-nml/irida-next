<%= turbo_frame_tag "modal" do %>
  <%= tag.div data: { controller: "viral--modal-component",
                      viral__modal_component_target: "modal",
                      action:"turbo:submit-end->viral--modal-component#submitEnd keyup@window->viral--modal-component#closeWithKeyboard click@window->viral--modal-component#closeBackground"
                      },
                      class: "p-5 bg-slate-300 absolute z-10 top-10 right-10 rounded-md w-96 break-words" do %>
    <h1 class="font-bold text-4xl"><%= @title %></h1>
    <%= content %>
    <%= button_tag "Close",
    data: {
      action: "viral--modal-component#hideModal"
    },
    type: "button",
    class: "rounded-lg py-3 px-5 bg-red-600 text-white" %>
  <% end %>
<% end %>
