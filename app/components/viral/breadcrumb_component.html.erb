<nav
  aria-label="<%= I18n.t(:'components.breadcrumb.navigation_aria_label') %>"
  class="h-14 w-full min-w-0 overflow-hidden"
  data-controller="breadcrumb"
>
  <ol
    class="flex items-center h-full w-full min-w-0 pr-4 gap-x-1 md:gap-x-3"
    data-breadcrumb-target="list"
  >
    <!-- Overflow dropdown -->
    <li
      class="shrink-0"
      data-breadcrumb-target="dropdownMenu"
      style="display: none;"
    >
      <%= viral_dropdown(
        icon: "ellipsis_horizontal",
        aria: { label: I18n.t(:'components.breadcrumb.dropdown.aria_label') },
        styles: { button: "p-3 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-lg text-slate-500 cursor-pointer transition" }
      ) do |dropdown| %>
        <% links.each_with_index do |link, index| %>
          <% next if index == links.length - 1 %>
          <%= dropdown.with_item(
            label: link[:name],
            url: URI.join(root_url, link[:path]).to_s,
            data: {
              turbo_frame: "_top",
              "breadcrumb-target": "dropdownItem",
            },
          ) %>
        <% end %>
      <% end %>
    </li>
    <!-- Dynamic breadcrumb items -->
    <% links.each_with_index do |link, index| %>
      <li class="inline-flex items-center shrink-0" data-breadcrumb-target="crumb">
        <% if index > 0 %>
          <span aria-hidden="true" class="mx-1 text-slate-400 select-none shrink-0">â€º</span>
        <% end %>

        <% if index == links.length - 1 %>
          <!-- Current page (last item) -->
          <span
            class="
              text-sm text-slate-900 dark:text-white font-medium py-3 ml-1 md:ml-2
            "
            aria-current="page"
            title="<%= link[:name] %>"
          >
            <%= link[:name] %>
          </span>
        <% else %>
          <!-- Navigable link -->
          <%= link_to link[:name],
          URI.join(root_url, link[:path]).to_s,
          class:
            "text-sm text-slate-600 dark:text-slate-400 hover:underline py-3 font-normal ml-1 md:ml-2",
          data: {
            turbo_frame: "_top",
          } %>
        <% end %>
      </li>
    <% end %>
  </ol>
</nav>
