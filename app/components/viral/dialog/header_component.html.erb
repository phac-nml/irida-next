<%= render Viral::BaseComponent.new(tag: "div", **system_arguments) do %>
  <h1 class="dialog--title">
    <%= title %>
  </h1>
  <button
    type="button"
    class="dialog--close"
    data-action="click->viral--dialog-component#close"
    aria-label="<%= t(:"components.dialog.close") %>"
  >
    <%= viral_icon(name: "x_mark", classes: "h-5 w-5") %>
  </button>
<% end %>
