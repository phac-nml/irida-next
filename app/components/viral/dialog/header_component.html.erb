<%= render Viral::BaseComponent.new(tag: "div", **system_arguments.except(:close_action)) do %>
  <h1 class="dialog--title">
    <%= title %>
  </h1>
  <%= tag.button(
    class: "dialog--close cursor-pointer",
    type: "button",
    hidden: !@closable,
    data: {
      action: [system_arguments[:close_action], "click->viral--dialog#close"].compact.join(" "),
      "viral--dialog-target": "closeButton"
    },
    aria: { label: t(:"components.dialog.close") }
  ) do %>
    <%= pathogen_icon(:x, size: :sm) %>
  <% end %>
<% end %>
