<div data-controller="viral--tooltip-component">
  <span data-viral--tooltip-component-target="trigger">
    <%= content %>
  </span>

  <div data-viral--tooltip-component-target="target" role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
    <%= title %>
    <div class="tooltip-arrow" data-popper-arrow></div>
  </div>
</div>