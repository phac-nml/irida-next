<div
  data-controller="viral--flash"
  data-viral--flash-timeout-value="<%= timeout %>"
  data-viral--flash-type-value="<%= type %>"
  id="<%= component_id %>"
  class="
    flex items-center w-full max-w-xs p-4 mb-4 text-slate-700 bg-white rounded-lg
    shadow-lg dark:text-slate-400 dark:bg-slate-800 transition-opacity duration-300
    ease-out
  "
  role="<%= role_attribute %>"
  aria-live="<%= aria_live_attribute %>"
  aria-atomic="true"
  data-turbo-permanent="true"
>
  <div
    class="
      inline-flex items-center justify-center shrink-0 w-10 h-10 rounded-lg
      <%= icon_container_classes %>
    "
  >
    <%= viral_icon(name: icon_name, classes: "w-6 h-6") %>
    <span class="sr-only"><%= icon_sr_text %></span>
  </div>
  <div class="ms-3 text-sm font-medium text-slate-800 dark:text-slate-300"><%= data %></div>
  <button
    type="button"
    data-action="viral--flash#dismiss"
    class="
      ms-auto -mx-1.5 -my-1.5 bg-white text-slate-500 hover:text-slate-900 rounded-lg
      p-1.5 hover:bg-slate-100 inline-flex items-center justify-center h-11 w-11
      dark:text-slate-400 dark:hover:text-white dark:bg-slate-800
      dark:hover:bg-slate-700 cursor-pointer
    "
    aria-label="<%= t('general.screen_reader.close') %>"
  >
    <%= viral_icon(name: "x_mark", classes: "w-5 h-5") %>
  </button>
</div>
