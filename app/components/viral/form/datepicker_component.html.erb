<div data-controller="datepicker">
  <%- if label.present? %>
    <label
      for="<%= @id %>"
      class="block mb-2 text-sm font-medium text-slate-900 dark:text-white"
    >
      <%= label %>
    </label>
  <% end %>
  <div class="relative max-w-sm">
    <div
      class="
        absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none
      "
    >
      <%= viral_icon(
        name: "calendar_days",
        classes: "w-5 h-5 text-slate-500 dark:text-slate-400",
        aria: {
          hidden: true,
        },
      ) %>
    </div>
    <%= text_field_tag @name, @value, **system_arguments %>
  </div>
  <% if help_text.present? %>
    <%= viral_help_text do %>
      <%= help_text %>
    <% end %>
  <% end %>
</div>
