<%= render Viral::Form::InputWrapperComponent.new(label:, name:, help_text:, hidden:) do %>
  <%= render Viral::BaseComponent.new(**system_arguments) do %>
    <% unless selected_value.present? %>
      <%= render Viral::Form::Select::OptionComponent.new(
        option: {
          value: -1,
          label: t(".default")
        },
        selected_value: -1
      ) %>
    <% end %>
    <%= render Viral::Form::Select::OptionComponent.with_collection(
      options,
      selected_value:
    ) %>
  <% end %>
<% end %>
