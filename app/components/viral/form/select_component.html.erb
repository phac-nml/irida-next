<div <%= hidden ? 'class="hidden"'.html_safe : nil %>>
  <label
    for="<%= name %>"
    class="block mb-2 text-sm font-medium text-slate-900 dark:text-white"
  >
    <%= label %>
  </label>
  <%= render Viral::BaseComponent.new(**system_arguments) do %>
    <% unless selected_value.present? %>
      <%= render Viral::Form::Select::OptionComponent.new(
        option: {
          value: -1,
          label: t(".default")
        },
        selected_value: -1
      ) %>
    <% end %>
    <%= render Viral::Form::Select::OptionComponent.with_collection(
      options,
      selected_value:
    ) %>
  <% end %>
  <% if help_text.present? %>
    <%= viral_help_text do %>
      <%= help_text %>
    <% end %>
  <% end %>
</div>
