<div class="flex">
  <span
    class="
      inline-flex
      items-center
      px-3
      text-sm
      text-slate-900
      bg-slate-200
      border
      rounded-e-0
      border-slate-300
      rounded-s-md
      dark:bg-slate-600
      dark:text-slate-300
      dark:border-slate-600
      font-mono
    "
  >
    <%= prefix %>
  </span>
  <div
    class="
      rounded-none
      rounded-e-lg
      bg-slate-50
      border
      block
      flex-1
      min-w-0
      w-full
      border-slate-300
      p-2.5
      dark:bg-slate-700
      dark:border-slate-600
    "
  >
    <div class="flex">
      <div class="flex items-center me-4">
        <%= form.radio_button name,
                          "true",
                          checked: value,
                          class:
                                "w-4 h-4 text-primary-600 bg-slate-100 border-slate-300 focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-slate-800 focus:ring-2 dark:bg-slate-700 dark:border-slate-400" %>
        <%= form.label "#{name}_true",
                       "True",
                       class: "ms-2 text-sm font-medium text-slate-900 dark:text-slate-300" %>
      </div>
      <div class="flex items-center me-4">
        <%= form.radio_button name,
                          "false",
                          checked: !value,
                          class:
                                "w-4 h-4 text-primary-600 bg-slate-100 border-slate-300 focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-slate-800 focus:ring-2 dark:bg-slate-700 dark:border-slate-400" %>
        <%= form.label "#{name}_false",
                       "False",
                       class: "ms-2 text-sm font-medium text-slate-900 dark:text-slate-300" %>
      </div>
    </div>
  </div>
</div>
