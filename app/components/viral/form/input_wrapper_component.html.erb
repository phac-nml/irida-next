<%= render Viral::BaseComponent.new(**system_arguments) do %>
  <label
    for="<%= name %>"
    class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
  >
    <%= label %>
  </label>
  <%= content %>
  <% if help_text.present? %>
    <%= viral_help_text do %>
      <%= help_text %>
    <% end %>
  <% end %>
<% end %>
