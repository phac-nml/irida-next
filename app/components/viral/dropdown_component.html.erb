<span
  data-controller="viral--dropdown"
  data-viral--dropdown-trigger-value="<%= @trigger %>"
>
  <%= render Viral::BaseComponent.new(tag: :button, **@system_arguments) do %>
    <%= @label %>
    <% if @icon_name.present? %>
      <%= viral_icon(name: @icon_name, classes: "w-6 h-6") %>
    <% end %>
    <% if @caret %>
      <%= viral_icon(name: "chevron_down", classes: "w-4 h-4 ml-2") %>
    <% end %>
  <% end %>
  <!-- Dropdown menu -->
  <div
    data-viral--dropdown-target="menu"
    class="
      z-10
      hidden
      bg-white
      divide-y
      divide-gray-100
      rounded-lg
      shadow
      w-44
      dark:bg-gray-700
    "
  >
    <ul
      class="py-2 text-sm text-gray-700 dark:text-gray-200"
      aria-labelledby="dropdownHoverButton"
    >
      <% items.each do |item| %>
        <%= item %>
      <% end %>
    </ul>
  </div>

</span>
