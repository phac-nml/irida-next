<%= render Viral::BaseComponent.new(tag: "div", **system_arguments) do %>
  <span class="shrink-0 inline">
    <%= pathogen_icon(ICON::WARNING_CIRCLE, class: "mr-2 stroke-2") %>
  </span>
  <div>
    <% if message.present? %>
      <div class="font-medium"><%= message %></div>
    <% end %>
    <% if content.present? %>
      <%= content %>
    <% end %>
  </div>
<% end %>
