<%= viral_dropdown(label: t(".sorting.#{@ransack_obj.sorts[0].name}_#{@ransack_obj.sorts[0].dir}"),
                   caret: true, prefix: t(".prefix")) do |dropdown| %>
  <% @sort_options.each do |sort| %>
    <%= helpers.sorting_item(
      dropdown,
      @ransack_obj,
      sort[:name],
      sort[:dir],
      t(".prefix"),
    ) %>
  <% end %>
<% end %>
