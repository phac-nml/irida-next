<% if property["cell_type"] == "metadata_cell" %>
  <th
    class="
      z-10 border table-header dark:border-slate-600 border-slate-100
      dark:bg-slate-700 bg-slate-50
    "
  >
    <label class="sr-only" for="field-<%= header %>"><%= header %></label>
    <%= select_tag :field,
    options_for_select(metadata_fields_for_field(header), header),
    include_blank: !@required_properties.include?(header),
    id: "field-#{header}",
    class:
      "bg-slate-50 text-inherit text-sm border-none block min-w-56 w-full p-2.5 dark:bg-slate-700 font-semibold tracking-wider uppercase",
    data: {
      action: "change->nextflow--samplesheet#handleMetadataSelection",
      "metadata-header": header,
    } %>
  </th>
<% else %>
  <th
    class="
      table-header p-2.5 font-semibold tracking-wider dark:border-slate-600 border
      border-slate-100 dark:bg-slate-700 bg-slate-50 z-10
    "
  >
    <div class="flex items-center space-x-2 uppercase">
      <%= header %>
      <% if @required_properties.include?(header) %>
        <span class="ml-1 text-red-600 dark:text-red-300">(<%= t(".required") %>)</span>
      <% end %>
    </div>
  </th>
<% end %>
