<div
  id="<%="#{@sample.id}_#{@name}" %>"
  class="
    w-full focus:ring-primary-500 focus:border-primary-500 p-2.5 dark:bg-inherit
    bg-inherit border-none dark:border-none dark:placeholder-slate-400 text-inherit
    text-sm dark:focus:ring-primary-500 dark:focus:border-primary-500 cursor-pointer
  "
>
  <% unless @selected.empty? %>
    <p><%= @selected[:filename]%></p>
    <input
    type="hidden"
      name="workflow_execution[samples_workflow_executions_attributes][<%= @index%>][samplesheet_params][<%= @name %>]"
      value= <%= @selected[:global_id]%>
    >
  <% end %>
  <%= link_to @selected.empty? ? "Select" : @selected[:filename],
  new_file_selector_path(
    "file_selector[attachable]": @sample,
    "file_selector[index]": @index,
    "file_selector[selected_id]": @selected.nil? ? nil : @selected[:id],
    "file_selector[name]": @name,
    "file_selector[required]": @required,
    "file_selector[file_filter_params]": @file_filter_params
  ),
  data: {
    turbo_stream: "true",
  } %>
</div>
