<template data-list-filter-target="template">
  <%= viral_pill(color: :blue, classes: "search-tag inline-flex items-center filter-item mb-1 mr-1 py-1.5") do %>
    <input type="hidden" data-turbo-temporary name="<%= list_input_form_name %>">
    <span class="mr-1 font-mono text-sm font-semibold label"></span>
    <button
      type="button"
      class="
        inline-flex items-center p-1 text-sm bg-transparent rounded-full text-slate-400
        hover:bg-blue-200 hover:text-blue-900 dark:hover:bg-blue-600
        dark:hover:text-blue-300
      "
      data-action="click->list-filter#remove"
      aria-label="<%= t(:'components.list_input.remove_tag') %>"
    >
      <%= pathogen_icon(:x, size: :sm) %>
    </button>
  <% end %>
</template>
<div class="space-y-4">
  <% if @show_description %>
    <p class="text-base leading-relaxed text-slate-500 dark:text-slate-400">
      <%= raw t(:"components.list_input.description") %>
    </p>
  <% end %>
  <div
    class="
      relative flex flex-wrap font-mono bg-transparent border border-slate-300
      text-slate-900 text-sm rounded-lg w-full p-2.5 dark:placeholder-slate-400
      dark:text-white dark:border-slate-600
    "
    data-list-filter-target="tags"
    data-action="click->list-filter#focus"
  >
    <%= render Viral::BaseComponent.new(**input_arguments) %>
    <button
      type="button"
      class="
        absolute inline-flex items-center justify-center w-6 h-6 p 1.5 rounded-full
        text-slate-600 bg-slate-100 border-1 border-slate-300 bottom-2 end-2
        dark:text-slate-300 dark:border-slate-600 dark:bg-slate-600
        dark:hover:bg-slate-500 hover:bg-slate-300 z-25
      "
      data-action="click->list-filter#clear"
      aria-label="<%= t(:'components.list_input.clear') %>"
      title="<%= t(:'components.list_input.clear') %>"
    >
      <%= pathogen_icon(:x, size: :sm) %>
    </button>
  </div>

</div>
