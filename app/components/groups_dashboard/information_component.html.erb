<%# Statistics section with improved responsive layout %>
<div class="mb-6">
  <h3 class="sr-only"><%= t(:"groups.show.information.title") %></h3>

  <%# Stacked on small/large screens, side by side on medium screens only %>
  <div
    class="
      flex flex-col space-y-4 md:flex-row md:flex-wrap md:space-y-0 md:space-x-4
      xl:flex-col xl:space-x-0 xl:space-y-4 w-full
    "
  >
    <div class="w-full md:flex-1 flex-shrink-0 min-w-0">
      <%= render NamespaceStatisticComponent.new(
        id_prefix: "group-samples",
        icon_name: :samples,
        label: t(:"groups.show.information.number_of_samples"),
        count: @group.samples_count || 0,
        color_scheme: :blue,
      ) %>
    </div>

    <div class="w-full md:flex-1 flex-shrink-0 min-w-0">
      <%= render NamespaceStatisticComponent.new(
        id_prefix: "group-projects",
        icon_name: :projects,
        label: t(:"groups.show.information.number_of_projects"),
        count: @group.project_namespaces.count,
        color_scheme: :fuchsia,
      ) %>
    </div>

    <div class="w-full md:flex-1 flex-shrink-0 min-w-0">
      <%= render NamespaceStatisticComponent.new(
        id_prefix: "group-subgroups",
        icon_name: :groups,
        label: t(:"groups.show.information.number_of_subgroups"),
        count: @group.children.count,
        color_scheme: :amber,
      ) %>
    </div>
  </div>
</div>

<%# Project metadata %>
<div class=" pt-6 border-t border-slate-200 dark:border-slate-700 ">
  <dl class="space-y-3">
    <div>
      <dt class="text-sm font-semibold text-slate-600 dark:text-slate-400 mb-1">
        <%= t(:"groups.show.information.created_on") %>
      </dt>
      <dd class="text-slate-800 dark:text-slate-200 break-words">
        <time datetime="<%= @group.created_at.iso8601 %>">
          <%= helpers.local_time(@group.created_at, :full_date) %>
        </time>
      </dd>
    </div>
  </dl>
</div>
