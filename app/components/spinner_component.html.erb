<div
  role="status"
  id="spinner"
  class="
    absolute z-50 grid w-full h-full -translate-x-1/2 -translate-y-1/2
    backdrop-blur-sm top-2/4 left-1/2 place-items-center
  "
>
  <div class="grid place-items-center">
    <%= viral_icon(name: :loading, classes: "animate-spin text-primary-500") %>
    <span class="text-black dark:text-white"><%= message %></span>
  </div>
</div>
