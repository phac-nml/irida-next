<% if  @activity[:action] == 'sample_clone' || @activity[:action] == 'sample_transfer' %>
  <% project =
    (
      if @activity[:source_project].present?
        @activity[:source_project]
      else
        @activity[:target_project]
      end
    ) %>
  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    href:
      link_to(
        project.name,
        namespace_project_samples_path(project.parent, project),
        class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
      ),
  ) %>
<% else %>
  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    name: @activity[:name],
    project_name: @activity[:project_name],
    new_project_name: @activity[:new_project_name],
    transferred_sample_ids: @activity[:transferred_sample_ids],
    cloned_sample_ids: @activity[:cloned_sample_ids],
    old_namespace: @activity[:old_namespace],
    new_namespace: @activity[:new_namespace],
  ) %>
<% end %>
