<span>
  <% if group_link_exists %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        link_to(
          @activity[:group_name],
          group_path(@activity[:group]),
          class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
        ),
      namespace_type: @activity[:namespace_type],
      name: @activity[:name],
    ) %>
  <% else %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href: @activity[:group_name],
      namespace_type: @activity[:namespace_type],
      name: @activity[:name],
    ) %>
  <% end %>
</span>
