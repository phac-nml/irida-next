<section>
  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    cloned_samples_count:
      content_tag(
        :span,
        @activity[:cloned_samples_count],
        class: "text-slate-800 dark:text-slate-300 font-medium",
      ),
  ) %>
  <%= button_to t(:"components.activity.more_details"),
  activity_path(@activity[:id]),
  params: {
    dialog_type: "group_sample_clone",
  },
  data: {
    turbo_stream: true,
  },
  method: :get,
  class: "button button-default",
  title:
    t("components.activity.samples.clone.more_details.button_descriptive_text") %>
</section>
