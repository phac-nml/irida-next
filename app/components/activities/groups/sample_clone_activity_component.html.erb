<section>
  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    cloned_samples_count:
      content_tag(
        :span,
        @activity[:cloned_samples_count],
        class: "text-slate-800 dark:text-slate-300 font-medium",
      ),
  ) %>
  <%= button_to t(:"components.activity.more_details"),
  activity_path(@activity[:id]),
  params: {
    dialog_type: "group_sample_clone",
  },
  data: {
    turbo_stream: true,
  },
  method: :get,
  class:
    "inline-flex items-center justify-center button button--state-default button--size-default dark:bg-slate-700 dark:text-white dark:hover:bg-slate-600" %>
</section>
