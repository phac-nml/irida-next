<section>
  <% descriptive_text = "" %>
  <% if import_samples_action %>
    <% descriptive_text =
      t("components.activity.samples.import.more_details.button_descriptive_text") %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        content_tag(
          :span,
          @activity[:imported_samples_count],
          class: "text-slate-800 dark:text-slate-300 font-medium",
        ),
    ) %>
    <% dialog_type = "group_import_samples" %>
  <% elsif sample_destroy_action %>
    <% descriptive_text =
      t("components.activity.samples.destroy.more_details.button_descriptive_text") %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        content_tag(
          :span,
          @activity[:samples_deleted_count],
          class: "text-slate-800 dark:text-slate-300 font-medium",
        ),
    ) %>
    <% dialog_type = "group_samples_destroy" %>
  <% end %>

  <%= button_to t(:"components.activity.more_details"),
  activity_path(@activity[:id]),
  params: {
    dialog_type: dialog_type,
  },
  data: {
    turbo_stream: true,
  },
  method: :get,
  class: "button button-default",
  title: descriptive_text %>

</section>
