<% if destroy_subgroup %>
  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    name: @activity[:name],
    removed_group_puid: @activity[:removed_group_puid],
  ) %>
<% else %>
  <% if subgroup_exists %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      name: @activity[:name],
      href:
        link_to(
          @activity[:created_group].puid,
          group_path(@activity[:created_group]),
        ),
    ) %>
  <% else %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      name: @activity[:name],
      href: @activity[:created_group].puid,
    ) %>
  <% end %>
<% end %>
