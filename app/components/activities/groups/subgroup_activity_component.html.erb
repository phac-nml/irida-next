<span>
  <% if destroy_subgroup %>
    <% href =
      link_to(
        @activity[:removed_group_puid],
        "#",
        class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
        disabled: true,
      ) %>
  <% else %>
    <% if subgroup_exists %>
      <% href =
        link_to(
          @activity[:created_group_puid],
          group_path(@activity[:created_group]),
          class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
        ) %>
    <% else %>
      <% href =
        link_to(
          @activity[:created_group_puid],
          "#",
          class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ) %>
    <% end %>
  <% end %>

  <%= t("#{@activity[:key]}", user: @activity[:user], href: href) %>
</span>
