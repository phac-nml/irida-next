<span>
  <% if project_exists %>
    <% href = link_to(
          @activity[:project_puid],
          namespace_project_path(@activity[:group], @activity[:project].project),
          class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
        ) %>
  <% else %>
    <% href = link_to(
          @activity[:project_puid],
          "#",
          class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true
        ) %>
  <% end %>

  <%= t(
    "#{@activity[:key]}",
    user: @activity[:user],
    href: href,
    old_namespace: link_to(
          @activity[:old_namespace],
          "#",
          class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true
        ),
    new_namespace: link_to(
          @activity[:new_namespace],
          "#",
          class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true
        )
  ) %>
</span>
