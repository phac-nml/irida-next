<span>
  <% if transferred_group_exists %>
    <% if existing_group_namespace %>
      <%= t(
        "#{@activity[:key]}",
        user: @activity[:user],
        old_namespace: @activity[:old_namespace],
        new_namespace: @activity[:new_namespace],
        href:
          link_to(
            @activity[:transferred_group].puid,
            group_path(@activity[:transferred_group]),
            class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
          ),
      ) %>
    <% else %>
      <%= t(
        "#{@activity[:key]}",
        user: @activity[:user],
        new_namespace: @activity[:new_namespace],
        href:
          link_to(
            @activity[:transferred_group].puid,
            group_path(@activity[:transferred_group]),
            class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
          ),
      ) %>
    <% end %>
  <% else %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      old_namespace: @activity[:old_namespace],
      new_namespace: @activity[:new_namespace],
      href: @activity[:transferred_group].puid,
    ) %>
  <% end %>
</span>
