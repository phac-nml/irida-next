<span>
  <% if transferred_group_exists %>
    <% href =
      link_to(
        @activity[:transferred_group_puid],
        group_path(@activity[:transferred_group]),
        class: "text-slate-800 dark:text-slate-300 font-medium hover:underline",
      ) %>
  <% else %>
    <% href =
      link_to(
        @activity[:transferred_group_puid],
        "#",
        class: "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
        disabled: true,
      ) %>
  <% end %>

  <% if existing_group_namespace %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      old_namespace:
        link_to(
          @activity[:old_namespace],
          "#",
          class:
            "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ),
      new_namespace:
        link_to(
          @activity[:new_namespace],
          "#",
          class:
            "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ),
      href: href,
    ) %>
  <% else %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      new_namespace:
        link_to(
          @activity[:new_namespace],
          "#",
          class:
            "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ),
      href: href,
    ) %>
  <% end %>
</span>
