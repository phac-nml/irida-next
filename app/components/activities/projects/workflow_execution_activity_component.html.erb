<section>
  <% if workflow_execution_destroy_action %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        content_tag(
          :span,
          @activity[:workflow_executions_deleted_count],
          class: "text-slate-800 dark:text-slate-300 font-medium",
        ),
    ) %>
    <%= button_to t(:"components.activity.more_details"),
    activity_path(@activity[:id]),
    params: {
      dialog_type: "workflow_executions_destroy",
    },
    data: {
      turbo_stream: true,
    },
    method: :get,
    class:
      "inline-flex items-center justify-center button button-default dark:bg-slate-700 dark:text-white dark:hover:bg-slate-600" %>
  <% end %>
</section>
