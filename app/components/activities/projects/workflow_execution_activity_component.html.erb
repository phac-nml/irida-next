<span>
  <% if workflow_execution_destroy_multiple_action %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        link_to(
          @activity[:workflow_execution_ids]&.size,
          "#",
          class:
            "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ),
      workflow_execution_ids: @activity[:workflow_execution_ids],
    ) %>
  <% elsif workflow_execution_destroy_action %>
    <%= t(
      "#{@activity[:key]}",
      user: @activity[:user],
      href:
        link_to(
          @activity[:workflow_execution_id],
          "#",
          class:
            "text-slate-800 dark:text-slate-300 font-medium cursor-not-allowed",
          disabled: true,
        ),
    ) %>
  <% end %>
</span>
