<div
  class="
    p-4 rounded-lg border border-slate-200 dark:border-slate-700
    <%= tailwind_colors[:bg] %> <%= tailwind_colors[:dark_bg] %>
  "
  role="region"
  aria-labelledby="<%= label_id_unified %>"
>
  <%# Unified layout that works at all zoom levels %>
  <div class="flex items-start gap-3">
    <%# Icon %>
    <div class="shrink-0">
      <span
        id="<%= icon_id_unified %>"
        class="
          inline-flex items-center justify-center p-2.5 rounded-lg
          <%= tailwind_colors[:icon_bg] %> <%= tailwind_colors[:dark_icon_bg] %>
        "
        aria-hidden="true"
      >
        <%= helpers.render_icon(
          ICONS[icon_name.to_sym],
          class: "h-5 w-5 #{tailwind_colors[:icon_text]} #{tailwind_colors[:dark_icon_text]}",
        ) %>
      </span>
    </div>
    
    <%# Content %>
    <div class="flex-1 min-w-0">
      <%# Label %>
      <div class="mb-2">
        <h3
          id="<%= label_id_unified %>"
          class="text-sm font-medium text-slate-700 dark:text-slate-300 leading-tight break-words"
        >
          <%= label %>
        </h3>
      </div>
      
      <%# Count %>
      <div
        class="text-2xl font-bold text-slate-900 dark:text-slate-100 font-mono tracking-tight"
        aria-describedby="<%= label_id_unified %>"
      >
        <%= number_with_delimiter(count) %>
      </div>
    </div>
  </div>
</div>
