<div>
  <% unless min_date.nil? %>
    <div
      class="text-sm text-center text-slate-900 dark:text-white"
      <% if Flipper.enabled?(:beta_dropdown) %>
      data-pathogen--datepicker--beta-calendar-target="minDateMessage"
      <% else %>
      data-pathogen--datepicker--calendar-target="minDateMessage"
      <% end %>
    >
    </div>
  <% end %>
  <div class="flex space-x-2 rtl:space-x-reverse mt-2">
    <button
      type="button"
      class="button button-default w-1/2"
      <% if Flipper.enabled?(:beta_dropdown) %>
      data-action="click->pathogen--datepicker--beta-calendar#showToday"
      <% else %>
      data-action="click->pathogen--datepicker--calendar#showToday"
      <% end %>
      aria-label="<%= t('pathogen.datepicker.aria_label.show_today') %>"
    >
      <%= t("pathogen.datepicker.show_today") %>
    </button>
    <button
      type="button"
      class="button button-default w-1/2"
      data-action="click->pathogen--datepicker--calendar#clearSelection"
      <% if Flipper.enabled?(:beta_dropdown) %>
      data-action="click->pathogen--datepicker--beta-calendar#clearSelection"
      data-pathogen--datepicker--beta-calendar-target="clearButton"
      <% else %>
      data-action="click->pathogen--datepicker--calendar#clearSelection"
      data-pathogen--datepicker--calendar-target="clearButton"
      <% end %>
      aria-label="<%= t('pathogen.datepicker.aria_label.clear_selection') %>"
    >
      <%= t("pathogen.datepicker.clear_selection") %>
    </button>
  </div>
</div>
