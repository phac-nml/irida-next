<% if label %>
  <label for="<%= input_id %>" class="mb-1 block text-sm font-medium text-slate-900 dark:text-white">
    <%= label %>
  </label>
<% end %>

<div class="relative max-w-sm" aria-live="polite">
  <div class="pointer-events-none absolute inset-y-0 inset-s-0 flex items-center ps-3.5">
    <%= pathogen_icon(:calendar_dots) %>
  </div>

  <input
    placeholder="<%= t("pathogen.datepicker.placeholder") %>"
    autocomplete="off"
    value="<%= selected_date %>"
    <% if Flipper.enabled?(:flowbite_replacement) %>
    data-pathogen--datepicker--input-target="trigger"
    data-action="
      change->pathogen--datepicker--input#directInput
      keydown->pathogen--datepicker--input#handleEnterDirectInput
    "
    <% else %>
    data-pathogen--datepicker--flowbite-input-target="trigger"
    data-action="
      change->pathogen--datepicker--flowbite-input#directInput
      keydown->pathogen--datepicker--flowbite-input#handleEnterDirectInput
    "
    <% end %>
    type="text"
    name="<%= input_name %>"
    id="<%= input_id %>"
    class="
      rounded-lg border-slate-300 p-2.5 ps-10 text-sm text-slate-900 dark:border-slate-600 dark:bg-slate-800
      dark:text-white dark:placeholder-slate-400
    "
    <% if input_aria_label %>
      aria-label="<%= input_aria_label %>"
    <% end %>
  >
</div>

<div
  <% if Flipper.enabled?(:flowbite_replacement) %>
  data-pathogen--datepicker--input-target="inputError"
  <% else %>
  data-pathogen--datepicker--flowbite-input-target="inputError"
  <% end %>
  class="mt-1 hidden text-sm text-red-700 dark:text-red-500"
  aria-hidden="true"
></div>
