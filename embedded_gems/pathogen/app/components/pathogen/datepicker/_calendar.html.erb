<%= render Pathogen::BaseComponent.new(**wrapper_arguments) do %>
  <%= render Pathogen::BaseComponent.new(**calendar_arguments) do %>
    <div
      class="<%= class_names('inline-block rounded-lg bg-white dark:bg-slate-700 shadow-sm max-[384px]:p-1 p-4', { 'overflow-y-auto': Flipper.enabled?(:beta_dropdown) }) %>"
      <% if Flipper.enabled?(:beta_dropdown) %>
      style="max-height: inherit;"
      <% end %>
    >
      <%= render partial: "pathogen/datepicker/calendar/header",
      locals: {
        min_year:,
        months:,
      } %>
      <%= render partial: "pathogen/datepicker/calendar/grid",
      locals: {
        days_of_the_week:,
      } %>
      <%= render partial: "pathogen/datepicker/calendar/footer", locals: { min_date: } %>
    </div>
  <% end %>
<% end %>
