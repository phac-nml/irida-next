<% if render_eager? %>
  <%= helpers.turbo_frame_tag(@frame_id) { content } %>
<% else %>
  <%= helpers.turbo_frame_tag(
    @frame_id,
    src: @src_path,
    loading: :lazy,
    refresh: @refresh,
  ) {
    tag.div(class: "animate-pulse", aria: { hidden: true }) {
      tag.div(class: "flex flex-col gap-5") {
        safe_join([
          tag.div(class: "h-4 w-1/3 rounded bg-slate-200 dark:bg-slate-700"),
          tag.div(class: "flex flex-col gap-3") {
            safe_join([
              tag.div(class: "h-3 w-full rounded bg-slate-200 dark:bg-slate-700"),
              tag.div(class: "h-3 w-11/12 rounded bg-slate-200 dark:bg-slate-700"),
              tag.div(class: "h-3 w-10/12 rounded bg-slate-200 dark:bg-slate-700"),
              tag.div(class: "h-3 w-10/12 rounded bg-slate-200 dark:bg-slate-700"),
              tag.div(class: "h-3 w-10/12 rounded bg-slate-200 dark:bg-slate-700"),
              tag.div(class: "h-3 w-10/12 rounded bg-slate-200 dark:bg-slate-700")
            ])
          }
        ])
      }
    }
  } %>
<% end %>
