<%# ðŸŽ¯ Tab wrapper with presentation role %>
<%= render Pathogen::BaseComponent.new(**@wrapper_arguments) do %>
  <%# ðŸŽ¨ Tab button with proper ARIA attributes %>
  <%= render Pathogen::BaseComponent.new(**@system_arguments) do %>
    <span class="flex items-center">
      <%# ðŸŽ¨ Icon if present %>
      <% if icon %>
        <span aria-hidden="true">
          <%= icon %>
        </span>
      <% end %>

      <%# ðŸ“ Tab text %>
      <span>
        <%= @text %>
      </span>

      <%# ðŸŽ¯ Count badge if present %>
      <% if count %>
        <span aria-hidden="true">
          <%= count %>
        </span>
      <% end %>
    </span>
  <% end %>
<% end %>
