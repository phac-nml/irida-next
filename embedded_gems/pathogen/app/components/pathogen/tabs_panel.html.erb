<%# 🎯 Tabs Panel Container %>
<%= render Pathogen::BaseComponent.new(**@system_arguments) do %>
  <%# 🎨 Tab List %>
  <%= render Pathogen::BaseComponent.new(**@body_arguments) do %>
    <%# 📝 Individual Tabs %>
    <% tabs.each do |tab| %>
      <%= tab %>
    <% end %>
  <% end %>

  <%# 🎯 Tab Content Container %>
  <div id="<%= @id %>" class="mt-4" role="tabpanel">
    <%= content %>
  </div>
<% end %>
