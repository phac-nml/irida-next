<%# Main pagination container %>
<%= render Pathogen::BaseComponent.new(
      tag: :nav,
      **system_arguments,
      role: "navigation",
      "aria-label": aria_label,
      "aria-live": aria_live
    ) do %>
  <div
    class="
      py-4 px-4 sm:px-6 bg-white dark:bg-slate-900 border-t border-slate-200
      dark:border-slate-700
    "
  >
    <%# Responsive layout with flex-wrap %>
    <div class="flex flex-wrap items-center justify-between gap-x-6 gap-y-4">
      <%# Left section: Page info and size selector %>
      <div class="flex flex-wrap items-center gap-x-4 gap-y-2">
        <%= render ::Pathogen::Pagination::PageInfoComponent.new(
          pagy: pagy,
          item_name: item_name,
        ) %>

        <div class="w-px h-6 bg-slate-300 dark:bg-slate-600 hidden sm:block"></div>

        <%= render ::Pathogen::Pagination::PageSizeSelectComponent.new(
          pagy: pagy,
          page_sizes: page_sizes,
          request: request,
        ) %>
      </div>

      <%# Center section: Navigation links %>
      <% if pagy.pages > 1 %>
        <div class="flex-grow flex justify-center min-w-full sm:min-w-0">
          <%= render ::Pathogen::Pagination::PageLinksComponent.new(
            pagy: pagy,
            request: request,
          ) %>
        </div>
      <% end %>

      <%# Right section: Jump to page (only in full mode) %>
      <% if mode == :full && pagy.pages > 1 %>
        <div class="flex items-center">
          <%= render ::Pathogen::Pagination::JumpToComponent.new(pagy: pagy, request: request) %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
