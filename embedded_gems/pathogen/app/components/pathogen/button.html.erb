<%= render @base_button_class.new(**@system_arguments) do -%>
  <% if leading_visual %>
    <%= leading_visual %>
  <% end %>
  <span><%= trimmed_content %></span>
  <% if trailing_visual %>
    <% if @trailing_visual_counter %>
      <span class="sr-only">(<%= trailing_visual %>)</span>
      <%= trailing_visual %>
    <% else %>
      <%= trailing_visual %>
    <% end %>
  <% end %>
<% end %>
