<div
  data-controller="<%= @system_arguments[:data][:controller] %>"
  data-pathogen--tabs-default-index-value="<%= @system_arguments[:data]['pathogen--tabs-default-index-value'] %>"
  data-pathogen--tabs-sync-url-value="<%= @system_arguments[:data]['pathogen--tabs-sync-url-value'] %>"
>
  <nav
    id="<%= @id %>"
    role="tablist"
    aria-label="<%= @label %>"
    aria-orientation="<%= @orientation %>"
    <%= tag.attributes(@system_arguments.except(:id, :data)) %>
    class="<%= class_names('flex flex-col sm:flex-row sm:items-stretch sm:border-b sm:border-slate-200 sm:dark:border-slate-700', @system_arguments[:class]) %>"
  >
    <%# Tab list container %>
    <div
      class="w-full flex flex-wrap -mb-px border-b border-slate-200 dark:border-slate-700 text-sm font-medium text-center text-slate-500 dark:text-slate-400"
      role="presentation"
    >
      <% tabs.each do |tab| %>
        <%= tab %>
      <% end %>
    </div>

    <%# Right content area %>
    <% if right_content? %>
      <div class="items-center shrink-0 mt-3 sm:mt-0 w-full sm:w-auto sm:ml-4 sm:-mb-px">
        <%= right_content %>
      </div>
    <% end %>
  </nav>

  <%# Panel container %>
  <div class="mt-4">
    <% panels.each do |panel| %>
      <%= panel %>
    <% end %>
  </div>
</div>
