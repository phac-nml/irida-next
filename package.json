{
  "name": "irida-next",
  "private": true,
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "axe-core": "^4.11.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2"
  },
  "scripts": {
    "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}'",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,css,json,md,yml,yaml}'",
    "format:changed": "prettier --write",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build:css": "pnpx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify",
    "dev:css": "pnpx @tailwindcss/cli -i ./app/assets/stylesheets/application.tailwind.css -o ./app/assets/builds/application.css --minify --watch"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "flowbite": "^3.1.2",
    "tailwindcss": "^4.1.18"
  }
}
