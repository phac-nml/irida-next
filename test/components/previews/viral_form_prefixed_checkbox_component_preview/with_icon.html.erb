<%= form_with do |form| %>
  <%= viral_prefixed_checkbox(form: form, name: "prefixed", value: true, label: "Checkbox Label", checked: true) do |checkbox| %>
    <%= checkbox.with_prefix do %>
      <%= viral_icon(name: :exclamation_circle, color: :warning, classes: "h-5 w-5") %>
    <% end %>
  <% end %>
<% end %>
