<%= form_with(url: "#", data: { controller: "viral--beta-select2", "viral--beta-select2-trigger-type-value": "click" }) do |form| %>
  <label for="unique_id">Select User</label>

  <%= viral_prefixed_beta_select2(form:, name: :user, id: "unique_id", selected_value: 1, placeholder: 'Select User') do |select| %>
    <% (1..50).each do |num| %>
      <% select.with_option(
                      value: num,
                      label: "User #{num}",
                    ) do %>
        <span class="pointer-events-none block font-semibold text-slate-900 dark:text-slate-400">
          <%= "User #{num}" %>
        </span>
      <% end %>

      <%= select.with_empty_state do %>
        No users found
      <% end %>
    <% end %>
  <% end %>
<% end %>
