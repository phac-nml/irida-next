<%# Edge case: Custom styling classes %>
<%= render Pathogen::TabsPanel.new(
  id: "custom-classes-tabs",
  body_arguments: {
    class: "bg-slate-100 dark:bg-slate-800 rounded-lg p-2"
  }
) do |tabs| %>
  <% tabs.with_tab(
    id: "tab-1",
    controls: "panel-1",
    text: "Custom Style",
    href: "/custom",
    selected: true,
    system_arguments: {
      class: "bg-white dark:bg-slate-900 rounded-lg shadow-sm",
    },
  ) %>

  <% tabs.with_tab(
    id: "tab-2",
    controls: "panel-2",
    text: "Also Custom",
    href: "/also-custom",
    system_arguments: {
      class: "bg-white dark:bg-slate-900 rounded-lg shadow-sm",
    },
  ) %>
<% end %>

<%# Panels %>
<div id="panel-1" role="tabpanel" aria-labelledby="tab-1">
  <div class="p-4 bg-white dark:bg-slate-900 rounded-lg shadow-sm">
    <p>Custom styled panel content</p>
  </div>
</div>

<div id="panel-2" role="tabpanel" aria-labelledby="tab-2" hidden>
  <div class="p-4 bg-white dark:bg-slate-900 rounded-lg shadow-sm">
    <p>Custom styled panel content</p>
  </div>
</div>
