<%# Tabs with pre-selected tab %>
<%= render Pathogen::TabsPanel.new(id: "selected-tabs") do |tabs| %>
  <% tabs.with_tab(id: "tab-1", controls: "panel-1", text: "First", href: "/first") %>

  <% tabs.with_tab(
    id: "tab-2",
    controls: "panel-2",
    text: "Second",
    href: "/second",
    selected: true,
  ) %>

  <% tabs.with_tab(id: "tab-3", controls: "panel-3", text: "Third", href: "/third") %>
<% end %>

<%# Panels %>
<div id="panel-1" role="tabpanel" aria-labelledby="tab-1" hidden>
  <p class="p-4">First panel content</p>
</div>

<div id="panel-2" role="tabpanel" aria-labelledby="tab-2">
  <p class="p-4">Second panel content (pre-selected)</p>
</div>

<div id="panel-3" role="tabpanel" aria-labelledby="tab-3" hidden>
  <p class="p-4">Third panel content</p>
</div>
