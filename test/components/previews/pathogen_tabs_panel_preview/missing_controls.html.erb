<%# Edge case: Missing panel controls %>
<%= render Pathogen::TabsPanel.new(id: "missing-controls-tabs") do |tabs| %>
  <% tabs.with_tab(
    id: "tab-1",
    controls: "non-existent-panel",
    text: "Missing Panel",
    href: "/missing",
  ) %>

  <% tabs.with_tab(
    id: "tab-2",
    controls: "panel-2",
    text: "Valid Panel",
    href: "/valid",
  ) %>
<% end %>

<%# Only one panel exists %>
<div id="panel-2" role="tabpanel" aria-labelledby="tab-2">
  <p class="p-4">This is the only panel that exists</p>
</div>
