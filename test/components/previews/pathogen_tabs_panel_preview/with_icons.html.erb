<%# Tabs with icons %>
<%= render Pathogen::TabsPanel.new(id: "icon-tabs") do |tabs| %>
  <% tabs.with_tab(
    id: "tab-1",
    controls: "panel-1",
    text: "Dashboard",
    href: "/dashboard",
    selected: true
  ) do |tab| %>
    <%= tab.with_icon(icon: "chart-line") %>
  <% end %>

  <% tabs.with_tab(
    id: "tab-2",
    controls: "panel-2",
    text: "Analytics",
    href: "/analytics"
  ) do |tab| %>
    <%= tab.with_icon(icon: "chart-bar") %>
  <% end %>

  <% tabs.with_tab(
    id: "tab-3",
    controls: "panel-3",
    text: "Reports",
    href: "/reports"
  ) do |tab| %>
    <%= tab.with_icon(icon: "file-text") %>
  <% end %>
<% end %>

<%# Panels %>
<div id="panel-1" role="tabpanel" aria-labelledby="tab-1">
  <p class="p-4">Dashboard panel content</p>
</div>

<div id="panel-2" role="tabpanel" aria-labelledby="tab-2" hidden>
  <p class="p-4">Analytics panel content</p>
</div>

<div id="panel-3" role="tabpanel" aria-labelledby="tab-3" hidden>
  <p class="p-4">Reports panel content</p>
</div>
