<%# Tabs with custom body content %>
<%= render Pathogen::TabsPanel.new(id: "custom-tabs") do |tabs| %>
  <% tabs.with_tab(
    id: "tab-1",
    controls: "panel-1",
    text: "Overview",
    href: "/overview",
    selected: true
  ) do |tab| %>
    <%= tab.with_icon(icon: "house") %>
    <span class="ml-2">Overview</span>
    <%= tab.count { "New" } %>
  <% end %>

  <% tabs.with_tab(
    id: "tab-2",
    controls: "panel-2",
    text: "Details",
    href: "/details"
  ) do |tab| %>
    <%= tab.with_icon(icon: "info") %>
    <span class="ml-2">Details</span>
    <%= tab.count { "2" } %>
  <% end %>

  <% tabs.with_tab(
    id: "tab-3",
    controls: "panel-3",
    text: "Settings",
    href: "/settings"
  ) do |tab| %>
    <%= tab.with_icon(icon: "gear") %>
    <span class="ml-2">Settings</span>
    <%= tab.count { "1" } %>
  <% end %>
<% end %>

<%# Panels %>
<div id="panel-1" role="tabpanel" aria-labelledby="tab-1">
  <div class="p-4">
    <h3 class="text-lg font-medium">Overview Content</h3>
    <p class="mt-2">This tab has a custom layout with icon, text, and count.</p>
  </div>
</div>

<div id="panel-2" role="tabpanel" aria-labelledby="tab-2" hidden>
  <div class="p-4">
    <h3 class="text-lg font-medium">Details Content</h3>
    <p class="mt-2">This tab has a custom layout with icon, text, and count.</p>
  </div>
</div>

<div id="panel-3" role="tabpanel" aria-labelledby="tab-3" hidden>
  <div class="p-4">
    <h3 class="text-lg font-medium">Settings Content</h3>
    <p class="mt-2">This tab has a custom layout with icon, text, and count.</p>
  </div>
</div>
