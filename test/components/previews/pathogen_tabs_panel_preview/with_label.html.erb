<%# Navigation with a descriptive label %>
<%= render Pathogen::TabsPanel.new(
  id: "labeled-nav",
  label: "Main Navigation"
) do |nav| %>
  <% nav.with_tab(id: "nav-1", text: "Home", href: "/home", selected: true) %>

  <% nav.with_tab(id: "nav-2", text: "Profile", href: "/profile") %>

  <% nav.with_tab(id: "nav-3", text: "Settings", href: "/settings") %>
<% end %>

<%# Content sections %>
<div id="home-content" class="p-4">
  <p>Home content</p>
</div>

<div id="profile-content" class="p-4">
  <p>Profile content</p>
</div>

<div id="settings-content" class="p-4">
  <p>Settings content</p>
</div>
