<%= render Pathogen::TabsPanel.new(id: "labeled-tabs", label: "Project Navigation") do |tabs| %>
  <% tabs.with_tab(
    controls: "labeled-tab-1",
    selected: true,
    href: "#labeled-tab-1",
    id: "labeled-tab-1",
    text: "Overview",
  ) %>
  <% tabs.with_tab(
    controls: "labeled-tab-2",
    href: "#labeled-tab-2",
    id: "labeled-tab-2",
    text: "Details",
  ) %>
  <% tabs.with_tab(
    controls: "labeled-tab-3",
    href: "#labeled-tab-3",
    id: "labeled-tab-3",
    text: "Settings",
  ) %>

  <div id="labeled-tab-1" class="p-4">
    <h3 class="text-lg font-medium">Overview Content</h3>
    <p class="mt-2">This is the overview tab content with an accessible label.</p>
  </div>

  <div id="labeled-tab-2" class="p-4 hidden">
    <h3 class="text-lg font-medium">Details Content</h3>
    <p class="mt-2">This is the details tab content with an accessible label.</p>
  </div>

  <div id="labeled-tab-3" class="p-4 hidden">
    <h3 class="text-lg font-medium">Settings Content</h3>
    <p class="mt-2">This is the settings tab content with an accessible label.</p>
  </div>
<% end %>
