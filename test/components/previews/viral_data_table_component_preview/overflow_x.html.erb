<% table_data = [{id: 1, name: "data one with a very very very very very very very very very very very very very very very very very very long name", pill: "green", date: DateTime.new(2024, 01, 01), time_ago_date: (DateTime.now - (1/1440.0))},
{id: 2, name: "data two", pill: "blue", date: DateTime.new(2022,07,15), time_ago_date: (DateTime.now - (1/24.0))}
]%>

<%= viral_data_table(table_data, id: 'preview_table') do |table| %>
  <% table.with_column("id") do |row| %>
    <%= row[:id] %>
  <% end %>
  <% table.with_column("name") do |row| %>
    <%= row[:name] %>
  <% end %>
  <% table.with_column("pill with conditional") do |row| %>
    <% if row[:pill] == 'green' %>
      <%= viral_pill(text: "this pill is green", color: :green, border: true) %>
    <% elsif row[:pill] == 'blue' %>
      <%= viral_pill(text: "this pill is blue", color: :blue, border: true) %>
    <% end %>
  <% end %>
  <% table.with_column("date") do |row| %>
    <%= local_time(row[:date], :full_date) %>
  <% end %>
  <% table.with_column("time ago") do |row| %>
    <%= local_time_ago(row[:time_ago_date]) %>
  <% end %>
  <% table.with_column(I18n.t('viral.data_table_component.header.action')) do |row| %>
    <%= link_to(
      "Action 1",
      "",
      class:
        "font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline cursor-pointer"
    ) %>
    <%= link_to(
      "Action 2",
      "",
      class:
        "font-medium text-blue-600 underline dark:text-blue-500 hover:no-underline cursor-pointer"
    ) %>
  <% end %>
<% end %>
