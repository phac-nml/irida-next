<%= form_with(url: "#", data:
                      if Flipper.enabled?(:flowbite_replacement)
                        { controller: "viral--select2", "viral--select2-trigger-type-value": "click" }
                      else
                        { controller: "viral--flowbite-select2", "viral--flowbite-select2-trigger-type-value": "click" }
                      end
  ) do |form| %>
  <label for="unique_id">Select User</label>
  <%= viral_select2(form:, name: :user, id: "unique_id") do |select| %>
    <% (1..50).each do |num| %>
      <% select.with_option(
                      value: num,
                      label: "User #{num}",
                    ) do %>
        <span
          class="
            text-slate-900 dark:text-slate-400 font-semibold block pointer-events-none
          "
        >
          <%= "User #{num}" %>
        </span>
      <% end %>
      <%= select.with_empty_state do %>
        No users found
      <% end %>
    <% end %>
  <% end %>
  <%= form.submit "Submit",
              class: "button button-primary",
              disabled: true,
              data:
                if Flipper.enabled?(:flowbite_replacement)
                  { "viral--select2-target": "submitButton" }
                else
                  { "viral--flowbite-select2-target": "submitButton" }
                end %>
<% end %>
