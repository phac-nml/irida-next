<%= form_with(url: "#", data: {controller: "viral--select2"}) do |form| %>
  <label for="unique_id">Select User</label>
  <%= viral_select2(form:, name: :user, id: "unique_id") do |select| %>
    <% (1..50).each do |num| %>
      <% select.with_option(
                      value: num,
                      label: "User #{num}",
                    ) do %>
        <span
          class="
            text-slate-900 dark:text-slate-400 font-semibold block pointer-events-none
          "
        >
          <%= "User #{num}" %>
        </span>
      <% end %>
      <%= select.with_empty_state do %>
        No users found
      <% end %>
    <% end %>
  <% end %>
  <%= form.submit "Submit",
              class: "button button--size-default button--state-primary",
              disabled: true,
              data: {
                "viral--select2-target": "submitButton",
              } %>
<% end %>
