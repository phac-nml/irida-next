<div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <%= pathogen_heading(level: 1, class: "mb-4") do %>
      <%= pathogen_icon(:text_t, color: :primary, size: :xl, class: "inline mr-3") %>
      Pathogen Typography System
    <% end %>
    <%= pathogen_text(variant: :muted, class: "text-lg max-w-3xl mx-auto") do %>
      A comprehensive, harmonious typography system with reusable components for consistent text styling
      across light and dark modes, with professional font selection and full accessibility support.
    <% end %>
  </div>

  <!-- Component Overview -->
  <div class="mb-12">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <%= pathogen_heading(level: 2, class: "mb-6 flex items-center") do %>
        <%= pathogen_icon(:ruler, color: :primary, class: "mr-3") %>
        Typography Scale
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 1) do %>
            Heading 1
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Semantic headings h1-h6</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 2) do %>
            Heading 2
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Use for major section headings</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 3) do %>
            Heading 3
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Use for subsection headings</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 4) do %>
            Heading 4
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Use for minor section headings</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 5) do %>
            Heading 5
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Use for small section headings</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_heading(level: 6) do %>
            Heading 6
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Use for smallest headings and labels</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>
      </div>

      <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_text do %>
            Body Text - 16px - Standard paragraphs and main content
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3 mt-2">Use for paragraphs and body content</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_text</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_lead do %>
            Lead Paragraph - 20px - Larger introductory paragraphs
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3 mt-2">Use for introductory paragraphs</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_lead</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_supporting do %>
            Supporting Text - 14px - Captions and labels
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3 mt-2">Use for captions and labels</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_supporting</div>
        </div>

        <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg border border-slate-200 dark:border-slate-600">
          <%= pathogen_eyebrow do %>
            Eyebrow Text - 12px - Small uppercase text above headings
          <% end %>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3 mt-2">Use above headings for context</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_eyebrow</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Reference -->
  <div class="mb-12">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <%= pathogen_heading(level: 2, class: "mb-6 flex items-center") do %>
        <%= pathogen_icon(:squares_four, color: :primary, class: "mr-3") %>
        Component Quick Reference
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Semantic headings h1-h6</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_heading</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Body paragraphs (16px)</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_text</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Lead paragraphs (20px)</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_lead</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Supporting text (14px)</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_supporting</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Eyebrow text (12px)</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_eyebrow</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Inline code</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_code</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Code blocks</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_code_block</div>
        </div>

        <div>
          <div class="text-sm text-slate-600 dark:text-slate-400 mb-3">Lists (ordered/unordered)</div>
          <div class="font-mono text-xs text-blue-600 dark:text-blue-400">pathogen_list</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Color Variants -->
  <div>
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <%= pathogen_heading(level: 2, class: "mb-6 flex items-center") do %>
        <%= pathogen_icon(:palette, color: :primary, class: "mr-3") %>
        Color Variants
      <% end %>

      <div class="space-y-4">
        <div>
          <%= pathogen_heading(level: 3, variant: :default) do %>
            Default - Primary text color
          <% end %>
        </div>

        <div>
          <%= pathogen_heading(level: 3, variant: :muted) do %>
            Muted - Secondary text color
          <% end %>
        </div>

        <div>
          <%= pathogen_heading(level: 3, variant: :subdued) do %>
            Subdued - Medium contrast text
          <% end %>
        </div>

        <div class="p-4 bg-slate-900 dark:bg-slate-100 rounded-lg">
          <%= pathogen_heading(level: 3, variant: :inverse) do %>
            Inverse - Light text for dark backgrounds
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
