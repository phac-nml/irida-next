<div class="space-y-12 p-8">
  <div>
    <h2 class="mb-4 text-2xl font-bold">Article Preset</h2>
    <div class="rounded-lg border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-800">
      <%= pathogen_typography_preset(:article) do |group| %>
        <%= group.with_eyebrow { "Tutorial" } %>
        <%= group.with_heading { "Getting Started with Pathogen Typography" } %>
        <%= group.with_metadata { "Published January 15, 2024 Â· 5 min read" } %>
      <% end %>
    </div>
  </div>

  <div>
    <h2 class="mb-4 text-2xl font-bold">Card Preset</h2>
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
      <div class="rounded-lg border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800">
        <%= pathogen_typography_preset(:card) do |group| %>
          <%= group.with_heading { "Sample Analysis" } %>
          <%= group.with_metadata { "3 samples" } %>
        <% end %>
      </div>

      <div class="rounded-lg border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800">
        <%= pathogen_typography_preset(:card) do |group| %>
          <%= group.with_heading { "Workflow Results" } %>
          <%= group.with_metadata { "Completed 2 hours ago" } %>
        <% end %>
      </div>

      <div class="rounded-lg border border-slate-200 bg-white p-4 dark:border-slate-700 dark:bg-slate-800">
        <%= pathogen_typography_preset(:card) do |group| %>
          <%= group.with_eyebrow { "Project" } %>
          <%= group.with_heading { "COVID-19 Study" } %>
          <%= group.with_metadata { "12 active members" } %>
        <% end %>
      </div>
    </div>
  </div>

  <div>
    <h2 class="mb-4 text-2xl font-bold">Section Preset</h2>
    <div class="space-y-8 rounded-lg border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-800">
      <%= pathogen_typography_preset(:section) do |group| %>
        <%= group.with_heading { "Recent Activity" } %>
        <%= group.with_metadata { "Last updated 5 minutes ago" } %>
      <% end %>

      <%= pathogen_text(tag: :p) { "List of recent activities and changes in your workspace." } %>
    </div>
  </div>

  <div>
    <h2 class="mb-4 text-2xl font-bold">Dialog Preset</h2>
    <div class="mx-auto max-w-md rounded-lg border border-slate-200 bg-white p-6 shadow-lg dark:border-slate-700 dark:bg-slate-800">
      <%= pathogen_typography_preset(:dialog) do |group| %>
        <%= group.with_heading { "Confirm Deletion" } %>
      <% end %>

      <%= pathogen_text(tag: :p, variant: :muted, class: "mt-3") { "Are you sure you want to delete this sample? This action cannot be undone." } %>

      <div class="mt-6 flex gap-3">
        <button class="rounded-lg bg-red-600 px-4 py-2 text-sm font-medium text-white">Delete</button>
        <button class="rounded-lg border border-slate-300 bg-white px-4 py-2 text-sm font-medium text-slate-700 dark:border-slate-600 dark:bg-slate-700 dark:text-slate-300">Cancel</button>
      </div>
    </div>
  </div>

  <div>
    <h2 class="mb-4 text-2xl font-bold">Form Section Preset</h2>
    <div class="rounded-lg border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-800">
      <%= pathogen_typography_preset(:form_section) do |group| %>
        <%= group.with_heading { "Sample Information" } %>
        <%= group.with_metadata { "Required fields are marked with *" } %>
      <% end %>

      <div class="mt-4 space-y-4">
        <div>
          <label class="block text-sm font-medium">Sample Name *</label>
          <input type="text" class="mt-1 block w-full rounded-lg border border-slate-300 p-2 dark:border-slate-600 dark:bg-slate-700" placeholder="Enter sample name">
        </div>
        <div>
          <label class="block text-sm font-medium">Description</label>
          <textarea class="mt-1 block w-full rounded-lg border border-slate-300 p-2 dark:border-slate-600 dark:bg-slate-700" rows="3" placeholder="Optional description"></textarea>
        </div>
      </div>
    </div>
  </div>

  <div>
    <h2 class="mb-4 text-2xl font-bold">Preset with Overrides</h2>
    <div class="rounded-lg border border-slate-200 bg-white p-6 dark:border-slate-700 dark:bg-slate-800">
      <%= pathogen_typography_preset(:card, heading_variant: :subdued, spacing: :spacious) do |group| %>
        <%= group.with_heading { "Custom Card" } %>
        <%= group.with_metadata { "Using card preset with subdued variant and spacious spacing" } %>
      <% end %>
    </div>
  </div>
</div>
