<%# Navigation with icons %>
<%= pathogen_tab_list(id: "icon-nav") do |nav| %>
  <% nav.with_tab(
    id: "nav-1",
    text: "Home",
    href: "/home",
    selected: true,
  ) do |tab| %>
    <%= tab.with_icon(icon: ICON::BANK) %>
  <% end %>

  <% nav.with_tab(
    id: "nav-2",
    text: "Profile",
    href: "/profile",
  ) do |tab| %>
    <%= tab.with_icon(icon: ICON::USERS) %>
  <% end %>

  <% nav.with_tab(
    id: "nav-3",
    text: "Settings",
    href: "/settings",
  ) do |tab| %>
    <%= tab.with_icon(icon: ICON::GEAR_SIX) %>
  <% end %>
<% end %>
