<%# Navigation with count badges %>
<%= pathogen_tab_list(id: "count-nav") do |nav| %>
  <% nav.with_tab(
    id: "nav-1",
    text: "Home",
    href: "/home",
    selected: true,
  ) do |tab| %>
    <%= tab.with_count(count: 3) %>
  <% end %>

  <% nav.with_tab(
    id: "nav-2",
    text: "Profile",
    href: "/profile",
  ) do |tab| %>
    <%= tab.with_count(count: 5) %>
  <% end %>

  <% nav.with_tab(
    id: "nav-3",
    text: "Settings",
    href: "/settings",
  ) do |tab| %>
    <%= tab.with_count(count: 2) %>
  <% end %>
<% end %>
