<%# Focus management %>
<%= pathogen_tab_list(
  id: "focus-management-tabs",
  label: "Focus Management"
) do |tabs| %>
  <% tabs.with_tab(
    id: "tab-1",
    controls: "panel-1",
    text: "First",
    href: "#",
    selected: true,
  ) %>

  <% tabs.with_tab(id: "tab-2", controls: "panel-2", text: "Second", href: "#") %>

  <% tabs.with_tab(id: "tab-3", controls: "panel-3", text: "Third", href: "#") %>
<% end %>

<%# Panels %>
<div id="panel-1" role="tabpanel" aria-labelledby="tab-1">
  <div class="p-4">
    <h3 class="text-lg font-medium">First Panel</h3>
    <p class="mt-2">Check focus management:</p>
    <ul class="list-disc list-inside mt-2">
      <li>Focus moves to selected tab on load</li>
      <li>Focus moves with keyboard navigation</li>
      <li>Focus stays within tablist</li>
      <li>Focus moves to panel content when activated</li>
    </ul>
  </div>
</div>

