<%
# Create a simple user model for this preview
user_model = Struct.new(:active, :model_name, :to_key, :persisted?) do
  def self.model_name
    ActiveModel::Name.new(self, nil, 'User')
  end

  def model_name
    self.class.model_name
  end

  def to_key
    nil
  end

  def persisted?
    false
  end
end.new(true)
%>

<div class="p-4 border border-gray-200 rounded-lg">
  <%= form_with model: user_model, url: '#', local: true, class: 'space-y-4' do |form| %>
    <div class="mb-4">
      <%= form.check_box(:active) %>
    </div>
  <% end %>
  <div class="mt-4 p-3 bg-gray-50 rounded text-sm">
    <strong>Note:</strong> This checkbox is bound to a boolean field on a model object.
  </div>
</div>