<div class="p-4 border border-gray-200 rounded-lg">
  <%= form_with url: '#', local: true, class: 'space-y-4' do |form| %>
    <div class="mb-4">
      <%= form.check_box(:email_notifications, {
            aria: {
              label: 'Enable email notifications',
              describedby: 'email-notifications-help'
            }
          }) %>
      <div id="email-notifications-help" class="text-sm text-gray-600 mt-1">
        Check this box to receive email notifications about important updates.
      </div>
    </div>
  <% end %>
  <div class="mt-4 p-3 bg-gray-50 rounded text-sm">
    <strong>Note:</strong> This checkbox includes ARIA attributes for accessibility.
  </div>
</div>