<%# Workflow step selection example %>
<div class="p-6 bg-white rounded-lg border border-gray-200 shadow-sm max-w-md">
  <h3 class="text-lg font-semibold mb-4">Select Workflow Steps</h3>

  <div class="space-y-3">
    <label class="flex items-start space-x-3 cursor-pointer">
      <%= check_box_tag "workflow_steps[]",
      "quality_control",
      false,
      {
        id: "step-quality-control",
        aria: {
          label: "Quality Control Step",
        },
        data: {
          step: "quality_control",
          action: "input->workflow#toggleStep",
        },
      } %>
      <div class="flex-1">
        <span class="font-medium">Quality Control</span>
        <p class="text-sm text-gray-600">Remove low-quality reads and trim adapters</p>
      </div>
    </label>

    <label class="flex items-start space-x-3 cursor-pointer">
      <%= check_box_tag "workflow_steps[]",
      "assembly",
      true,
      {
        id: "step-assembly",
        aria: {
          label: "Assembly Step",
        },
        data: {
          step: "assembly",
          action: "input->workflow#toggleStep",
        },
      } %>
      <div class="flex-1">
        <span class="font-medium">Assembly</span>
        <p class="text-sm text-gray-600">Assemble reads into contigs</p>
      </div>
    </label>

    <label class="flex items-start space-x-3 cursor-pointer">
      <%= check_box_tag "workflow_steps[]",
      "annotation",
      false,
      {
        id: "step-annotation",
        aria: {
          label: "Annotation Step",
        },
        data: {
          step: "annotation",
          action: "input->workflow#toggleStep",
        },
      } %>
      <div class="flex-1">
        <span class="font-medium">Annotation</span>
        <p class="text-sm text-gray-600">Predict and annotate genes</p>
      </div>
    </label>

    <label class="flex items-start space-x-3 cursor-pointer opacity-50">
      <%= check_box_tag "workflow_steps[]",
      "phylogeny",
      false,
      {
        id: "step-phylogeny",
        disabled: true,
        aria: {
          label: "Phylogeny Step (requires assembly)",
        },
        data: {
          step: "phylogeny",
          depends_on: "assembly",
        },
      } %>
      <div class="flex-1">
        <span class="font-medium">Phylogenetic Analysis</span>
        <p class="text-sm text-gray-600">Build phylogenetic trees (requires assembly)</p>
      </div>
    </label>
  </div>

  <div class="mt-6 pt-4 border-t border-gray-200">
    <div class="flex justify-between items-center text-sm text-gray-600">
      <span>Selected steps:
        <span id="selected-count">1</span></span>
      <button type="button" class="text-blue-600 hover:text-blue-700">Clear all</button>
    </div>
  </div>
</div>
