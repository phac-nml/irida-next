<div class="p-4 border border-gray-200 rounded-lg">
  <div class="mb-4">
    <%= check_box_tag('notifications', '1', false, {
          id: 'notifications',
          aria: {
            label: 'Enable email notifications',
            describedby: 'notifications-help'
          }
        }) %>
    <div id="notifications-help" class="text-sm text-gray-600 mt-1">
      Check this box to receive email notifications about updates.
    </div>
  </div>
  <div class="mt-4 p-3 bg-gray-50 rounded text-sm">
    <strong>Note:</strong> This checkbox includes ARIA attributes for improved accessibility.
  </div>
</div>