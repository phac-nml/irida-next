<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">Data Use & Ethical Compliance Example</h3>

    <div class="space-y-4">
      <div class="p-4 bg-slate-50 dark:bg-slate-800 rounded-lg">
        <h4 class="font-medium text-slate-900 dark:text-white mb-2">Data Use & Ethics</h4>
        <p class="text-sm text-slate-600 dark:text-slate-400">
          Before submitting genomic data you must confirm compliance with
          jurisdictional data governance, appropriate de-identification, and
          permitted secondary use. Review institutional policies and consent
          documentation prior to proceeding.
        </p>
      </div>

      <%= pathogen_checkbox(
        :confirm_data_deidentified,
        {
          label: "Data are de-identified per policy",
          help_text: "All direct identifiers removed / coded prior to upload",
          required: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :consent_verified,
        {
          label: "Consent scope verified",
          help_text: "Submission aligns with participant or program consent",
          required: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :legal_transfer_permitted,
        {
          label: "Cross-border transfer permitted (if applicable)",
          help_text: "Regulatory or data sharing agreement allows transfer",
          required: true,
        },
        "1",
        "0",
        form: form,
      ) %>
    </div>

    <div class="space-y-4">
      <h4 class="font-medium text-slate-700 dark:text-slate-300">Optional Analyses & Data Use</h4>

      <%= pathogen_checkbox(
        :enable_amr_detection,
        {
          label: "Run AMR gene detection",
          help_text: "Screen assemblies for antimicrobial resistance markers",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :allow_reference_integration,
        {
          label: "Integrate with public reference databases",
          help_text: "Permit matching to curated reference panels",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :permit_secondary_analysis,
        {
          label: "Permit de-identified secondary analysis",
          help_text: "Allow aggregate use for method validation / benchmarking",
        },
        "1",
        "0",
        form: form,
      ) %>
    </div>

    <div
      class="
        p-3 bg-amber-50 dark:bg-amber-900/20 border border-amber-200
        dark:border-amber-800 rounded-lg
      "
    >
      <p class="text-sm text-amber-800 dark:text-amber-200">
        <strong>Important:</strong>
        The first three confirmations are mandatory prior to data upload.
        Optional analyses and secondary use preferences can be modified later
        in project settings.
      </p>
    </div>
  </div>
<% end %>
