<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">Sequencing Output & Data Sharing Example</h3>

    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-slate-700 dark:text-slate-300">Primary Processing Outputs</legend>

      <%= pathogen_checkbox(
        :generate_fastqc,
        {
          label: "Generate FastQC report",
          help_text: "Produce standard per-sample quality metrics",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :perform_assembly,
        {
          label: "Perform de novo assembly",
          help_text: "Run SPAdes-based assembly on reads",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :annotate_genome,
        { label: "Annotate genome", help_text: "Run Prokka annotation workflow" },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>

    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-slate-700 dark:text-slate-300">Data Governance & Sharing</legend>

      <%= pathogen_checkbox(
        :share_consensus_sequences,
        {
          label: "Share consensus assemblies",
          help_text: "Allow downstream users to view assembled contigs",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :allow_public_health_export,
        {
          label: "Permit public health export",
          help_text: "Enable export of derived metrics to surveillance feeds",
        },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>
  </div>
<% end %>
