<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">Form Group Example</h3>

    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-slate-700 dark:text-slate-300">Communication Preferences</legend>

      <%= pathogen_checkbox(
        :email_notifications,
        {
          label: "Email notifications",
          help_text: "Receive important updates via email",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :sms_notifications,
        {
          label: "SMS notifications",
          help_text: "Receive urgent alerts via text message",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :push_notifications,
        { label: "Push notifications", help_text: "Get notified in the app" },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>

    <fieldset class="space-y-3">
      <legend class="text-sm font-medium text-slate-700 dark:text-slate-300">Privacy Settings</legend>

      <%= pathogen_checkbox(
        :profile_public,
        {
          label: "Make profile public",
          help_text: "Allow other users to see your profile",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :data_sharing,
        {
          label: "Allow data sharing",
          help_text: "Share anonymous usage data for improvements",
        },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>
  </div>
<% end %>
