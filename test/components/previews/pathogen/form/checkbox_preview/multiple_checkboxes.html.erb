<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">Multiple Genomic Options Example</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-3">
        <h4 class="font-medium text-slate-700 dark:text-slate-300">Core Analyses</h4>

        <%= pathogen_checkbox(
          :qc_metrics,
          { label: "Generate QC metrics" },
          "1",
          "0",
          form: form,
        ) %>
        <%= pathogen_checkbox(
          :genome_assembly,
          { label: "Perform genome assembly" },
          "1",
          "0",
          form: form,
        ) %>
        <%= pathogen_checkbox(
          :mlst_typing,
          { label: "Run MLST typing" },
          "1",
          "0",
          form: form,
        ) %>
      </div>

      <div class="space-y-3">
        <h4 class="font-medium text-slate-700 dark:text-slate-300">Extended Analyses (with details)</h4>

        <%= pathogen_checkbox(
          :amr_detection,
          {
            label: "Antimicrobial resistance detection",
            help_text: "Screen for known AMR markers (ResFinder / CARD)",
          },
          "1",
          "0",
          form: form,
        ) %>

        <%= pathogen_checkbox(
          :virulence_factors,
          {
            label: "Identify virulence factors",
            help_text: "Detect presence of curated virulence genes",
          },
          "1",
          "0",
          form: form,
        ) %>

        <%= pathogen_checkbox(
          :phylogenetic_tree,
          { label: "Build phylogenetic tree", help_text: "Generate SNP-based tree" },
          "1",
          "0",
          form: form,
        ) %>
      </div>
    </div>

    <div class="space-y-3">
      <h4 class="font-medium text-slate-700 dark:text-slate-300">Mixed States (Status Examples)</h4>

      <%= pathogen_checkbox(
        :plasmid_detection,
        { label: "Plasmid detection" },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :serotype_prediction,
        { label: "Serotype prediction", checked: true },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :wgmlst_typing,
        { label: "wgMLST typing (beta)", disabled: true },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :lineage_assignment,
        { label: "Lineage assignment (coming soon)", checked: true, disabled: true },
        "1",
        "0",
        form: form,
      ) %>
    </div>
  </div>
<% end %>
