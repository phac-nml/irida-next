<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">Multiple Checkboxes Example</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-3">
        <h4 class="font-medium text-slate-700 dark:text-slate-300">Basic Options</h4>

        <%= form.checkbox :basic_1, "1", label: "Basic option 1" %>
        <%= form.checkbox :basic_2, "1", label: "Basic option 2" %>
        <%= form.checkbox :basic_3, "1", label: "Basic option 3" %>
      </div>

      <div class="space-y-3">
        <h4 class="font-medium text-slate-700 dark:text-slate-300">With Help Text</h4>

        <%= form.checkbox :help_1, "1",
            label: "Help option 1",
            help_text: "This option includes helpful information" %>

        <%= form.checkbox :help_2, "1",
            label: "Help option 2",
            help_text: "Another option with additional context" %>

        <%= form.checkbox :help_3, "1",
            label: "Help option 3",
            help_text: "Third option with guidance" %>
      </div>
    </div>

    <div class="space-y-3">
      <h4 class="font-medium text-slate-700 dark:text-slate-300">Mixed States</h4>

      <%= form.checkbox :mixed_1, "1",
          label: "Default state" %>

      <%= form.checkbox :mixed_2, "1",
          label: "Checked state",
          checked: true %>

      <%= form.checkbox :mixed_3, "1",
          label: "Disabled state",
          disabled: true %>

      <%= form.checkbox :mixed_4, "1",
          label: "Checked and disabled",
          checked: true,
          disabled: true %>
    </div>
  </div>
<% end %>
