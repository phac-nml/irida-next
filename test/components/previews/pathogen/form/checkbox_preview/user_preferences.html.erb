<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-6">
    <h3 class="text-lg font-medium text-slate-900 dark:text-white">User Preferences Example</h3>

    <fieldset class="space-y-4">
      <legend class="text-base font-medium text-slate-700 dark:text-slate-300">Notification Settings</legend>

      <%= pathogen_checkbox(
        :email_digest,
        {
          label: "Daily email digest",
          help_text: "Receive a summary of daily activity",
          checked: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :push_mentions,
        {
          label: "Push notifications for mentions",
          help_text: "Get notified when someone mentions you",
          checked: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :sms_alerts,
        {
          label: "SMS alerts for urgent matters",
          help_text: "Receive text messages for critical updates",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :browser_notifications,
        {
          label: "Browser notifications",
          help_text: "Show notifications in your browser",
        },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>

    <fieldset class="space-y-4">
      <legend class="text-base font-medium text-slate-700 dark:text-slate-300">Privacy & Security</legend>

      <%= pathogen_checkbox(
        :two_factor_auth,
        {
          label: "Enable two-factor authentication",
          help_text: "Add an extra layer of security to your account",
          required: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :profile_visibility,
        {
          label: "Make profile visible to everyone",
          help_text: "Allow other users to see your profile information",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :activity_feed,
        {
          label: "Show activity in public feed",
          help_text: "Display your recent activity to other users",
        },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>

    <fieldset class="space-y-4">
      <legend class="text-base font-medium text-slate-700 dark:text-slate-300">Content Preferences</legend>

      <%= pathogen_checkbox(
        :auto_play_videos,
        {
          label: "Auto-play videos",
          help_text: "Automatically start playing video content",
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :show_recommendations,
        {
          label: "Show personalized recommendations",
          help_text: "Display content based on your interests",
          checked: true,
        },
        "1",
        "0",
        form: form,
      ) %>

      <%= pathogen_checkbox(
        :dark_mode,
        { label: "Prefer dark mode", help_text: "Use dark theme when available" },
        "1",
        "0",
        form: form,
      ) %>
    </fieldset>
  </div>
<% end %>
