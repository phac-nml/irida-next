<%= form_with(url: "#", builder: Pathogen::FormBuilders::PathogenFormBuilder, local: true) do |form| %>
  <div class="space-y-4">
  <h3 class="text-lg font-medium text-slate-900 dark:text-white">Basic Submission Configuration</h3>

    <%= pathogen_checkbox(
      :confirm_deidentification,
      {
        label: "Data are properly de-identified",
        help_text: "Required: no direct personal identifiers present",
        required: true,
      },
      "1",
      "0",
      form: form,
    ) %>

    <%= pathogen_checkbox(
      :enable_amr_detection,
      {
        label: "Enable AMR detection",
        help_text: "Screen sequences for antimicrobial resistance genes",
      },
      "1",
      "0",
      form: form,
    ) %>

    <%= pathogen_checkbox(
      :enable_virulence_scan,
      {
        label: "Enable virulence factor scan",
        help_text: "Identify presence of curated virulence genes",
      },
      "1",
      "0",
      form: form,
    ) %>
  </div>
<% end %>
