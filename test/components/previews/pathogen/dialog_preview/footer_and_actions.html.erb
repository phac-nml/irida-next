<div class="p-8 bg-gradient-to-br from-rose-50 to-pink-50 dark:from-rose-950 dark:to-pink-950 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= pathogen_icon(:rows, color: :primary, size: :xl, class: "inline mr-3") %>
      Footer & Actions
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Configure dialog footers with action buttons, learn best practices for button placement and hierarchy.
    </p>
  </div>

  <!-- Dialog with Footer and Multiple Actions -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:check_square, color: :primary, class: "mr-3") %>
      Multiple Action Buttons
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <p class="text-slate-700 dark:text-slate-300 mb-4">
        Standard pattern with cancel (secondary) and confirm (primary) actions:
      </p>

      <%= render(Pathogen::DialogComponent.new(id: 'multi-action-dialog', size: :medium, dismissible: true)) do |dialog| %>
        <% dialog.with_show_button(scheme: :primary, size: :medium) do %>
          Open Multi-Action Dialog
        <% end %>

        <% dialog.with_header do %>
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Save Changes?</h2>
        <% end %>

        <% dialog.with_body do %>
          <p class="text-slate-700 dark:text-slate-300">
            You have unsaved changes. Would you like to save them before leaving?
          </p>
        <% end %>

        <% dialog.with_footer do %>
          <div class="flex justify-end gap-3">
            <%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
              Cancel
            <% end %>
            <%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
              Don't Save
            <% end %>
            <%= render Pathogen::Button.new(scheme: :primary, data: { action: 'click->pathogen--dialog#close' }) do %>
              Save Changes
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Dialog Without Footer -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:note_blank, color: :primary, class: "mr-3") %>
      Dialog Without Footer
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <p class="text-slate-700 dark:text-slate-300 mb-4">
        Informational dialogs often don't need a footer. Users can close via ESC, backdrop, or header close button:
      </p>

      <%= render(Pathogen::DialogComponent.new(id: 'no-footer-dialog', size: :medium, dismissible: true)) do |dialog| %>
        <% dialog.with_show_button(scheme: :slate, size: :medium) do %>
          Open Info Dialog
        <% end %>

        <% dialog.with_header do %>
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Release Notes</h2>
        <% end %>

        <% dialog.with_body do %>
          <div class="space-y-3">
            <p class="text-slate-700 dark:text-slate-300 font-semibold">Version 2.5.0 - January 2025</p>
            <ul class="list-disc list-inside space-y-2 text-slate-700 dark:text-slate-300">
              <li>Added new dialog component with accessibility features</li>
              <li>Improved keyboard navigation across components</li>
              <li>Enhanced dark mode support</li>
              <li>Fixed scroll shadow behavior on mobile</li>
            </ul>
            <p class="text-sm text-slate-600 dark:text-slate-400 italic">
              Close this dialog with ESC, backdrop click, or the Ã— button
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Single Action Footer -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:check, color: :success, class: "mr-3") %>
      Single Action Footer
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <p class="text-slate-700 dark:text-slate-300 mb-4">
        Sometimes a single primary action is all you need:
      </p>

      <%= render(Pathogen::DialogComponent.new(id: 'single-action-dialog', size: :small, dismissible: true)) do |dialog| %>
        <% dialog.with_show_button(scheme: :primary, size: :medium) do %>
          Open Success Dialog
        <% end %>

        <% dialog.with_header do %>
          <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Success!</h2>
        <% end %>

        <% dialog.with_body do %>
          <div class="text-center space-y-3">
            <div class="w-16 h-16 bg-green-100 dark:bg-green-900/20 rounded-full flex items-center justify-center mx-auto">
              <%= pathogen_icon(:check_circle, color: :success, size: :xl) %>
            </div>
            <p class="text-slate-700 dark:text-slate-300">
              Your changes have been saved successfully.
            </p>
          </div>
        <% end %>

        <% dialog.with_footer do %>
          <div class="flex justify-center">
            <%= render Pathogen::Button.new(scheme: :primary, data: { action: 'click->pathogen--dialog#close' }) do %>
              Got it, thanks!
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Different Button Schemes -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:palette, color: :primary, class: "mr-3") %>
      Button Schemes & Hierarchy
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Destructive Action -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Destructive Action</h3>
        <%= render(Pathogen::DialogComponent.new(id: 'destructive-dialog', size: :small, dismissible: false)) do |dialog| %>
          <% dialog.with_show_button(scheme: :danger, size: :small) do %>
            Delete Item
          <% end %>

          <% dialog.with_header do %>
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Delete Confirmation</h2>
          <% end %>

          <% dialog.with_body do %>
            <p class="text-slate-700 dark:text-slate-300">
              This will permanently delete the item. This action cannot be undone.
            </p>
          <% end %>

          <% dialog.with_footer do %>
            <div class="flex justify-end gap-3">
              <%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
                Cancel
              <% end %>
              <%= render Pathogen::Button.new(scheme: :danger, data: { action: 'click->pathogen--dialog#close' }) do %>
                Delete
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Success Action -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-white mb-3">Success Action</h3>
        <%= render(Pathogen::DialogComponent.new(id: 'success-action-dialog', size: :small, dismissible: true)) do |dialog| %>
          <% dialog.with_show_button(scheme: :primary, size: :small) do %>
            Approve Request
          <% end %>

          <% dialog.with_header do %>
            <h2 class="text-lg font-semibold text-slate-900 dark:text-white">Approve Request</h2>
          <% end %>

          <% dialog.with_body do %>
            <p class="text-slate-700 dark:text-slate-300">
              Approve this request and notify the user?
            </p>
          <% end %>

          <% dialog.with_footer do %>
            <div class="flex justify-end gap-3">
              <%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
                Cancel
              <% end %>
              <%= render Pathogen::Button.new(scheme: :primary, data: { action: 'click->pathogen--dialog#close' }) do %>
                Approve
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Code Examples -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:code, color: :primary, class: "mr-3") %>
      Footer Code Examples
    </h2>

    <div class="space-y-6">
      <!-- Multiple Actions -->
      <div>
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-3">Multiple Action Buttons</h3>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 shadow-sm overflow-x-auto">
          <pre class="text-sm"><code class="text-slate-800 dark:text-slate-200"><%% dialog.with_footer do %>
  &lt;div class="flex justify-end gap-3"&gt;
    <%%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click-&gt;pathogen--dialog#close' }) do %>
      Cancel
    <%% end %>
    <%%= render Pathogen::Button.new(scheme: :primary, data: { action: 'click-&gt;pathogen--dialog#close' }) do %>
      Confirm
    <%% end %>
  &lt;/div&gt;
<%% end %></code></pre>
        </div>
      </div>

      <!-- No Footer -->
      <div>
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-3">No Footer (Simply Omit the Slot)</h3>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 shadow-sm overflow-x-auto">
          <pre class="text-sm"><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::DialogComponent.new(id: 'info', dismissible: true) do |dialog| %>
  <%% dialog.with_header do %>
    &lt;h2&gt;Information&lt;/h2&gt;
  <%% end %>
  <%% dialog.with_body do %>
    &lt;p&gt;Content here&lt;/p&gt;
  <%% end %>
  <%% # No footer - dialog can be closed via ESC or backdrop %>
<%% end %></code></pre>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Tips -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:lightbulb, color: :warning, class: "mr-3") %>
      Quick Tips
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:arrow_right, color: :primary) %>
          <div>
            <h3 class="font-semibold text-blue-900 dark:text-blue-100 mb-1">Primary Action on Right</h3>
            <p class="text-sm text-blue-800 dark:text-blue-200">Place the primary action button on the right, secondary/cancel on the left</p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:palette, color: :success) %>
          <div>
            <h3 class="font-semibold text-green-900 dark:text-green-100 mb-1">Use Appropriate Schemes</h3>
            <p class="text-sm text-green-800 dark:text-green-200">:danger for destructive, :success for positive, :slate for neutral/cancel</p>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:text_aa, color: :primary) %>
          <div>
            <h3 class="font-semibold text-purple-900 dark:text-purple-100 mb-1">Clear Button Labels</h3>
            <p class="text-sm text-purple-800 dark:text-purple-200">Use specific action verbs: "Delete Project", "Save Changes", not just "OK"</p>
          </div>
        </div>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:sparkle, color: :warning) %>
          <div>
            <h3 class="font-semibold text-amber-900 dark:text-amber-100 mb-1">Footer is Optional</h3>
            <p class="text-sm text-amber-800 dark:text-amber-200">Only include footer when actions are needed - info dialogs can omit it</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
