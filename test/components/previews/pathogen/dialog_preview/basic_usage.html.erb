<div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= pathogen_icon(:frame_corners, color: :primary, size: :xl, class: "inline mr-3") %>
      Pathogen Dialog - Basic Usage
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Accessible modal dialog component with W3C ARIA patterns, focus management, and scroll shadow indicators.
    </p>
  </div>

  <!-- Simple Dialog Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:chat_circle_dots, color: :primary, class: "mr-3") %>
      Complete Dialog Example
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <%= render(Pathogen::DialogComponent.new(id: 'basic-dialog', size: :medium, dismissible: true)) do |dialog| %>
        <% dialog.with_show_button(scheme: :primary, size: :medium) do %>
          Open Dialog
        <% end %>

        <% dialog.with_header do %>
          <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Welcome to Pathogen Dialog</h2>
        <% end %>

        <% dialog.with_body do %>
          <div class="space-y-4">
            <p class="text-slate-700 dark:text-slate-300">
              This is a fully accessible dialog component that follows W3C ARIA Authoring Practices.
              It includes focus management, keyboard navigation, and screen reader support.
            </p>
            <ul class="list-disc list-inside space-y-2 text-slate-700 dark:text-slate-300">
              <li>Traps focus within the dialog when open</li>
              <li>Restores focus to the trigger button when closed</li>
              <li>Responds to ESC key (when dismissible)</li>
              <li>Prevents background scrolling</li>
            </ul>
          </div>
        <% end %>

        <% dialog.with_footer do %>
          <div class="flex justify-end gap-3">
            <%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
              Close
            <% end %>
            <%= render Pathogen::Button.new(scheme: :primary, data: { action: 'click->pathogen--dialog#close' }) do %>
              Got it
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Minimal Dialog Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:note, color: :primary, class: "mr-3") %>
      Minimal Dialog Example
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-8">
      <%= render(Pathogen::DialogComponent.new(id: 'minimal-dialog', size: :small, dismissible: true)) do |dialog| %>
        <% dialog.with_show_button(scheme: :slate, size: :medium) do %>
          Open Minimal Dialog
        <% end %>
        <% dialog.with_header do %>
          <h2 class="text-xl font-semibold text-slate-900 dark:text-white">Information</h2>
        <% end %>

        <% dialog.with_body do %>
          <p class="text-slate-700 dark:text-slate-300">
            This minimal dialog only includes a header and body. The footer is optional and only
            renders when you provide content via the footer slot. The show_button slot provides
            an easy way to create a trigger button.
          </p>
        <% end %>
      <% end %>

      <div class="mt-4 bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-3">
        <p class="text-sm text-purple-800 dark:text-purple-200">
          <strong>Note:</strong> For external trigger buttons (outside the dialog component), see the "Triggering Dialogs" page
        </p>
      </div>
    </div>
  </div>

  <!-- Code Examples -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:code, color: :primary, class: "mr-3") %>
      Code Examples
    </h2>

    <div class="space-y-6">
      <!-- Complete Example -->
      <div>
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-3">Complete Dialog with All Slots</h3>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 shadow-sm overflow-x-auto">
          <pre class="text-sm"><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::DialogComponent.new(id: 'my-dialog', size: :medium, dismissible: true) do |dialog| %>
  <%% dialog.with_show_button(scheme: :primary) do %>
    Open Dialog
  <%% end %>

  <%% dialog.with_header do %>
    &lt;h2&gt;Dialog Title&lt;/h2&gt;
  <%% end %>

  <%% dialog.with_body do %>
    &lt;p&gt;Your dialog content goes here.&lt;/p&gt;
  <%% end %>

  <%% dialog.with_footer do %>
    <%%= render Pathogen::Button.new(scheme: :slate, data: { action: 'click->pathogen--dialog#close' }) do %>
      Cancel
    <%% end %>
    <%%= render Pathogen::Button.new(scheme: :primary) do %>
      Confirm
    <%% end %>
  <%% end %>
<%% end %></code></pre>
        </div>
      </div>

      <!-- External Trigger Example -->
      <div>
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-3">Dialog with External Trigger</h3>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 shadow-sm overflow-x-auto">
          <pre class="text-sm"><code class="text-slate-800 dark:text-slate-200">&lt;button data-action="click-&gt;pathogen--dialog#open"&gt;Open&lt;/button&gt;

<%%= render Pathogen::DialogComponent.new(id: 'my-dialog', size: :small) do |dialog| %>
  <%% dialog.with_header do %>
    &lt;h2&gt;Dialog Title&lt;/h2&gt;
  <%% end %>

  <%% dialog.with_body do %>
    &lt;p&gt;Content here.&lt;/p&gt;
  <%% end %>
<%% end %></code></pre>
        </div>
      </div>
    </div>
  </div>

  <!-- Parameter Reference -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:sliders, color: :primary, class: "mr-3") %>
      Component Parameters
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-slate-200 dark:border-slate-700">
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Parameter</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Type</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Default</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Description</th>
            </tr>
          </thead>
          <tbody class="text-sm">
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">id</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">String</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Auto-generated</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Unique identifier for the dialog</td>
            </tr>
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">size</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Symbol</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">:medium</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">:small, :medium, :large, or :xlarge</td>
            </tr>
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">dismissible</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Boolean</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">true</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Can be closed with ESC or backdrop click</td>
            </tr>
            <tr>
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">open</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Boolean</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">false</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Whether dialog starts in open state</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Quick Tips -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:lightbulb, color: :warning, class: "mr-3") %>
      Quick Tips
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:puzzle_piece, color: :primary) %>
          <div>
            <h3 class="font-semibold text-blue-900 dark:text-blue-100 mb-1">Slot-Based API</h3>
            <p class="text-sm text-blue-800 dark:text-blue-200">Use with_header, with_body, and with_footer slots to compose your dialog content</p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:magic_wand, color: :success) %>
          <div>
            <h3 class="font-semibold text-green-900 dark:text-green-100 mb-1">Auto-Wired Show Button</h3>
            <p class="text-sm text-green-800 dark:text-green-200">The with_show_button slot automatically connects to the dialog controller</p>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:chat_circle_text, color: :primary) %>
          <div>
            <h3 class="font-semibold text-purple-900 dark:text-purple-100 mb-1">When to Use Dialogs</h3>
            <p class="text-sm text-purple-800 dark:text-purple-200">Use for confirmations, forms, or information that requires user attention</p>
          </div>
        </div>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:wheelchair, color: :warning) %>
          <div>
            <h3 class="font-semibold text-amber-900 dark:text-amber-100 mb-1">Accessibility First</h3>
            <p class="text-sm text-amber-800 dark:text-amber-200">Built with focus trap, ARIA labels, and keyboard navigation for WCAG AA+ compliance</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
