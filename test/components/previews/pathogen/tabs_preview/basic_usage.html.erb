<div class="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100 p-8 dark:from-slate-900 dark:to-slate-800">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="mb-4 text-4xl font-bold text-slate-900 dark:text-slate-100">
      <%= pathogen_icon(:squares_four, color: :primary, size: :xl, class: "inline mr-3") %> Pathogen Tabs - Basic
      Usage
    </h1>

    <p class="mx-auto max-w-3xl text-lg text-slate-600 dark:text-slate-400">
      Accessible tab components with W3C ARIA patterns, keyboard navigation, and automatic activation.
    </p>
  </div>

  <!-- Simple Three Tab Example -->
  <div class="mb-12">
    <h2 class="mb-6 flex items-center text-2xl font-semibold text-slate-900 dark:text-slate-100">
      <%= pathogen_icon(:clipboard, color: :primary, class: "mr-3") %> Simple Three-Tab Example
    </h2>

    <div class="overflow-hidden rounded-xl border border-slate-200 bg-white shadow-lg dark:border-slate-700 dark:bg-slate-800">
      <%= render(Pathogen::Tabs.new(id: 'simple-tabs', label: 'Simple example tabs')) do |tabs| %>
        <% tabs.with_tab(id: 'tab-overview', label: 'Overview', selected: true) %>
        <% tabs.with_tab(id: 'tab-features', label: 'Features') %>
        <% tabs.with_tab(id: 'tab-usage', label: 'Usage') %>

        <% tabs.with_panel(id: 'panel-overview', tab_id: 'tab-overview') do %>
          <div class="space-y-4 p-6">
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Overview</h3>

            <p class="text-slate-700 dark:text-slate-300">
              The Pathogen::Tabs component provides an accessible, keyboard-navigable tab interface following W3C ARIA
              Authoring Practices.
            </p>

            <ul class="list-inside list-disc space-y-2 text-slate-700 dark:text-slate-300">
              <li>Full keyboard navigation support</li>
              <li>Screen reader accessible with proper ARIA attributes</li>
              <li>Automatic tab activation (no need to press Enter)</li>
              <li>Roving tabindex pattern for optimal keyboard UX</li>
            </ul>
          </div>
        <% end %>

        <% tabs.with_panel(id: 'panel-features', tab_id: 'tab-features') do %>
          <div class="space-y-4 p-6">
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Key Features</h3>

            <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
              <div class="flex items-start gap-3 rounded-lg bg-slate-50 p-3 dark:bg-slate-700">
                <%= pathogen_icon(:keyboard, color: :primary) %>

                <div>
                  <div class="font-semibold text-slate-900 dark:text-white">Keyboard Navigation</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Arrow keys, Home, End support</div>
                </div>
              </div>

              <div class="flex items-start gap-3 rounded-lg bg-slate-50 p-3 dark:bg-slate-700">
                <%= pathogen_icon(:wheelchair, color: :success) %>

                <div>
                  <div class="font-semibold text-slate-900 dark:text-white">ARIA Compliant</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Full W3C pattern implementation</div>
                </div>
              </div>

              <div class="flex items-start gap-3 rounded-lg bg-slate-50 p-3 dark:bg-slate-700">
                <%= pathogen_icon(:link, color: :primary) %>

                <div>
                  <div class="font-semibold text-slate-900 dark:text-white">URL Syncing</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Bookmarkable tabs with hash</div>
                </div>
              </div>

              <div class="flex items-start gap-3 rounded-lg bg-slate-50 p-3 dark:bg-slate-700">
                <%= pathogen_icon(:lightning, color: :warning) %>

                <div>
                  <div class="font-semibold text-slate-900 dark:text-white">Lazy Loading</div>
                  <div class="text-sm text-slate-600 dark:text-slate-400">Turbo Frame integration ready</div>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <% tabs.with_panel(id: 'panel-usage', tab_id: 'tab-usage') do %>
          <div class="space-y-4 p-6">
            <h3 class="text-xl font-semibold text-slate-900 dark:text-white">Basic Usage</h3>

            <div
              class="
                overflow-x-auto rounded-lg border border-slate-200 bg-slate-50 p-4 shadow-sm dark:border-slate-700
                dark:bg-slate-900
              "
            >
              <pre class="text-sm"><code class="text-slate-800 dark:text-slate-200">&lt;%= render(Pathogen::Tabs.new(id: "my-tabs", label: "Content sections")) do |tabs| %&gt; &lt;% tabs.with_tab(id: "tab-1", label: "First", selected: true) %&gt; &lt;% tabs.with_tab(id: "tab-2", label: "Second") %&gt; &lt;% tabs.with_panel(id: "panel-1", tab_id: "tab-1") do %&gt; Content for first tab &lt;% end %&gt; &lt;% tabs.with_panel(id: "panel-2", tab_id: "tab-2") do %&gt; Content for second tab &lt;% end %&gt; &lt;% end %&gt;              </code></pre>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Parameter Reference -->
  <div class="mb-12">
    <h2 class="mb-6 flex items-center text-2xl font-semibold text-slate-900 dark:text-slate-100">
      <%= pathogen_icon(:sliders, color: :primary, class: "mr-3") %> Common Parameters
    </h2>

    <div class="rounded-xl border border-slate-200 bg-white p-6 shadow-sm dark:border-slate-700 dark:bg-slate-800">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-slate-200 dark:border-slate-700">
              <th class="px-4 py-3 font-semibold text-slate-900 dark:text-slate-100">Parameter</th>
              <th class="px-4 py-3 font-semibold text-slate-900 dark:text-slate-100">Type</th>
              <th class="px-4 py-3 font-semibold text-slate-900 dark:text-slate-100">Required</th>
              <th class="px-4 py-3 font-semibold text-slate-900 dark:text-slate-100">Description</th>
            </tr>
          </thead>

          <tbody class="text-sm">
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="px-4 py-3 font-mono text-blue-600 dark:text-blue-400">id</td>
              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">String</td>

              <td class="px-4 py-3">
                <span class="rounded bg-red-100 px-2 py-1 text-xs text-red-800 dark:bg-red-900 dark:text-red-200">
                  Required
                </span>
              </td>

              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Unique identifier for the tablist</td>
            </tr>

            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="px-4 py-3 font-mono text-blue-600 dark:text-blue-400">label</td>
              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">String</td>

              <td class="px-4 py-3">
                <span class="rounded bg-red-100 px-2 py-1 text-xs text-red-800 dark:bg-red-900 dark:text-red-200">
                  Required
                </span>
              </td>

              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Accessible label for screen readers</td>
            </tr>

            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="px-4 py-3 font-mono text-blue-600 dark:text-blue-400">default_index</td>
              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Integer</td>

              <td class="px-4 py-3">
                <span class="rounded bg-slate-100 px-2 py-1 text-xs text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                  Optional
                </span>
              </td>

              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Index of initially selected tab (default: 0)</td>
            </tr>

            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="px-4 py-3 font-mono text-blue-600 dark:text-blue-400">orientation</td>
              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Symbol</td>

              <td class="px-4 py-3">
                <span class="rounded bg-slate-100 px-2 py-1 text-xs text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                  Optional
                </span>
              </td>

              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">
                :horizontal or :vertical (default: :horizontal)
              </td>
            </tr>

            <tr>
              <td class="px-4 py-3 font-mono text-blue-600 dark:text-blue-400">sync_url</td>
              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">Boolean</td>

              <td class="px-4 py-3">
                <span class="rounded bg-slate-100 px-2 py-1 text-xs text-slate-600 dark:bg-slate-700 dark:text-slate-400">
                  Optional
                </span>
              </td>

              <td class="px-4 py-3 text-slate-600 dark:text-slate-400">
                Sync tab selection with URL hash (default: false)
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Quick Tips -->
  <div>
    <h2 class="mb-6 flex items-center text-2xl font-semibold text-slate-900 dark:text-slate-100">
      <%= pathogen_icon(:lightbulb, color: :warning, class: "mr-3") %> Quick Tips
    </h2>

    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
      <div class="rounded-lg border border-blue-200 bg-blue-50 p-4 dark:border-blue-800 dark:bg-blue-900/20">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:info, color: :primary) %>

          <div>
            <h3 class="mb-1 font-semibold text-blue-900 dark:text-blue-100">Tab & Panel Counts Must Match</h3>

            <p class="text-sm text-blue-800 dark:text-blue-200">
              Each tab must have a corresponding panel with matching tab_id
            </p>
          </div>
        </div>
      </div>

      <div class="rounded-lg border border-green-200 bg-green-50 p-4 dark:border-green-800 dark:bg-green-900/20">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:check_circle, color: :success) %>

          <div>
            <h3 class="mb-1 font-semibold text-green-900 dark:text-green-100">Automatic Activation</h3>

            <p class="text-sm text-green-800 dark:text-green-200">
              Tabs activate immediately on arrow key press (no Enter needed)
            </p>
          </div>
        </div>
      </div>

      <div class="rounded-lg border border-purple-200 bg-purple-50 p-4 dark:border-purple-800 dark:bg-purple-900/20">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:keyboard, color: :primary) %>

          <div>
            <h3 class="mb-1 font-semibold text-purple-900 dark:text-purple-100">Keyboard Shortcuts</h3>
            <p class="text-sm text-purple-800 dark:text-purple-200">← → (or ↑ ↓ in vertical), Home, End, Tab to exit</p>
          </div>
        </div>
      </div>

      <div class="rounded-lg border border-amber-200 bg-amber-50 p-4 dark:border-amber-800 dark:bg-amber-900/20">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:warning, color: :warning) %>

          <div>
            <h3 class="mb-1 font-semibold text-amber-900 dark:text-amber-100">Unique IDs Required</h3>

            <p class="text-sm text-amber-800 dark:text-amber-200">
              All tab and panel IDs must be unique within the component
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
