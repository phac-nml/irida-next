<div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= pathogen_icon(:info, color: :primary, size: :xl, class: "inline mr-3") %>
      Pathogen Tooltip - Basic Usage
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Accessible tooltips with native CSS anchor positioning, smooth animations, and Primer-inspired design.
    </p>
  </div>

  <!-- Four Placement Options -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:compass, color: :primary, class: "mr-3") %>
      Four Placement Options
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-12">
      <div class="flex flex-col items-center justify-center space-y-24">
        <!-- Top Placement -->
        <div class="text-center">
          <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Top Placement (Default)</p>
          <%= render Pathogen::Link.new(href: "#") do |link| %>
            <%= link.with_tooltip(text: "This tooltip appears above the link", placement: :top) %>
            Hover or focus me (top)
          <% end %>
        </div>

        <div class="flex items-center justify-center space-x-48">
          <!-- Left Placement -->
          <div class="text-center">
            <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Left Placement</p>
            <%= render Pathogen::Link.new(href: "#") do |link| %>
              <%= link.with_tooltip(text: "This tooltip appears to the left", placement: :left) %>
              Hover or focus me (left)
            <% end %>
          </div>

          <!-- Right Placement -->
          <div class="text-center">
            <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Right Placement</p>
            <%= render Pathogen::Link.new(href: "#") do |link| %>
              <%= link.with_tooltip(text: "This tooltip appears to the right", placement: :right) %>
              Hover or focus me (right)
            <% end %>
          </div>
        </div>

        <!-- Bottom Placement -->
        <div class="text-center">
          <p class="text-sm text-slate-500 dark:text-slate-400 mb-4">Bottom Placement</p>
          <%= render Pathogen::Link.new(href: "#") do |link| %>
            <%= link.with_tooltip(text: "This tooltip appears below the link", placement: :bottom) %>
            Hover or focus me (bottom)
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Simple Examples -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:code, color: :primary, class: "mr-3") %>
      Simple Examples
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Example 1: Default Tooltip -->
      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Default Tooltip</h3>
        <div class="mb-4 p-4 bg-slate-50 dark:bg-slate-900 rounded">
          <%= render Pathogen::Link.new(href: "/samples") do |link| %>
            <%= link.with_tooltip(text: "View all samples") %>
            Samples
          <% end %>
        </div>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 text-sm overflow-x-auto">
          <pre><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::Link.new(href: "/samples") do |link| %>
  <%%=  link.with_tooltip(text: "View all samples") %>
  Samples
<%% end %></code></pre>
        </div>
      </div>

      <!-- Example 2: Bottom Placement -->
      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Custom Placement</h3>
        <div class="mb-4 p-4 bg-slate-50 dark:bg-slate-900 rounded">
          <%= render Pathogen::Link.new(href: "/projects") do |link| %>
            <%= link.with_tooltip(text: "Manage your projects", placement: :bottom) %>
            Projects
          <% end %>
        </div>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 text-sm overflow-x-auto">
          <pre><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::Link.new(href: "/projects") do |link| %>
  <%%=  link.with_tooltip(text: "Manage your projects", placement: :bottom) %>
  Projects
<%% end %></code></pre>
        </div>
      </div>

      <!-- Example 3: Left Placement -->
      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Left Placement</h3>
        <div class="mb-4 p-4 bg-slate-50 dark:bg-slate-900 rounded">
          <%= render Pathogen::Link.new(href: "/settings") do |link| %>
            <%= link.with_tooltip(text: "Configure application settings", placement: :left) %>
            Settings
          <% end %>
        </div>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 text-sm overflow-x-auto">
          <pre><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::Link.new(href: "/settings") do |link| %>
  <%%=  link.with_tooltip(text: "Configure application settings", placement: :left) %>
  Settings
<%% end %></code></pre>
        </div>
      </div>

      <!-- Example 4: Right Placement -->
      <div class="bg-white dark:bg-slate-800 rounded-lg p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Right Placement</h3>
        <div class="mb-4 p-4 bg-slate-50 dark:bg-slate-900 rounded">
          <%= render Pathogen::Link.new(href: "/help") do |link| %>
            <%= link.with_tooltip(text: "Get help and documentation", placement: :right) %>
            Help
          <% end %>
        </div>
        <div class="bg-slate-50 dark:bg-slate-900 border border-slate-200 dark:border-slate-700 rounded-lg p-4 text-sm overflow-x-auto">
          <pre><code class="text-slate-800 dark:text-slate-200"><%%= render Pathogen::Link.new(href: "/help") do |link| %>
  <%%=  link.with_tooltip(text: "Get help and documentation", placement: :right) %>
  Help
<%% end %></code></pre>
        </div>
      </div>
    </div>
  </div>

  <!-- Parameter Reference -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:sliders, color: :primary, class: "mr-3") %>
      Component Parameters
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <div class="overflow-x-auto">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-slate-200 dark:border-slate-700">
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Parameter</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Type</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Required</th>
              <th class="py-3 px-4 font-semibold text-slate-900 dark:text-slate-100">Description</th>
            </tr>
          </thead>
          <tbody class="text-sm">
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">text</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">String</td>
              <td class="py-3 px-4"><span class="px-2 py-1 bg-red-100 dark:bg-red-900 text-red-800 dark:text-red-200 rounded text-xs">Required</span></td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">The tooltip text content</td>
            </tr>
            <tr class="border-b border-slate-100 dark:border-slate-700">
              <td class="py-3 px-4 font-mono text-blue-600 dark:text-blue-400">placement</td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Symbol</td>
              <td class="py-3 px-4"><span class="px-2 py-1 bg-slate-100 dark:bg-slate-700 text-slate-600 dark:text-slate-400 rounded text-xs">Optional</span></td>
              <td class="py-3 px-4 text-slate-600 dark:text-slate-400">Position: :top (default), :bottom, :left, :right</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Quick Tips -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:lightbulb, color: :warning, class: "mr-3") %>
      Quick Tips
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:info, color: :primary) %>
          <div>
            <h3 class="font-semibold text-blue-900 dark:text-blue-100 mb-1">Default Placement is Top</h3>
            <p class="text-sm text-blue-800 dark:text-blue-200">If you don't specify a placement, tooltips will appear above the trigger element</p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:check_circle, color: :success) %>
          <div>
            <h3 class="font-semibold text-green-900 dark:text-green-100 mb-1">Automatic Sizing</h3>
            <p class="text-sm text-green-800 dark:text-green-200">Tooltips automatically size to fit content with a max width of 320px</p>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:lightning, color: :primary) %>
          <div>
            <h3 class="font-semibold text-purple-900 dark:text-purple-100 mb-1">Smooth Animations</h3>
            <p class="text-sm text-purple-800 dark:text-purple-200">200ms fade-in and scale animation for a polished feel</p>
          </div>
        </div>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:warning, color: :warning) %>
          <div>
            <h3 class="font-semibold text-amber-900 dark:text-amber-100 mb-1">No Flowbite Dependency</h3>
            <p class="text-sm text-amber-800 dark:text-amber-200">Uses native CSS anchor positioning instead of external libraries</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
