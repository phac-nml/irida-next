<div class="p-8 bg-gradient-to-br from-slate-50 to-slate-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= pathogen_icon(:link, color: :primary, size: :xl, class: "inline mr-3") %>
      Link Component Integration
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Real-world examples of tooltips integrated with Pathogen::Link in various contexts
    </p>
  </div>

  <!-- Navigation Bar Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:squares_four, color: :primary, class: "mr-3") %>
      Navigation Bar with Tooltips
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 overflow-hidden">
      <nav class="flex items-center justify-between p-4 border-b border-slate-200 dark:border-slate-700">
        <div class="flex items-center space-x-6">
          <%= render Pathogen::Link.new(href: "/dashboard") do |link| %>
            <%= link.with_tooltip(text: "View your dashboard", placement: :bottom) %>
            <%= pathogen_icon(:house, color: :primary, class: "inline mr-2") %>
            Dashboard
          <% end %>

          <%= render Pathogen::Link.new(href: "/samples") do |link| %>
            <%= link.with_tooltip(text: "Browse and manage samples", placement: :bottom) %>
            <%= pathogen_icon(:flask, color: :primary, class: "inline mr-2") %>
            Samples
          <% end %>

          <%= render Pathogen::Link.new(href: "/projects") do |link| %>
            <%= link.with_tooltip(text: "View all projects", placement: :bottom) %>
            <%= pathogen_icon(:folder, color: :primary, class: "inline mr-2") %>
            Projects
          <% end %>

          <%= render Pathogen::Link.new(href: "/workflows") do |link| %>
            <%= link.with_tooltip(text: "Manage analysis workflows", placement: :bottom) %>
            <%= pathogen_icon(:play, color: :primary, class: "inline mr-2") %>
            Workflows
          <% end %>
        </div>

        <div class="flex items-center space-x-4">
          <%= render Pathogen::Link.new(href: "/settings") do |link| %>
            <%= link.with_tooltip(text: "Configure settings", placement: :bottom) %>
            <%= pathogen_icon(:gear, color: :primary) %>
          <% end %>

          <%= render Pathogen::Link.new(href: "/help") do |link| %>
            <%= link.with_tooltip(text: "Get help and documentation", placement: :bottom) %>
            <%= pathogen_icon(:question, color: :primary) %>
          <% end %>
        </div>
      </nav>

      <div class="p-6">
        <p class="text-sm text-slate-600 dark:text-slate-400">
          This navigation bar uses tooltips with bottom placement to provide helpful context for each link.
        </p>
      </div>
    </div>
  </div>

  <!-- Action List Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:list, color: :primary, class: "mr-3") %>
      Action List with Contextual Tooltips
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-900 rounded-lg">
          <div>
            <h3 class="font-semibold text-slate-900 dark:text-slate-100">Sample-001</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Collected: 2024-01-15</p>
          </div>
          <div class="flex items-center space-x-3">
            <%= render Pathogen::Link.new(href: "/samples/1/view") do |link| %>
              <%= link.with_tooltip(text: "View sample details", placement: :top) %>
              <%= pathogen_icon(:eye, color: :primary) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/samples/1/edit") do |link| %>
              <%= link.with_tooltip(text: "Edit sample metadata", placement: :top) %>
              <%= pathogen_icon(:pencil, color: :primary) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/samples/1/download") do |link| %>
              <%= link.with_tooltip(text: "Download sample files", placement: :top) %>
              <%= pathogen_icon(:download, color: :primary) %>
            <% end %>
          </div>
        </div>

        <div class="flex items-center justify-between p-4 bg-slate-50 dark:bg-slate-900 rounded-lg">
          <div>
            <h3 class="font-semibold text-slate-900 dark:text-slate-100">Sample-002</h3>
            <p class="text-sm text-slate-600 dark:text-slate-400">Collected: 2024-01-16</p>
          </div>
          <div class="flex items-center space-x-3">
            <%= render Pathogen::Link.new(href: "/samples/2/view") do |link| %>
              <%= link.with_tooltip(text: "View sample details", placement: :top) %>
              <%= pathogen_icon(:eye, color: :primary) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/samples/2/edit") do |link| %>
              <%= link.with_tooltip(text: "Edit sample metadata", placement: :top) %>
              <%= pathogen_icon(:pencil, color: :primary) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/samples/2/download") do |link| %>
              <%= link.with_tooltip(text: "Download sample files", placement: :top) %>
              <%= pathogen_icon(:download, color: :primary) %>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:info, color: :primary) %>
          <div class="text-sm">
            <p class="font-semibold text-blue-900 dark:text-blue-100 mb-1">Icon-Only Actions</p>
            <p class="text-blue-800 dark:text-blue-200">
              Tooltips are especially useful for icon-only action buttons, providing context without cluttering the interface.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Breadcrumb Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:map, color: :primary, class: "mr-3") %>
      Breadcrumb Navigation
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 p-6">
      <nav class="flex items-center space-x-2 text-sm">
        <%= render Pathogen::Link.new(href: "/") do |link| %>
          <%= link.with_tooltip(text: "Go to home page", placement: :bottom) %>
          <%= pathogen_icon(:house, color: :primary, class: "inline") %>
        <% end %>

        <span class="text-slate-400 dark:text-slate-600">/</span>

        <%= render Pathogen::Link.new(href: "/projects") do |link| %>
          <%= link.with_tooltip(text: "View all projects", placement: :bottom) %>
          Projects
        <% end %>

        <span class="text-slate-400 dark:text-slate-600">/</span>

        <%= render Pathogen::Link.new(href: "/projects/irida-next") do |link| %>
          <%= link.with_tooltip(text: "View project details", placement: :bottom) %>
          IRIDA Next
        <% end %>

        <span class="text-slate-400 dark:text-slate-600">/</span>

        <span class="text-slate-600 dark:text-slate-400">Samples</span>
      </nav>

      <div class="mt-6 p-4 bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:info, color: :primary) %>
          <div class="text-sm">
            <p class="font-semibold text-purple-900 dark:text-purple-100 mb-1">Breadcrumb Tooltips</p>
            <p class="text-purple-800 dark:text-purple-200">
              Tooltips in breadcrumbs help users understand where each link will take them, improving navigation confidence.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sidebar Menu Example -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:sidebar, color: :primary, class: "mr-3") %>
      Collapsed Sidebar with Tooltips
    </h2>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-lg border border-slate-200 dark:border-slate-700 overflow-hidden">
      <div class="flex">
        <!-- Collapsed Sidebar -->
        <aside class="w-16 bg-slate-100 dark:bg-slate-900 border-r border-slate-200 dark:border-slate-700">
          <nav class="flex flex-col items-center py-4 space-y-4">
            <%= render Pathogen::Link.new(href: "/dashboard") do |link| %>
              <%= link.with_tooltip(text: "Dashboard", placement: :right) %>
              <%= pathogen_icon(:house, color: :primary, size: :lg) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/samples") do |link| %>
              <%= link.with_tooltip(text: "Samples", placement: :right) %>
              <%= pathogen_icon(:flask, color: :primary, size: :lg) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/projects") do |link| %>
              <%= link.with_tooltip(text: "Projects", placement: :right) %>
              <%= pathogen_icon(:folder, color: :primary, size: :lg) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/workflows") do |link| %>
              <%= link.with_tooltip(text: "Workflows", placement: :right) %>
              <%= pathogen_icon(:play, color: :primary, size: :lg) %>
            <% end %>

            <%= render Pathogen::Link.new(href: "/settings") do |link| %>
              <%= link.with_tooltip(text: "Settings", placement: :right) %>
              <%= pathogen_icon(:gear, color: :primary, size: :lg) %>
            <% end %>
          </nav>
        </aside>

        <!-- Main Content Area -->
        <main class="flex-1 p-6">
          <p class="text-sm text-slate-600 dark:text-slate-400">
            In collapsed sidebars, tooltips are essential for identifying icon-only navigation items.
            Hover or focus on each icon to see its label.
          </p>
        </main>
      </div>
    </div>
  </div>

  <!-- Usage Tips -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= pathogen_icon(:lightbulb, color: :warning, class: "mr-3") %>
      Integration Tips
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:info, color: :primary) %>
          <div>
            <h3 class="font-semibold text-blue-900 dark:text-blue-100 mb-1">Choose Placement Wisely</h3>
            <p class="text-sm text-blue-800 dark:text-blue-200">Consider the layout: bottom for top navigation, top for footer links, right for left sidebars.</p>
          </div>
        </div>
      </div>

      <div class="bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:check_circle, color: :success) %>
          <div>
            <h3 class="font-semibold text-green-900 dark:text-green-100 mb-1">Icon-Only Buttons</h3>
            <p class="text-sm text-green-800 dark:text-green-200">Always provide tooltips for icon-only actions to ensure clarity for all users.</p>
          </div>
        </div>
      </div>

      <div class="bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:lightning, color: :primary) %>
          <div>
            <h3 class="font-semibold text-purple-900 dark:text-purple-100 mb-1">Consistent Placement</h3>
            <p class="text-sm text-purple-800 dark:text-purple-200">Use consistent tooltip placement within the same UI section for a cohesive experience.</p>
          </div>
        </div>
      </div>

      <div class="bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800 rounded-lg p-4">
        <div class="flex items-start gap-3">
          <%= pathogen_icon(:warning, color: :warning) %>
          <div>
            <h3 class="font-semibold text-amber-900 dark:text-amber-100 mb-1">Don't Overuse</h3>
            <p class="text-sm text-amber-800 dark:text-amber-200">Only add tooltips where they provide genuine value. Too many can be overwhelming.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
