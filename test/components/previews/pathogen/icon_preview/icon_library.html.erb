<div class="p-8 bg-gradient-to-br from-purple-50 to-pink-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= render Pathogen::Icon.new(:squares_four, color: :primary, size: :xl, class: "inline mr-3") %>
      Icon Library Showcase
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Comprehensive collection of available icons across different libraries and categories.
    </p>
  </div>

  <!-- Phosphor Icons (Default) -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new(:circle, color: :primary, class: "mr-3") %>
      Phosphor Icons (Default Library)
    </h2>
    <p class="text-slate-600 dark:text-slate-400 mb-6">The default icon library with a comprehensive set of icons.</p>

    <!-- Common Icons -->
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Common Interface Icons</h3>
      <div class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 xl:grid-cols-12 gap-4">
        <% [
          :house_line, :user, :users, :gear_six, :gear_six, :bell, :envelope,
          :magnifying_glass, :plus, :minus, :x, :check,
          :heart, :star, :bookmark, :flag, :calendar, :clock,
          :pencil, :trash, :trash, :folder_open, :file,
          :download, :upload, :share, :link, :eye, :eye_slash,
          :arrow_up, :arrow_down, :arrow_left, :arrow_right, :caret_up, :caret_down,
          :question, :info, :warning, :check_circle, :x_circle
        ].each do |icon| %>
          <div class="bg-white dark:bg-slate-800 rounded-lg p-3 text-center shadow-sm border border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-center h-10 mb-2">
              <%= render Pathogen::Icon.new(icon, color: :default, size: :md) %>
            </div>
            <p class="text-xs text-slate-600 dark:text-slate-400 break-words"><%= icon %></p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- App-Specific Icons -->
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Application Icons</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        <% [
          { icon: :test_tube, name: "Samples", color: :primary },
          { icon: Project.icon, name: "Projects", color: :success },
          { icon: :squares_four, name: "Groups", color: :warning },
          { icon: :terminal_window, name: "Workflows", color: :danger },
          { icon: :export, name: "Data Exports", color: :subdued },
          { icon: :poker_chip, name: "Tokens", color: :primary }
        ].each do |item| %>
          <div class="bg-white dark:bg-slate-800 rounded-lg p-4 text-center shadow-sm border border-slate-200 dark:border-slate-700">
            <div class="flex items-center justify-center h-12 mb-3">
              <%= render Pathogen::Icon.new(item[:icon], color: item[:color], size: :lg) %>
            </div>
            <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-1"><%= item[:name] %></h4>
            <code class="text-xs text-slate-500 dark:text-slate-400"><%= item[:icon] %></code>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Heroicons -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new(:beaker, library: :heroicons, color: :primary, class: "mr-3") %>
      Heroicons Library
    </h2>
    <p class="text-slate-600 dark:text-slate-400 mb-6">Beautiful hand-crafted SVG icons by the makers of Tailwind CSS.</p>

    <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <h3 class="text-lg font-semibold text-slate-900 dark:text-slate-100 mb-4">Heroicons Examples</h3>
      <div class="grid grid-cols-4 md:grid-cols-6 lg:grid-cols-8 gap-4 mb-6">
        <% [:beaker, :academic_cap, :adjustments_horizontal, :archive_box, :arrow_path, :bell, :book_open].each do |icon| %>
          <div class="text-center">
            <div class="flex items-center justify-center h-10 mb-2">
              <%= render Pathogen::Icon.new(icon, library: :heroicons, color: :primary, size: :md) %>
            </div>
            <p class="text-xs text-slate-600 dark:text-slate-400"><%= icon %></p>
          </div>
        <% end %>
      </div>

      <code class="block text-sm bg-slate-100 dark:bg-slate-700 p-3 rounded text-slate-700 dark:text-slate-300">
        &lt;%= render Pathogen::Icon.new(:beaker, library: :heroicons) %&gt;
      </code>
    </div>
  </div>

  <!-- Icon Variants -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new(:palette, color: :primary, class: "mr-3") %>
      Icon Variants
    </h2>
    <p class="text-slate-600 dark:text-slate-400 mb-6">Different visual styles for the same icon concept.</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Phosphor Variants -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Phosphor Variants</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-slate-700 dark:text-slate-300">Regular (default)</span>
            <div class="flex items-center gap-3">
              <%= render Pathogen::Icon.new(:heart, size: :lg, color: :danger) %>
              <%= render Pathogen::Icon.new(:star, size: :lg, color: :warning) %>
              <%= render Pathogen::Icon.new(:bookmark, size: :lg, color: :primary) %>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-700 dark:text-slate-300">Fill</span>
            <div class="flex items-center gap-3">
              <%= render Pathogen::Icon.new(:heart, variant: :fill, size: :lg, color: :danger) %>
              <%= render Pathogen::Icon.new(:star, variant: :fill, size: :lg, color: :warning) %>
              <%= render Pathogen::Icon.new(:bookmark, variant: :fill, size: :lg, color: :primary) %>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-700 dark:text-slate-300">Duotone</span>
            <div class="flex items-center gap-3">
              <%= render Pathogen::Icon.new(:heart, variant: :duotone, size: :lg, color: :danger) %>
              <%= render Pathogen::Icon.new(:star, variant: :duotone, size: :lg, color: :warning) %>
              <%= render Pathogen::Icon.new(:bookmark, variant: :duotone, size: :lg, color: :primary) %>
            </div>
          </div>
        </div>
      </div>

      <!-- Heroicons Variants -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Heroicons Variants</h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-slate-700 dark:text-slate-300">Outline (default)</span>
            <div class="flex items-center gap-3">
              <%= render Pathogen::Icon.new(:heart, library: :heroicons, size: :lg, color: :danger) %>
              <%= render Pathogen::Icon.new(:star, library: :heroicons, size: :lg, color: :warning) %>
              <%= render Pathogen::Icon.new(:bookmark, library: :heroicons, size: :lg, color: :primary) %>
            </div>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-slate-700 dark:text-slate-300">Solid</span>
            <div class="flex items-center gap-3">
              <%= render Pathogen::Icon.new(:heart, library: :heroicons, variant: :solid, size: :lg, color: :danger) %>
              <%= render Pathogen::Icon.new(:star, library: :heroicons, variant: :solid, size: :lg, color: :warning) %>
              <%= render Pathogen::Icon.new(:bookmark, library: :heroicons, variant: :solid, size: :lg, color: :primary) %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Variant Examples -->
    <div class="mt-6 bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Using Variants</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-3">Phosphor Variants</h4>
          <div class="space-y-2 text-sm">
            <code class="block bg-slate-100 dark:bg-slate-700 p-2 rounded text-slate-700 dark:text-slate-300">
              Icon.new(:heart, variant: :fill)
            </code>
            <code class="block bg-slate-100 dark:bg-slate-700 p-2 rounded text-slate-700 dark:text-slate-300">
              Icon.new(:star, variant: :duotone)
            </code>
          </div>
        </div>
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-3">Heroicons Variants</h4>
          <div class="space-y-2 text-sm">
            <code class="block bg-slate-100 dark:bg-slate-700 p-2 rounded text-slate-700 dark:text-slate-300">
              Icon.new(:heart, library: :heroicons, variant: :solid)
            </code>
            <code class="block bg-slate-100 dark:bg-slate-700 p-2 rounded text-slate-700 dark:text-slate-300">
              Icon.new(:star, library: :heroicons, variant: :outline)
            </code>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Best Practices -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new(:lightbulb, color: :primary, class: "mr-3") %>
      Best Practices
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Do's -->
      <div class="bg-green-50 dark:bg-green-900/20 rounded-xl p-6 border border-green-200 dark:border-green-800">
        <h3 class="font-semibold text-green-800 dark:text-green-200 mb-4 flex items-center">
          <%= render Pathogen::Icon.new(:check_circle, color: :success, size: :sm, class: "mr-2") %>
          Do's
        </h3>
        <ul class="space-y-3 text-sm text-green-700 dark:text-green-300">
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Use semantic icons with aria-labels for meaningful content
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Choose appropriate sizes for context (sm for inline, lg for features)
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Use color variants that match your UI state (success, danger, etc.)
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Leverage factory methods for common patterns
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Test with screen readers when using semantic icons
          </li>
        </ul>
      </div>

      <!-- Don'ts -->
      <div class="bg-red-50 dark:bg-red-900/20 rounded-xl p-6 border border-red-200 dark:border-red-800">
        <h3 class="font-semibold text-red-800 dark:text-red-200 mb-4 flex items-center">
          <%= render Pathogen::Icon.new(:x_circle, color: :danger, size: :sm, class: "mr-2") %>
          Don'ts
        </h3>
        <ul class="space-y-3 text-sm text-red-700 dark:text-red-300">
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Don't use semantic icons without proper aria-labels
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Don't mix icon libraries unnecessarily in the same interface
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Don't use colors that don't have semantic meaning
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Don't ignore the console warnings in development
          </li>
          <li class="flex items-start">
            <span class="mr-2">•</span>
            Don't use overly large icons in dense interfaces
          </li>
        </ul>
      </div>
    </div>

    <!-- Quick Reference -->
    <div class="mt-6 bg-slate-100 dark:bg-slate-800 rounded-xl p-6 border border-slate-200 dark:border-slate-700">
      <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Quick Reference</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Colors</h4>
          <ul class="space-y-1 text-slate-600 dark:text-slate-400">
            <li>:default</li>
            <li>:primary</li>
            <li>:success</li>
            <li>:warning</li>
            <li>:danger</li>
            <li>:subdued</li>
          </ul>
        </div>
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Sizes</h4>
          <ul class="space-y-1 text-slate-600 dark:text-slate-400">
            <li>:sm (16px)</li>
            <li>:md (24px)</li>
            <li>:lg (32px)</li>
            <li>:xl (40px)</li>
          </ul>
        </div>
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Libraries</h4>
          <ul class="space-y-1 text-slate-600 dark:text-slate-400">
            <li>:phosphor (default)</li>
            <li>:heroicons</li>
          </ul>
        </div>
        <div>
          <h4 class="font-medium text-slate-900 dark:text-slate-100 mb-2">Accessibility</h4>
          <ul class="space-y-1 text-slate-600 dark:text-slate-400">
            <li>semantic: true</li>
            <li>aria-label: "text"</li>
            <li>aria-hidden: false</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
