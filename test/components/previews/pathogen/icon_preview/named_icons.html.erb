<div class="p-6">
  <div
    class="
      grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6
      gap-6 items-stretch
    "
  >
    <% {
      'DETAILS' => ICON::DETAILS,
      'SAMPLES' => ICON::SAMPLES,
      'SETTINGS' => ICON::SETTINGS,
      'PROJECTS' => ICON::PROJECTS,
      'GROUPS' => ICON::GROUPS,
      'WORKFLOWS' => ICON::WORKFLOWS,
      'DATA_EXPORTS' => ICON::DATA_EXPORTS
    }.each do |const_name, icon_def| %>
      <div class="flex flex-col items-center space-y-1 min-w-[10rem] p-2">
        <%= pathogen_icon(icon_def, size: :md) %>
        <span class="text-xs text-slate-600 font-medium"><%= icon_def[:name] %></span>
        <span class="text-xs text-slate-400 font-mono break-all text-center">ICON::<%= const_name %></span>
      </div>
    <% end %>
  </div>
</div>
