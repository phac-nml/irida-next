<div class="p-8 bg-gradient-to-br from-blue-50 to-indigo-100 dark:from-slate-900 dark:to-slate-800 min-h-screen">
  <!-- Header -->
  <div class="mb-12 text-center">
    <h1 class="text-4xl font-bold text-slate-900 dark:text-slate-100 mb-4">
      <%= render Pathogen::Icon.new("palette", color: :primary, size: :xl, class: "inline mr-3") %>
      Colors & Sizes
    </h1>
    <p class="text-lg text-slate-600 dark:text-slate-400 max-w-3xl mx-auto">
      Consistent theming with built-in color variants and responsive sizes.
    </p>
  </div>

  <!-- Color Variants -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new("swatches", color: :primary, class: "mr-3") %>
      Color Variants
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% [
        { color: :default, icon: "heart", name: "Default", desc: "Standard text color" },
        { color: :primary, icon: "star", name: "Primary", desc: "Brand primary color" },
        { color: :success, icon: "check-circle", name: "Success", desc: "Green for positive actions" },
        { color: :warning, icon: "warning", name: "Warning", desc: "Yellow for caution" },
        { color: :danger, icon: "x-circle", name: "Danger", desc: "Red for errors/deletion" },
        { color: :subdued, icon: "info", name: "Subdued", desc: "Muted for secondary content" }
      ].each do |item| %>
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 text-center">
          <div class="flex items-center justify-center h-16 bg-slate-50 dark:bg-slate-700 rounded-lg mb-4">
            <%= render Pathogen::Icon.new(item[:icon], color: item[:color], size: :lg) %>
          </div>
          <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-1"><%= item[:name] %></h3>
          <p class="text-xs text-slate-500 dark:text-slate-400 mb-3"><%= item[:desc] %></p>
          <code class="text-xs bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded text-slate-700 dark:text-slate-300">
            color: :<%= item[:color] %>
          </code>
        </div>
      <% end %>
    </div>

    <!-- Color Examples in Context -->
    <div class="mt-8 bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Colors in Context</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="space-y-3">
          <div class="flex items-center gap-3 p-3 bg-green-50 dark:bg-green-900/20 rounded-lg">
            <%= render Pathogen::Icon.new("check-circle", color: :success) %>
            <span class="text-green-800 dark:text-green-200">Task completed successfully</span>
          </div>
          <div class="flex items-center gap-3 p-3 bg-red-50 dark:bg-red-900/20 rounded-lg">
            <%= render Pathogen::Icon.new("x-circle", color: :danger) %>
            <span class="text-red-800 dark:text-red-200">Error occurred while processing</span>
          </div>
          <div class="flex items-center gap-3 p-3 bg-yellow-50 dark:bg-yellow-900/20 rounded-lg">
            <%= render Pathogen::Icon.new("warning", color: :warning) %>
            <span class="text-yellow-800 dark:text-yellow-200">Please review before continuing</span>
          </div>
        </div>
        <div class="space-y-3">
          <div class="flex items-center gap-3 p-3 bg-blue-50 dark:bg-blue-900/20 rounded-lg">
            <%= render Pathogen::Icon.new("info", color: :primary) %>
            <span class="text-blue-800 dark:text-blue-200">Additional information available</span>
          </div>
          <div class="flex items-center gap-3 p-3 bg-slate-50 dark:bg-slate-700 rounded-lg">
            <%= render Pathogen::Icon.new("clock", color: :subdued) %>
            <span class="text-slate-600 dark:text-slate-300">Updated 2 hours ago</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Size Variants -->
  <div class="mb-12">
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new("resize", color: :primary, class: "mr-3") %>
      Size Variants
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <% [
        { size: :sm, name: "Small", pixels: "16px", use: "Inline text, badges" },
        { size: :md, name: "Medium", pixels: "24px", use: "Buttons, list items" },
        { size: :lg, name: "Large", pixels: "32px", use: "Headers, feature highlights" },
        { size: :xl, name: "Extra Large", pixels: "40px", use: "Hero sections, empty states" }
      ].each do |item| %>
        <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700 text-center">
          <div class="flex items-center justify-center h-20 bg-slate-50 dark:bg-slate-700 rounded-lg mb-4">
            <%= render Pathogen::Icon.new("star", size: item[:size], color: :primary) %>
          </div>
          <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-1"><%= item[:name] %></h3>
          <p class="text-xs text-slate-500 dark:text-slate-400 mb-2"><%= item[:pixels] %></p>
          <p class="text-xs text-slate-600 dark:text-slate-400 mb-3"><%= item[:use] %></p>
          <code class="text-xs bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded text-slate-700 dark:text-slate-300">
            size: :<%= item[:size] %>
          </code>
        </div>
      <% end %>
    </div>

    <!-- Size Comparison -->
    <div class="mt-8 bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
      <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4">Size Comparison</h3>
      <div class="flex items-end justify-center gap-8 py-6">
        <div class="text-center">
          <%= render Pathogen::Icon.new("heart", size: :sm, color: :danger) %>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">:sm</p>
        </div>
        <div class="text-center">
          <%= render Pathogen::Icon.new("heart", size: :md, color: :danger) %>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">:md</p>
        </div>
        <div class="text-center">
          <%= render Pathogen::Icon.new("heart", size: :lg, color: :danger) %>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">:lg</p>
        </div>
        <div class="text-center">
          <%= render Pathogen::Icon.new("heart", size: :xl, color: :danger) %>
          <p class="text-xs text-slate-500 dark:text-slate-400 mt-2">:xl</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Usage Examples -->
  <div>
    <h2 class="text-2xl font-semibold text-slate-900 dark:text-slate-100 mb-6 flex items-center">
      <%= render Pathogen::Icon.new("sparkle", color: :primary, class: "mr-3") %>
      Real-World Usage
    </h2>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Form Example -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4 flex items-center">
          <%= render Pathogen::Icon.new("clipboard-text", size: :sm, color: :primary, class: "mr-2") %>
          Form with Icon Feedback
        </h3>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Email Address</label>
            <div class="relative">
              <input type="email" class="w-full px-3 py-2 border border-green-300 rounded-lg focus:ring-2 focus:ring-green-500 bg-green-50 dark:bg-green-900/20" value="user@example.com">
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <%= render Pathogen::Icon.new("check-circle", color: :success, size: :sm) %>
              </div>
            </div>
          </div>
          <div>
            <label class="block text-sm font-medium text-slate-700 dark:text-slate-300 mb-2">Password</label>
            <div class="relative">
              <input type="password" class="w-full px-3 py-2 border border-red-300 rounded-lg focus:ring-2 focus:ring-red-500 bg-red-50 dark:bg-red-900/20">
              <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
                <%= render Pathogen::Icon.new("x-circle", color: :danger, size: :sm) %>
              </div>
            </div>
            <p class="text-sm text-red-600 dark:text-red-400 mt-1 flex items-center">
              <%= render Pathogen::Icon.new("warning", color: :danger, size: :sm, class: "mr-2") %>
              Password must be at least 8 characters
            </p>
          </div>
        </div>
      </div>

      <!-- Navigation Example -->
      <div class="bg-white dark:bg-slate-800 rounded-xl p-6 shadow-sm border border-slate-200 dark:border-slate-700">
        <h3 class="font-semibold text-slate-900 dark:text-slate-100 mb-4 flex items-center">
          <%= render Pathogen::Icon.new("list-bullets", size: :sm, color: :primary, class: "mr-2") %>
          Navigation Menu
        </h3>
        <nav class="space-y-2">
          <a href="#" class="flex items-center px-3 py-2 text-sm bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 rounded-lg">
            <%= render Pathogen::Icon.new("home", size: :sm, color: :primary, class: "mr-3") %>
            Dashboard
          </a>
          <a href="#" class="flex items-center px-3 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg">
            <%= render Pathogen::Icon.new("users", size: :sm, color: :subdued, class: "mr-3") %>
            Team Members
          </a>
          <a href="#" class="flex items-center px-3 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg">
            <%= render Pathogen::Icon.new("gear-six", size: :sm, color: :subdued, class: "mr-3") %>
            Settings
          </a>
          <a href="#" class="flex items-center px-3 py-2 text-sm text-slate-600 dark:text-slate-400 hover:bg-slate-50 dark:hover:bg-slate-700 rounded-lg">
            <%= render Pathogen::Icon.new("question", size: :sm, color: :subdued, class: "mr-3") %>
            Help & Support
          </a>
        </nav>
      </div>
    </div>
  </div>
</div>
