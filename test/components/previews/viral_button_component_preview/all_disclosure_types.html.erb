<div class="flex flex-col space-y-6 p-4">
  <h2 class="text-xl font-semibold">Disclosure Icon Types</h2>

  <div>
    <h3 class="text-lg font-medium mb-2">Default State - Disclosure Icons</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= viral_button(disclosure: :down) { "Disclosure Down" } %>
      <%= viral_button(disclosure: :up) { "Disclosure Up" } %>
      <%= viral_button(disclosure: :right) { "Disclosure Right" } %>
      <%= viral_button(disclosure: true) { "Disclosure Default (Down)" } %>
      <%= viral_button { "No Disclosure" } %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-2 mt-4">Default State - Disclosure Icons (Disabled)</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= viral_button(disclosure: :down, disabled: true) { "Disclosure Down" } %>
      <%= viral_button(disclosure: :up, disabled: true) { "Disclosure Up" } %>
      <%= viral_button(disclosure: :right, disabled: true) { "Disclosure Right" } %>
      <%= viral_button(disclosure: true, disabled: true) { "Disclosure Default (Down)" } %>
      <%= viral_button(disabled: true) { "No Disclosure" } %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-2 mt-4">Primary State - Disclosure Icons</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= viral_button(state: :primary, disclosure: :down) { "Disclosure Down" } %>
      <%= viral_button(state: :primary, disclosure: :right, disabled: true) { "Disabled Disclosure Right" } %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-2 mt-4">Destructive State - Disclosure Icons</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= viral_button(state: :destructive, disclosure: :down) { "Disclosure Down" } %>
      <%= viral_button(state: :destructive, disclosure: :right, disabled: true) { "Disabled Disclosure Right" } %>
    </div>
  </div>
</div>
