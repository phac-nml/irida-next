<div class="flex flex-col space-y-4">
  <h2 class="text-lg font-semibold">Button States & Variants</h2>
  <div class="flex space-x-4">
    <%= viral_button { "Default Button" } %>
    <%= viral_button(disabled: true) { "Disabled Button" } %>
  </div>
  <div class="flex space-x-4">
    <%= viral_button(state: :primary) { "Primary Button" } %>
    <%= viral_button(state: :primary, disabled: true) { "Disabled Primary Button" } %>
  </div>
  <div class="flex space-x-4">
    <%= viral_button(state: :destructive) { "Destructive Button" } %>
    <%= viral_button(state: :destructive, disabled: true) { "Disabled Destructive Button" } %>
  </div>

  <h3 class="text-md font-semibold pt-4">Full Width</h3>
  <div class="flex flex-col space-y-2">
    <%= viral_button(full_width: true) { "Default Full Width" } %>
    <%= viral_button(state: :primary, full_width: true) { "Primary Full Width" } %>
    <%= viral_button(state: :destructive, full_width: true, disabled: true) { "Disabled Destructive Full Width" } %>
  </div>

  <h3 class="text-md font-semibold pt-4">With Disclosure Icon</h3>
  <div class="flex space-x-4">
    <%= viral_button(disclosure: true) { "Default with Disclosure" } %>
    <%= viral_button(state: :primary, disclosure: :down) { "Primary with Disclosure Down" } %>
    <%= viral_button(state: :destructive, disclosure: :down) { "Destructive with Disclosure Down" } %>
  </div>
</div>
