<div class="space-y-8">
  <%# Leading Visual Examples %>
  <div>
    <h3 class="text-lg font-medium mb-4">Leading Visual</h3>
    <div class="flex flex-wrap items-center gap-4">
      <% Pathogen::Button::SCHEME_OPTIONS.each do |scheme| %>
        <div class="flex flex-col items-center">
          <p class="text-sm text-gray-500 mb-2"><%= scheme.to_s.humanize %></p>
          <%= render Pathogen::Button.new(scheme:) do |c| %>
            <% c.with_leading_visual_icon(icon: scheme == :danger ? 'trash' : 'plus') %>
            <%= scheme == :danger ? 'Delete' : 'Add Item' %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Trailing Visual Examples %>
  <div>
    <h3 class="text-lg font-medium mb-4">Trailing Visual</h3>
    <div class="flex flex-wrap items-center gap-4">
      <% Pathogen::Button::SCHEME_OPTIONS.each do |scheme| %>
        <div class="flex flex-col items-center">
          <p class="text-sm text-gray-500 mb-2"><%= scheme.to_s.humanize %></p>
          <%= render Pathogen::Button.new(scheme:) do |c| %>
            <%= scheme == :primary ? 'Open Link' : 'More Options' %>
            <% c.with_trailing_visual_icon(icon: scheme == :primary ? 'arrow-right' : 'arrow-down') %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Icon Only Buttons %>
  <div>
    <h3 class="text-lg font-medium mb-4">Icon Only Buttons</h3>
    <div class="flex flex-wrap items-center gap-4">
      <% [
        { scheme: :default, icon: 'gear', label: 'Settings' },
        { scheme: :primary, icon: 'pencil-simple', label: 'Edit' },
        { scheme: :danger, icon: 'trash', label: 'Delete' }
      ].each do |button| %>
        <div class="flex flex-col items-center">
          <p class="text-sm text-gray-500 mb-2"><%= button[:scheme].to_s.humanize %></p>
          <%= render Pathogen::Button.new(
            scheme: button[:scheme],
            title: button[:label],
            'aria-label': button[:label]
          ) do |c| %>
            <% c.with_leading_visual_icon(icon: button[:icon]) %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <%# Combined Visual Elements %>
  <div>
    <h3 class="text-lg font-medium mb-4">Combined Visual Elements</h3>
    <div class="flex flex-wrap items-center gap-4">
      <% Pathogen::Button::SCHEME_OPTIONS.each do |scheme| %>
        <div class="flex flex-col items-center">
          <p class="text-sm text-gray-500 mb-2"><%= scheme.to_s.humanize %></p>
          <%= render Pathogen::Button.new(scheme:) do |c| %>
            <% c.with_leading_visual_icon(icon: "magnifying-glass") %>
            Add Item
            <% c.with_trailing_visual_icon(icon: "arrow-down") %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
