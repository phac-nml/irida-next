<div class="space-y-8">
  <div>
    <h3 class="text-lg font-medium mb-4">Color Schemes</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= p_button(scheme: :default) do %>
        Default
      <% end %>

      <%= p_button(scheme: :primary) do %>
        Primary
      <% end %>
      <%= p_button(scheme: :danger) do %>
        Danger
      <% end %>
      <%= p_button(scheme: :ghost) do %>
        Ghost
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-4">States</h3>
    <div class="flex flex-wrap items-center gap-4">
      <%= p_button(scheme: :default) do %>
        Normal
      <% end %>
      <%= p_button(scheme: :default, disabled: true) do %>
        Disabled
      <% end %>
      <%= p_button(scheme: :default, class: 'opacity-50') do %>
        Loading
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-4">Sizes</h3>
    <div class="flex items-center gap-4">
      <%= p_button(scheme: :primary) do %>
        Small
      <% end %>
      <%= p_button(scheme: :primary) do %>
        Medium
      <% end %>
    </div>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-4">Full Width</h3>
    <%= p_button(scheme: :primary, block: true) do %>
      Full Width Button
    <% end %>
  </div>

  <div>
    <h3 class="text-lg font-medium mb-4">As Link</h3>
    <div class="flex items-center gap-4">
      <%= p_button(
        scheme: :primary, 
        href: '#', 
        tag: :a
      ) do %>
        Link Button
      <% end %>
    </div>
  </div>
</div>
