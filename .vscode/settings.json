    "headful",
    "flowbite",
    "checkin",
    "activerecord",
    "rubocop",
    "fieldset",
    "pagy",
    "puid",
    "puids",
    "linelist",
    "localtime",
    "contenteditable",
    "omniauth",
    "sendfile",
    "entra",
    "hotwire",
    "graphiql",
    "actioncable",
    "phac",
    "lookbook",
    "heroicon",
    "requestjs",
    "importmap",
