{
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[erb]": {
    "editor.defaultFormatter": "elia.erb-formatter"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.semanticHighlighting.enabled": true
  },
  "editor.formatOnSave": true,
  "rubyLsp.featureFlags": {
    "fullTestDiscovery": true
  },
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.rulers": [120],
  "cSpell.language": "en, en-CA",
  "cSpell.words": [
    "actioncable",
    "activemodel",
    "activerecord",
    "attachables",
    "automatable",
    "binmode",
    "Cancelation",
    "caxlsx",
    "checkin",
    "contenteditable",
    "createuser",
    "datetime",
    "describedby",
    "entra",
    "fastq",
    "fieldset",
    "flowbite",
    "focusin",
    "graphiql",
    "gziped",
    "headful",
    "heroicon",
    "hotwire",
    "importmap",
    "INXT",
    "irida",
    "iridanext",
    "keyfile",
    "labelledby",
    "libexec",
    "linelist",
    "localtime",
    "logfile",
    "logidze",
    "lookbook",
    "micha",
    "nextflow",
    "nofork",
    "omniauth",
    "pagy",
    "phac",
    "polynomially",
    "puid",
    "puids",
    "ransackable",
    "referer",
    "requestjs",
    "rubocop",
    "samp",
    "samplesheet",
    "sendfile",
    "tailwindcss"
  ],
  "git.autoRepositoryDetection": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/CVS": true,
    "**/.ruby-lsp": true,
    "**/.devenv/profile/": true,
    "**/.devenv/run/": true,
    "**/.devenv/state/.bundle": true
  }
}
