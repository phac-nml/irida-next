  "[erb]": {
    "editor.defaultFormatter": "elia.erb-formatter",
  },
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
