    "version": "0.2.0",
    "configurations": [
        {
            "type": "rdbg",
            "name": "Debug rails",
            "request": "launch",
            "script": "bin/rails s",
            "useBundler": false,
            "command": "ruby"
        },
        {
            "type": "rdbg",
            "name": "Debug current rails test file",
            "request": "launch",
            "script": "bin/rails test ${file}",
            "useBundler": false,
            "command": "ruby"
        },
        {
            "type": "rdbg",
            "name": "Attach with rdbg",
            "request": "attach"
        }
    ]
}
